<UserControl x:Class="ProjectsNow.Views.QuotationsViews.TermView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls" 
             mc:Ignorable="d" 
             MinHeight="180"
             MaxHeight="410"
             BorderThickness="1"
             BorderBrush="{StaticResource Blue}"
             Width="600">
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Term"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>

            <c:PopupControls/>
        </Grid>

        <Grid Grid.Row="1" 
              Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>

            <TextBox x:Name="textBox" 
                     Width="550" 
                     MaxHeight="190" 
                     FontSize="16"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap"
                     Margin="0,10"
                     Text="{Binding NewData.Condition, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxStyle}">
            </TextBox>
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">

            <Button Command="{Binding SaveCommand}"
                    Style="{StaticResource SaveViewButton}">
            </Button>

            <Button Command="{Binding CancelCommand}"
                    Style="{StaticResource CancelViewButton}">
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
