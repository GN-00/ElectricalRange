<UserControl x:Class="ProjectsNow.Views.QuotationsViews.NoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls" 
             mc:Ignorable="d" 
             MinHeight="180"
             MaxHeight="410"
             BorderThickness="1"
             BorderBrush="{StaticResource Blue}"
             Width="auto">
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Note"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>

            <c:PopupControls/>
        </Grid>

        <Grid Grid.Row="1" 
              Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>

            <TextBox Width="490" 
                     MaxHeight="190" 
                     FontSize="16"
                     FontFamily="Times New Roman"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     TextWrapping="Wrap"
                     Margin="20,10"
                     AcceptsReturn="True"
                     FlowDirection="{Binding DirectionData}"
                     Text="{Binding NewData.BillOfPriceNote, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxStyle}">
            </TextBox>
        </Grid>
        
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">
            <Button Command="{Binding SaveCommand}"
                    Style="{StaticResource SaveViewButton}">
            </Button>
            <Button Command="{Binding CancelCommand}"
                    Style="{StaticResource CancelViewButton}">
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="20,0,0,0">
            <Button Width="30"
                    Height="30"
                    Padding="2"
                    Command="{Binding ArabicCommand}"
                    Style="{StaticResource SubViewTapsButtons}">
                <ImageSource>/Images/Icons/English.png</ImageSource>
            </Button>
            <Button Width="30"
                    Height="30"
                    Padding="2"
                    Command="{Binding EnglishCommand}"
                    Style="{StaticResource SubViewTapsButtons}">
                <ImageSource>/Images/Icons/Arabic.png</ImageSource>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
