<UserControl x:Class="ProjectsNow.Views.QuotationsViews.PanelsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding UpdateCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu" FontFamily="Times New Roman">

            <MenuItem Command="{Binding LibraryCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Library" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Library.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding ImportCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Import Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/ImportData.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding HasDataButtons}" />

            <MenuItem Command="{Binding AddCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/NewRow.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding SpecialPanelCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Special Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/NewRowSpecial.png" />
                </MenuItem.Icon>
            </MenuItem>

        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu" FontFamily="Times New Roman">

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.LibraryCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Library" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Library.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.ImportCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Import Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/ImportData.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.HasDataButtons}" />

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/NewRow.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.SpecialPanelCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Special Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/NewRowSpecial.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.HasToolsButtons}" />

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Info" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Info.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.HasInfoButtons}" />

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.InsertUpCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Insert Up" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/InsertUp.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.InsertDownCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Insert Down" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/InsertDown.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.HasToolsButtons}" />

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.MoveUpCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Move Up" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/MoveUp.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.MoveDownCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Move Down" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/MoveDown.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.HasMovingButtons}" />

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.CopyCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Copy" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Copy.png" />
                </MenuItem.Icon>
            </MenuItem>

            <Separator Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.HasToolsButtons}" />

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red" Text="Delete" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Error.png" />
                </MenuItem.Icon>
            </MenuItem>

        </ContextMenu>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.3"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TextBlock Style="{StaticResource TitleStyle}">
            <Run Text="Quotation:" />
            <Run Foreground="{StaticResource Blue}" Text="{Binding QuotationData.QuotationCode}" />
        </TextBlock>

        <TabControl Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}" TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem Header="Quotation">
                <StackPanel Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,-8"
                            Command="{Binding InfoCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Info">
                        <ImageSource>/Images/Icons/Info.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-8"
                            Command="{Binding TermsCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Terms">
                        <ImageSource>/Images/Icons/TC.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding QuotationItemsCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Items List">
                        <ImageSource>/Images/Icons/ItemsList.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding CostSheetCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Cost Sheet">
                        <ImageSource>/Images/Icons/CostSheet.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding PricesCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Price Info">
                        <ImageSource>/Images/Icons/Price.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-8"
                            Command="{Binding PriceNoteCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Price Note">
                        <ImageSource>/Images/Icons/Note.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding TargetPriceCommand}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Target Price">
                        <ImageSource>/Images/Icons/TargetPrice.png</ImageSource>
                    </Button>

                    <Button Padding="0,8,0,-10"
                            Command="{Binding RecalculateCommand}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Recalculate">
                        <ImageSource>/Images/Icons/Calculator.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding PrintCommand}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Print">
                        <ImageSource>/Images/Icons/Printer.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding OptionsCommand}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Options">
                        <ImageSource>/Images/Icons/Options.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-8"
                            Command="{Binding SubmitCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Submit">
                        <ImageSource>/Images/Icons/Submit.png</ImageSource>
                    </Button>

                </StackPanel>
            </TabItem>

            <TabItem Header="Panel Tools" IsSelected="True">
                <StackPanel Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,-8"
                            Command="{Binding ItemsCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Items">
                        <ImageSource>/Images/Icons/Materials.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-5"
                            Command="{Binding PanelItemsCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Items List">
                        <ImageSource>/Images/Icons/PanelItems.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding PanelCostSheetCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Cost Sheet">
                        <ImageSource>/Images/Icons/CostSheet.png</ImageSource>
                    </Button>

                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasItemsButtons}" />

                    <Button Padding="0,5,0,-10"
                            Command="{Binding LibraryCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Library">
                        <ImageSource>/Images/Icons/Library.png</ImageSource>
                    </Button>

                    <Button Padding="0,8,0,-10"
                            Command="{Binding ImportCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Import">
                        <ImageSource>/Images/Icons/ImportData.png</ImageSource>
                    </Button>

                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasDataButtons}" />

                    <Button Padding="0,5,0,-10"
                            Command="{Binding AddCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="New Panel">
                        <ImageSource>/Images/Icons/NewRow.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-5"
                            Command="{Binding SpecialPanelCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            FontSize="10"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Special   Panel">
                        <ImageSource>/Images/Icons/NewRowSpecial.png</ImageSource>
                    </Button>


                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasToolsButtons}" />

                    <Button Padding="0,5,0,-8"
                            Command="{Binding EditCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Info">
                        <ImageSource>/Images/Icons/Info.png</ImageSource>
                    </Button>

                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasInfoButtons}" />

                    <Button Padding="0,5,0,-10"
                            Command="{Binding InsertUpCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Insert Up">
                        <ImageSource>/Images/Icons/InsertUp.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding InsertDownCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Insert Down">
                        <ImageSource>/Images/Icons/InsertDown.png</ImageSource>
                    </Button>

                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasToolsButtons}" />

                    <Button Padding="0,5,0,-10"
                            Command="{Binding MoveUpCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Move Up">
                        <ImageSource>/Images/Icons/MoveUp.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-10"
                            Command="{Binding MoveDownCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            FontSize="11"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Move Down">
                        <ImageSource>/Images/Icons/MoveDown.png</ImageSource>
                    </Button>

                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasMovingButtons}" />

                    <Button Padding="0,8,0,-5"
                            Command="{Binding CopyCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Copy">
                        <ImageSource>/Images/Icons/Copy.png</ImageSource>
                    </Button>

                    <GridSplitter Width="2"
                                  Margin="5"
                                  Background="LightGray"
                                  Visibility="{Binding HasToolsButtons}" />

                    <Button Padding="0,5,0,-8"
                            Command="{Binding DeleteCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Delete">
                        <ImageSource>/Images/Icons/DeleteRecord.png</ImageSource>
                    </Button>
                </StackPanel>
            </TabItem>

            <TabItem HorizontalAlignment="Right" Header="Filters">
                <StackPanel Margin="10,0,0,0"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">

                    <TextBox Width="38"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelSN, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="239"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelNameInfo, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="58"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelQty, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="178"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding EnclosureType, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="58"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding EnclosureHeight, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="58"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding EnclosureWidth, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="58"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding EnclosureDepth, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="58"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding EnclosureIP, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="78"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelProfit, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="103"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelCost, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="103"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelPrice, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="103"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelsCost, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="85"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding PanelsPrice, UpdateSourceTrigger=PropertyChanged}" />

                    <Button Command="{Binding DeleteFilterCommand}" Style="{StaticResource FilterButtonStyle}" />
                </StackPanel>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="1"
              Margin="10,10,10,5"
              VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontFamily="Times New Roman"
                       FontSize="20"
                       FontWeight="Light"
                       Foreground="{StaticResource Blue}"
                       Text="Customer:" />

            <TextBlock Grid.Row="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontFamily="Times New Roman"
                       FontSize="20"
                       FontWeight="Light"
                       Foreground="{StaticResource Blue}"
                       Text="Project:" />

            <TextBlock Grid.Column="1"
                       Margin="5,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Times New Roman"
                       FontSize="20"
                       FontWeight="Light"
                       Text="{Binding QuotationData.CustomerName}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Margin="5,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Times New Roman"
                       FontSize="20"
                       FontWeight="Light"
                       Text="{Binding QuotationData.ProjectName}" />
        </Grid>

        <Grid Grid.Row="1" Margin="10,63,10,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
            <Grid Grid.Row="1" Background="LightGray">
                <Grid.Resources>
                    <Style x:Key="LableStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="SnapsToDevicePixels" Value="True" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Times New Roman" />
                        <Setter Property="Foreground" Value="{StaticResource MyBlue}" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.RowSpan="2"
                            Margin="20,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource IndicationStyle}" Text="Panel: " />
                    <TextBlock Foreground="Black"
                               Style="{StaticResource IndicationStyle}"
                               Text="{Binding Indicator}" />
                </StackPanel>

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <TextBlock Width="100"
                               Style="{StaticResource LableStyle}"
                               Text="Total Price:"
                               TextAlignment="Right" />
                    <TextBlock Margin="5,0"
                               Foreground="Black"
                               Style="{StaticResource LableStyle}"
                               Text="{Binding QuotationData.QuotationPrice, StringFormat=N2}" />
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Horizontal">
                    <TextBlock Width="100"
                               Style="{StaticResource LableStyle}"
                               Text="Discount:"
                               TextAlignment="Right" />
                    <TextBlock Margin="5,0"
                               Foreground="Black"
                               Style="{StaticResource LableStyle}"
                               Text="{Binding QuotationData.Discount}" />
                    <TextBlock Style="{StaticResource LableStyle}"
                               Text=" %"
                               TextAlignment="Left" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="VAT"
                               Width="150"
                               Style="{StaticResource LableStyle}"
                               Text="Discount Value:"
                               TextAlignment="Right" />
                    <TextBlock Margin="5,0"
                               Foreground="Black"
                               Style="{StaticResource LableStyle}"
                               Text="{Binding QuotationData.QuotationDiscountValue, StringFormat=N2}" />
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="2"
                            Orientation="Horizontal">
                    <TextBlock Width="150"
                               Style="{StaticResource LableStyle}"
                               Text="Final Price:"
                               TextAlignment="Right" />
                    <TextBlock Margin="5,0"
                               Foreground="Black"
                               Style="{StaticResource LableStyle}"
                               Text="{Binding QuotationData.QuotationEstimatedPrice, StringFormat=N2}" />
                </StackPanel>
            </Grid>

            <DataGrid ContextMenu="{StaticResource GridContextMenu}"
                      ItemsSource="{Binding ItemsCollection}"
                      SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                      Style="{StaticResource ViewDataGridStyle}">
                <DataGrid.InputBindings>
                    <MouseBinding Command="{Binding ItemsCommand}"
                                  CommandParameter="{Binding SelectedItem}"
                                  Gesture="LeftDoubleClick" />
                </DataGrid.InputBindings>
                <DataGrid.Resources>
                    <Style BasedOn="{StaticResource ViewRowsStyle}" TargetType="{x:Type DataGridRow}">
                        <Setter Property="ContextMenu" Value="{StaticResource RowsContextMenu}" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>

                    <DataGridTextColumn Width="40"
                                        Binding="{Binding PanelSN}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="SN" />

                    <DataGridTextColumn Width="241"
                                        Binding="{Binding PanelNameInfo}"
                                        ElementStyle="{StaticResource LeftColumnView}"
                                        Header="Name" />

                    <DataGridTextColumn Width="60"
                                        Binding="{Binding PanelQty}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="Qty" />

                    <DataGridTextColumn Width="180"
                                        Binding="{Binding EnclosureType}"
                                        ElementStyle="{StaticResource LeftColumnView}"
                                        Header="Enclosure" />

                    <DataGridTextColumn Width="60"
                                        Binding="{Binding EnclosureHeight, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="H" />

                    <DataGridTextColumn Width="60"
                                        Binding="{Binding EnclosureWidth, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="W" />

                    <DataGridTextColumn Width="60"
                                        Binding="{Binding EnclosureDepth, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="D" />

                    <DataGridTextColumn Width="60"
                                        Binding="{Binding EnclosureIP}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="IP" />

                    <DataGridTextColumn Width="80"
                                        Binding="{Binding PanelProfit, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Foreground="Green"
                                        Header="Profit" />

                    <DataGridTextColumn Width="105"
                                        Binding="{Binding PanelCost, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="Unit Cost" />

                    <DataGridTextColumn Width="105"
                                        Binding="{Binding PanelPrice, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="Unit Price" />

                    <DataGridTextColumn Width="105"
                                        Binding="{Binding PanelsCost, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="Total Cost" />

                    <DataGridTextColumn Width="105"
                                        Binding="{Binding PanelsPrice, StringFormat=N2}"
                                        ElementStyle="{StaticResource CenterColumnView}"
