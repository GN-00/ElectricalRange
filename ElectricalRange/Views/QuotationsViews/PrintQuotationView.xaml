<UserControl x:Class="ProjectsNow.Views.QuotationsViews.PrintQuotationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Style="{StaticResource ViewStyle}">
    <UserControl.Resources>

        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CheckBoxLabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DocumentViewer Name="documentViewer" 
                        Grid.Row="1"
                        Grid.Column="1"
                        Document="{Binding DocumentData}"
                        ShowPageBorders="False" 
                        VerticalPageSpacing="50" 
                        Zoom="{Binding Zoom}"
                        HorizontalPageSpacing="50">
            <DocumentViewer.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </DocumentViewer.Effect>
            <DocumentViewer.Resources>
                <Style TargetType="ToolBar">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>

                <Style TargetType="ScrollViewer">
                    <Style.Triggers>
                        <Trigger Property="Name" Value="PART_ContentHost">
                            <Setter Property="DocumentPageView.Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <Trigger Property="Name" Value="PART_FindToolBarHost">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DocumentViewer.Resources>
        </DocumentViewer>

        <Grid Grid.Row="1" 
              Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>

            <TextBlock Margin="0,10"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center">
                <Run Text="Total Page:"/>
                <Run Text="{Binding TotalPages}" Foreground="{StaticResource Blue}"/>
            </TextBlock>

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Designation:"
                           FontSize="24"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="0,0,0,0"
                        Width="220"
                        Height="150"
                        CornerRadius="5"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource LinearGradientGray}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <CheckBox IsChecked="{Binding IsCover}" 
                                  Grid.Row="0"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding IsTerms}" 
                                  Grid.Row="1"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding IsBill}" 
                                  Grid.Row="2"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding IsDetails}" 
                                  Grid.Row="3"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>


                        <TextBlock Text="Covar" 
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Terms &amp; Conditions." 
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Bill of Price." 
                                   Grid.Row="2"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Technical Details." 
                                   Grid.Row="3"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>
                    </Grid>
                </Border>

                <TextBlock Text="Options:"
                           FontSize="24"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="0,0,0,0"
                        Width="220"
                        Height="75"
                        CornerRadius="5"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource LinearGradientGray}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <CheckBox IsChecked="{Binding IsVAT}" 
                                  Grid.Row="0"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding IsBackground}" 
                                  Grid.Row="1"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>


                        <TextBlock Text="Show VAT" 
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Background" 
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                    </Grid>
                </Border>
                
                <StackPanel Orientation="Horizontal"
                            Margin="0,8"
                            HorizontalAlignment="Center">
                    <Button Tag="Reload" 
                            Padding="0,5,0,0"
                            Margin="2.5,5"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Command="{Binding ReloadCommand}">
                        <ImageSource>/Images/Icons/Reload.png</ImageSource>
                    </Button>
                    <Button Tag="Print" 
                            Padding="0,5,0,0"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Command="{Binding ReportCommand}">
                        <ImageSource>/Images/Icons/Printer.png</ImageSource>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.ColumnSpan="2" 
              Panel.ZIndex="100"
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Print"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
