<UserControl x:Class="ProjectsNow.Views.QuotationsViews.SpecialPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             mc:Ignorable="d" 
             MinHeight="220"
             MaxHeight="600"
             BorderThickness="1"
             BorderBrush="{StaticResource Blue}"
             Width="600">
    <UserControl.Resources>
        
        <Style x:Key="InputStyle" BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
        
    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Special Panel"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>

            <c:PopupControls/>
        </Grid>

        <Grid Grid.Row="1" 
              Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="45"/>
                <RowDefinition MinHeight="45"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Name"  
                           Style="{StaticResource LabelStyle}">
                </TextBlock>
                <TextBox Text="{Binding NewData.PanelName, Mode=TwoWay}" 
                         Width="475" 
                         IsEnabled="{Binding IsEditable}"
                         TextWrapping="Wrap"
                         TextAlignment="Left"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource InputStyle}">
                </TextBox>
            </StackPanel>

            <StackPanel Margin="0,0,0,10"
                        Grid.Row="1"
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">

                <TextBlock Text="Qty" 
                           Margin="15,0,5,0"
                           Style="{StaticResource LabelStyle}">
                </TextBlock>
                <TextBox Text="{Binding NewData.PanelQty, Mode=TwoWay}" 
                         IsEnabled="{Binding IsEditable}"
                         Width="100" 
                         TextAlignment="Center"
                         PreviewKeyDown="TextBox_PreviewKeyDown"
                         Style="{StaticResource InputStyle}">
                </TextBox>

                <TextBlock Text="Price" 
                           Margin="30,0,5,0"
                           Style="{StaticResource LabelStyle}">
                </TextBlock>
                <TextBox Text="{Binding NewData.PanelCost, Mode=TwoWay}" 
                         IsEnabled="{Binding IsEditable}"
                         Width="120" 
                         TextAlignment="Center"
                         PreviewKeyDown="TextBox_PreviewKeyDown"
                         Style="{StaticResource InputStyle}" 
                         IsReadOnly="False">
                </TextBox>

                <TextBlock Text="Total" 
                           Margin="30,0,5,0"
                           Style="{StaticResource LabelStyle}">
                </TextBlock>
                <TextBox Text="{Binding NewData.PanelsPrice, Mode=OneWay}" 
                         IsEnabled="False"
                         IsReadOnly="True"
                         Width="120" 
                         TextAlignment="Center"
                         Style="{StaticResource InputStyle}">
                </TextBox>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">

            <Button Command="{Binding SaveCommand}"
                    Style="{StaticResource SaveViewButton}">
            </Button>

            <Button Command="{Binding CancelCommand}"
                    Style="{StaticResource CancelViewButton}">
            </Button>
        </StackPanel>

    </Grid>

</UserControl>
