<UserControl x:Class="ProjectsNow.Views.QuotationsViews.PanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Style="{StaticResource ViewStyle}">
    <UserControl.Resources>

        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="15,15,0,15"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <Style x:Key="InputStyle" BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputComboBoxStyle" BasedOn="{StaticResource ComboBoxStyle}" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Panel Information"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>

            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
        </Grid>

        <TabControl Height="548" 
                    Width="160"
                    Grid.Row="1"
                    Margin="20,20,0,0"
                    TabStripPlacement="Left"
                    Background="White"
                    HorizontalAlignment="Left"
                    Panel.ZIndex="1000"
                    Style="{StaticResource TabControlStyle}" >

            <TabControl.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </TabControl.Effect>

            <TabItem Height="20" Visibility="Hidden"/>

            <TabItem Header="General"
                     Height="50"
                     IsSelected="{Binding IsGeneral, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>
            <TabItem Header="Enclosure"
                     Height="50"
                     IsSelected="{Binding IsEnclosure, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>
            <TabItem Header="Power &amp; Busbar"
                     Height="50"
                     IsSelected="{Binding IsPower, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>
            <TabItem Header="Auxiliary"
                     Height="50"
                     IsSelected="{Binding IsAuxiliary, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>
            
            <TabItem Header="Instruments"
                     Height="50"
                     IsSelected="{Binding IsInstruments, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>

            <TabItem Header="Apparatus"
                     Height="50"
                     IsSelected="{Binding IsApparatus, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>

            <TabItem Header="Connections"
                     Height="50"
                     IsSelected="{Binding IsConnections, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>

            <TabItem Header="Circuit Marking"
                     Height="50"
                     IsSelected="{Binding IsCircuitMarking, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>

            <TabItem Header="Climatic Conditions"
                     Height="50"
                     IsSelected="{Binding IsClimaticConditions, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>

            <TabItem Header="Particular Note"
                     Height="50"
                     IsSelected="{Binding IsParticularNote, Mode=TwoWay}"
                     Style="{StaticResource LeftTabItemStyle}">
            </TabItem>

        </TabControl>

        <Grid Grid.Row="1"
              Margin="150,10,0,0">
            <Border Margin="20,0" 
                    Grid.Row="1"
                    Background="White"  
                    CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Border.Effect>
                <Grid Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Title}" Style="{StaticResource SubTitleStyle}"/>

                    <TabControl Grid.Row="1"
                                Margin="10"
                                BorderBrush="Transparent"
                                Background="Transparent">

                        <TabControl.ItemContainerStyle>
                            <Style TargetType="TabItem">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </TabControl.ItemContainerStyle>

                        <TabItem IsSelected="{Binding IsGeneral, Mode=OneWay}">
                            <ScrollViewer Height="380" VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <StackPanel Orientation="Vertical">

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                            <Label Content="Name " Width="100" Style="{StaticResource LabelStyle}" VerticalAlignment="Top"/>
                                            <TextBox Text="{Binding NewData.PanelName}" 
                                                     CharacterCasing="Upper" 
                                                     MinWidth="270" 
                                                     MaxWidth="600" 
                                                     TextWrapping="Wrap"
                                                     IsEnabled="{Binding IsEditable}"
                                                     AcceptsReturn="True"
                                                     Style="{StaticResource InputStyle}">
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                            <Label Content="Type " Style="{StaticResource LabelStyle}" Width="100"/>
                                            <ComboBox x:Name="PanelType"
                                                        Width="270"
                                                        Text="{Binding NewData.PanelType}"
                                                        SelectedValuePath="Text"
                                                        IsEditable="True"
                                                        IsEnabled="{Binding IsEditable}"
                                                        SelectedValue="{Binding NewData.PanelType}"
                                                        Style="{StaticResource InputComboBoxStyle}">
                                                <ComboBoxItem>Power Panel</ComboBoxItem>
                                                <ComboBoxItem>Control Panel</ComboBoxItem>
                                                <ComboBoxItem>Ready Made Panel</ComboBoxItem>
                                                <ComboBoxItem>ECB</ComboBoxItem>
                                                <ComboBoxItem>ATS</ComboBoxItem>
                                                <ComboBoxItem>MTS</ComboBoxItem>
                                                <ComboBoxItem>MCC</ComboBoxItem>
                                                <ComboBoxItem>PFC</ComboBoxItem>
                                                <ComboBoxItem>Synchronizing Panel</ComboBoxItem>
                                                <ComboBoxItem>Fuse Panel</ComboBoxItem>
                                                <ComboBoxItem>Junction Box</ComboBoxItem>
                                                <ComboBoxItem>Label</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                            <Label Content="Qty " Width="100" Style="{StaticResource LabelStyle}"/>
                                            <TextBox Text="{Binding NewData.PanelQty}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="IntOnly_PreviewKeyDown"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                            <Label Content="Profit " Width="100" Style="{StaticResource LabelStyle}"/>
                                            <TextBox Text="{Binding NewData.PanelProfit, StringFormat=N2}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"/>
                                            <Label Content="% " Width="100" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                                        </StackPanel>

                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem IsSelected="{Binding IsEnclosure, Mode=OneWay}">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                    <Label Content="Type " Width="110" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding Enclosures}"
                                              IsEditable="True"
                                              Width="250"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.EnclosureType}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureType}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                    <Label Content="Height " Width="110" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.EnclosureHeight}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"/>
                                    <Label Content="cm " Width="35" Style="{StaticResource LabelStyle}"/>

                                    <Label Content="Width " Width="80" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.EnclosureWidth}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"/>
                                    <Label Content="cm " Width="35" Style="{StaticResource LabelStyle}"/>

                                    <Label Content="Depth " Width="80" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.EnclosureDepth}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"/>
                                    <Label Content="cm " Width="35" Style="{StaticResource LabelStyle}"/>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                                    <Label Content="Metal Type " Width="110" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding EnclosureMetalTypes}"
                                              IsEditable="True"
                                              Width="180"
                                              Text="{Binding NewData.EnclosureMetalType}"
                                              IsEnabled="{Binding IsEditable}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureMetalType}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                    <Label Content="Color " Width="120" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding EnclosureColors}"
                                              IsEditable="True"
                                              IsEnabled="{Binding IsEditable}"
                                              Width="180"
                                              Text="{Binding NewData.EnclosureColor}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureColor}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                    <Label Content="IP " Width="110" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding EnclosureIPs}"
                                              IsEditable="True"
                                              Width="180"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.EnclosureIP}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureIP}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>

                                    <Label Content="Form " Width="120" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding EnclosureForms}"
                                              IsEditable="True"
                                              IsEnabled="{Binding IsEditable}"
                                              Width="180"
                                              Text="{Binding NewData.EnclosureForm}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureForm}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                    <Label Content="Location" Width="110" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox IsEditable="True"
                                              Width="180"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.EnclosureLocation}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureLocation}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                        <ComboBoxItem>Indoor</ComboBoxItem>
                                        <ComboBoxItem>Outdoor</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Instulation" Width="120" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox IsEditable="True"
                                                Width="180"
                                                IsEnabled="{Binding IsEditable}"
                                                Text="{Binding NewData.EnclosureInstallation}"
                                                SelectedValuePath="Text"
                                                SelectedValue="{Binding NewData.EnclosureInstallation}"
                                                Style="{StaticResource InputComboBoxStyle}" >
                                        <ComboBoxItem>Wall Mounted</ComboBoxItem>
                                        <ComboBoxItem>Floor Standing</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                    <Label Content="Functional " Width="110" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding EnclosureFunctionals}"
                                              IsEditable="True"
                                              Width="180"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.EnclosureFunctional}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureFunctional}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                    <Label Content="Front Door " Width="120" Style="{StaticResource LabelStyle}" Visibility="Collapsed"/>
                                    <ComboBox ItemsSource="{Binding EnclosureDoors}"
                                              Visibility="Collapsed"
                                              IsEditable="True"
                                              Width="180"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.EnclosureDoor}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EnclosureDoor}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                </StackPanel>

                            </StackPanel>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsPower, Mode=OneWay}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Power Supply"
                                           FontSize="32"
                                           FontWeight="Light"
                                           FontFamily="Times New Roman"
                                           Foreground="{StaticResource Blue}"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Left"
                                           Margin="20,20,0,0">
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Source" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding Sources}"
                                              IsEditable="True"
                                              Width="200"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.Source}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.Source}"
                                              Style="{StaticResource InputComboBoxStyle}" >
                                    </ComboBox>
                                    <Label Content="Icu" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.EnclosureHeight}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"/>
                                    <Label Content="kA" Width="40" Style="{StaticResource LabelStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Frequency" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox IsEditable="True" 
                                              Width="200" 
                                              Text="{Binding NewData.Frequency}"
                                              IsEnabled="{Binding IsEditable}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.Frequency}"
                                              Style="{StaticResource InputComboBoxStyle}">
                                        <ComboBoxItem>50Hz</ComboBoxItem>
                                        <ComboBoxItem>60Hz</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Operation" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.PowerSupplyOperation}" Width="200" Style="{StaticResource InputStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Neuteral" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="EarthingSystem" 
                                              IsEditable="True" 
                                              Width="200" 
                                              Text="{Binding NewData.EarthingSystem}"
                                              IsEnabled="{Binding IsEditable}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EarthingSystem}"
                                              Style="{StaticResource InputComboBoxStyle}">
                                        <ComboBoxItem>-</ComboBoxItem>
                                        <ComboBoxItem>TNS</ComboBoxItem>
                                        <ComboBoxItem>TNC</ComboBoxItem>
                                        <ComboBoxItem>TT</ComboBoxItem>
                                        <ComboBoxItem>IT</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Direct Current" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.DirectCurrent}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}"/>
                                </StackPanel>

                                <TextBlock Text="Busbar "
                                           FontSize="32"
                                           FontWeight="Light"
                                           FontFamily="Times New Roman"
                                           Foreground="{StaticResource Blue}"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Left"
                                           Margin="20,20,0,0">
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Busbar Material" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox IsEditable="True" 
                                              Width="200"
                                              IsEnabled="{Binding IsEditable}"
                                              Text="{Binding NewData.Busbar}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.Busbar}"
                                              Style="{StaticResource InputComboBoxStyle}">
                                        <ComboBoxItem>Bare Copper</ComboBoxItem>
                                        <ComboBoxItem>Tin Plated</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Horizontal" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.BusbarHorizontal}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}"/>
                                    <Label Content="Vertical" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.BusbarVertical}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Neutral Size" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox IsEditable="True" 
                                              Width="200"
                                              Text="{Binding NewData.NeutralSize}"
                                              IsEnabled="{Binding IsEditable}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.NeutralSize}"
                                              Style="{StaticResource InputComboBoxStyle}">
                                        <ComboBoxItem>Full of Phase</ComboBoxItem>
                                        <ComboBoxItem>Half of Phase</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Earth Size" Width="140" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="EarthSize" 
                                              IsEditable="True" 
                                              Width="200" 
                                              Text="{Binding NewData.EarthSize}"
                                              IsEnabled="{Binding IsEditable}"
                                              SelectedValuePath="Text"
                                              SelectedValue="{Binding NewData.EarthSize}"
                                              Style="{StaticResource InputComboBoxStyle}">
                                        <ComboBoxItem>Full of Phase</ComboBoxItem>
                                        <ComboBoxItem>Half of Phase</ComboBoxItem>
                                        <ComboBoxItem>Half of Neutral</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                            </StackPanel>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsAuxiliary, Mode=OneWay}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Supply Of Auxiliary "
                                           FontSize="28"
                                           FontWeight="Light"
                                           FontFamily="Times New Roman"
                                           Foreground="{StaticResource Blue}"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Left"
                                           Margin="20,20,0,0">
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Signalling: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.SignallingVoltage}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                    <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.SignallingSource}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Control: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.ControlVoltage}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                    <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.ControlSource}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Sensors: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.SensorsVoltage}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                    <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.SensorsSource}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Lighting: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.LightingVoltage}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                    <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.LightingSource}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <TextBlock Text="Auxiliary Wiring"
                                           FontSize="28"
                                           FontWeight="Light"
                                           FontFamily="Times New Roman"
                                           Foreground="{StaticResource Blue}"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Left"
                                           Margin="20,20,0,0">
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Voltage: Section" Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.AuxiliaryVoltageSection}" IsEnabled="{Binding IsEditable}" Width="90" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown" />
                                    <Label Content="mm²" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                                    <Label Content="Color" Width="70" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.AuxiliaryVoltageColor}" IsEnabled="{Binding IsEditable}" Width="90" Style="{StaticResource InputStyle}" />
                                    <Label Content="Type" Width="100" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.AuxiliaryVoltageType}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Voltage: Section" Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.AuxiliaryCurrentSection}" IsEnabled="{Binding IsEditable}" Width="90" Style="{StaticResource InputStyle}"  TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"/>
                                    <Label Content="mm²" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                                    <Label Content="Color" Width="70" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.AuxiliaryCurrentColor}" IsEnabled="{Binding IsEditable}" Width="90" Style="{StaticResource InputStyle}" />
                                    <Label Content="Type" Width="100" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.AuxiliaryCurrentType}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                            </StackPanel>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsInstruments, Mode=OneWay}">
                            <StackPanel Orientation="Vertical">

                                <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                                    <Label Content="Type " Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.IndicationType}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Size " Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.IndicationSize}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                    <Label Content="mm²" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Other " Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.IndicationOther}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Meter Relay " Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.MeterRelay}" IsEnabled="{Binding IsEditable}" Width="200" Style="{StaticResource InputStyle}" />
                                </StackPanel>

                                <TextBlock Text=" "
                                           FontSize="28"
                                           FontWeight="Light"
                                           FontFamily="Times New Roman"
                                           Foreground="{StaticResource Blue}"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Left"
                                           Margin="20,20,0,0">
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                                    <Label Content="Push Button: ON " Width="150" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.PushButtonON}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown" />
                                    <Label Content="OFF " Width="70" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.PushButtonOFF}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" />
                                    <Label Content="Reset " Width="70" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NewData.PushButtonReset}" IsEnabled="{Binding IsEditable}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
