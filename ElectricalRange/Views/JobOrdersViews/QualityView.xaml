<UserControl x:Class="ProjectsNow.Views.JobOrdersViews.QualityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding PrintAllCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Print All" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/PrintAll.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu"
                     FontFamily="Times New Roman">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.PrintCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Print" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Printer.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.PrintAllCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Print All" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/PrintAll.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>

    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.3"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TextBlock Style="{StaticResource TitleStyle}"
                   Text="Quality" />

        <TabControl Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}" TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem Header="Tools"
                     IsSelected="True">
                <StackPanel Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,-8"
                            Command="{Binding PrintCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Print">
                        <ImageSource>/Images/Icons/printer.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-8"
                            Command="{Binding PrintAllCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Print All">
                        <ImageSource>/Images/Icons/PrintAll.png</ImageSource>
                    </Button>

                </StackPanel>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="1"
              Margin="10"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <Grid Grid.Row="1"
                      Background="LightGray">
                    <StackPanel Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="Panel: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding Indicator}" />
                    </StackPanel>
                </Grid>

                <DataGrid ContextMenu="{StaticResource GridContextMenu}"
                          ItemsSource="{Binding ItemsCollection}"
                          SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          Style="{StaticResource ViewDataGridStyle}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource ViewRowsStyle}" TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu" Value="{StaticResource RowsContextMenu}" />
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>

                        <DataGridTextColumn Width="50"
                                            Binding="{Binding SN}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="SN" />

                        <DataGridTextColumn Width="250"
                                            Binding="{Binding NameInfo}"
                                            ElementStyle="{StaticResource LeftColumnView}"
                                            Header="Name" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="1"
                  Margin="10,10,20,10">
                <Grid.Resources>

                    <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Times New Roman" />
                        <Setter Property="Foreground" Value="{StaticResource Blue}" />
                        <Setter Property="Margin" Value="10,0,0,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>

                    <Style x:Key="NotesStyle" TargetType="{x:Type TextBox}">
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Times New Roman" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>

                    <Style x:Key="InputStyle" BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}">
                        <Setter Property="Width" Value="170" />
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Times New Roman" />
                        <Setter Property="TextAlignment" Value="Left" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>

                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="230" />
                    <RowDefinition Height="20" />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="Black"
                           Style="{StaticResource LabelStyle}"
                           Text="Details" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Voltage System" />
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          IsEditable="True"
                          IsEnabled="{Binding IsEditable}"
                          ItemsSource="{Binding Voltages}"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding SelectedItem.Voltage}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           Style="{StaticResource LabelStyle}"
                           Text="Rated Current" />
                <ComboBox Grid.Row="1"
                          Grid.Column="3"
                          VerticalAlignment="Center"
                          IsEditable="True"
                          IsEnabled="{Binding IsEditable}"
                          ItemsSource="{Binding Currents}"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding SelectedItem.Current}" />


                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Enclosure Type" />
                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          IsEditable="True"
                          IsEnabled="{Binding IsEditable}"
                          ItemsSource="{Binding Enclosures}"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding SelectedItem.Enclosure}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="2"
                           Style="{StaticResource LabelStyle}"
                           Text="Installation" />
                <ComboBox Grid.Row="2"
                          Grid.Column="3"
                          VerticalAlignment="Center"
                          IsEditable="True"
                          IsEnabled="{Binding IsEditable}"
                          ItemsSource="{Binding Installations}"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding SelectedItem.Installation}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="4"
                           Style="{StaticResource LabelStyle}"
                           Text="IP" />
                <ComboBox Grid.Row="2"
                          Grid.Column="5"
                          Width="80"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          IsEditable="True"
                          IsEnabled="{Binding IsEditable}"
                          ItemsSource="{Binding IPs}"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding SelectedItem.IP}" />


                <Grid Grid.Row="4"
                      Grid.ColumnSpan="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="0" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="290" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="4"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="Black"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Test" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1">
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="Black"
                                   Style="{StaticResource LabelStyle}"
                                   Text="OK" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1">
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="Black"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Not OK" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1">
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="Black"
                                   Style="{StaticResource LabelStyle}"
                                   Text="N/A" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1">
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="Black"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Note" />
                    </Border>

                    <Border Grid.Row="5"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1,0,1,1">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Visual Inspection Test" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.VisualOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.VisualNotOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.VisualNA}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBox IsEnabled="{Binding IsEditable}"
                                 Style="{StaticResource NotesStyle}"
                                 Text="{Binding SelectedItem.VisualNote}" />
                    </Border>

                    <Border Grid.Row="6"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1,0,1,1">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Di-Electric Test" />
                    </Border>
                    <Border Grid.Row="6"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.DiElectricOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="6"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.DiElectricNotOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="6"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.DiElectricNA}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="6"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBox IsEnabled="{Binding IsEditable}"
                                 Style="{StaticResource NotesStyle}"
                                 Text="{Binding SelectedItem.DiElectricNote}" />
                    </Border>

                    <Border Grid.Row="7"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1,0,1,1">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Insulation Resistant Test (Megger)" />
                    </Border>
                    <Border Grid.Row="7"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.InsulationOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="7"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.InsulationNotOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="7"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.InsulationNA}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="7"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBox IsEnabled="{Binding IsEditable}"
                                 Style="{StaticResource NotesStyle}"
                                 Text="{Binding SelectedItem.InsulationNote}" />
                    </Border>

                    <Border Grid.Row="8"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1,0,1,1">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Mass Continuity Test" />
                    </Border>
                    <Border Grid.Row="8"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.ContinuityOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="8"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.ContinuityNotOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="8"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.ContinuityNA}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="8"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBox IsEnabled="{Binding IsEditable}"
                                 Style="{StaticResource NotesStyle}"
                                 Text="{Binding SelectedItem.ContinuityNote}" />
                    </Border>

                    <Border Grid.Row="9"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1,0,1,1">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Operation Test" />
                    </Border>
                    <Border Grid.Row="9"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.OperationOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="9"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.OperationNotOk}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="9"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <CheckBox Width="40"
                                  Height="25"
                                  Margin="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding SelectedItem.OperationNA}"
                                  IsEnabled="{Binding IsEditable}"
                                  Style="{StaticResource CheckBoxStyle}" />
                    </Border>
                    <Border Grid.Row="9"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBox IsEnabled="{Binding IsEditable}"
                                 Style="{StaticResource NotesStyle}"
                                 Text="{Binding SelectedItem.OperationNote}" />
                    </Border>

                </Grid>

                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Note" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Margin="70,0,0,0"
                         VerticalAlignment="Center"
                         IsEnabled="{Binding IsEditable}"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding SelectedItem.Note}" />
                <TextBlock Grid.Row="7"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Result" />
                <TextBox Grid.Row="7"
                         Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Width="150"
                         Margin="70,0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         IsEnabled="{Binding IsEditable}"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding SelectedItem.Result}" />

            </Grid>
        </Grid>
    </Grid>

</UserControl>
