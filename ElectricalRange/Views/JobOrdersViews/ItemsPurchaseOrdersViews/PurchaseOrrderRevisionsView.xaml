<UserControl x:Class="ProjectsNow.Views.JobOrdersViews.ItemsPurchaseOrdersViews.PurchaseOrrderRevisionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:CN="clr-namespace:ProjectsNow.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="321"
             Height="500"
             BorderBrush="{StaticResource Blue}"
             BorderThickness="1"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="RowContextMenu">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.InfoCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Info" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"
                           Source="/Images/Icons/Info.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000"
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>

            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10,7.5"
                           Style="{StaticResource TitleStyle}"
                           Text="Revisions" />
            </StackPanel>

            <CN:PopupControls />
        </Grid>

        <Grid Grid.Row="1">
            <Grid Margin="10,10,10,10">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1"
                      Background="LightGray">
                    <StackPanel Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="Revision: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding Indicator}" />
                    </StackPanel>
                </Grid>

                <DataGrid ItemsSource="{Binding ItemsCollection}"
                          SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          Style="{StaticResource ViewDataGridStyle}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource ViewRowsStyle}"
                               TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.InputBindings>
                        <MouseBinding Command="{Binding InfoCommand}"
                                      CommandParameter="{Binding SelectedItem}"
                                      Gesture="LeftDoubleClick" />
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="80"
                                            Binding="{Binding Number}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="SN" />

                        <DataGridTextColumn Width="200"
                                            Binding="{Binding Code}"
                                            ElementStyle="{StaticResource LeftColumnView}"
                                            Header="Code" />



                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
