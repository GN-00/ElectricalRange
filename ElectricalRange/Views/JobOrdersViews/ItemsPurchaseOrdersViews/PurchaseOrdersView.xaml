<UserControl x:Class="ProjectsNow.Views.JobOrdersViews.ItemsPurchaseOrdersViews.PurchaseOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetDataCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>

        <ContextMenu x:Key="OrdersContextMenu">
            <MenuItem Command="{Binding AddOrderCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New Order" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="OrderContextMenu"
                     FontFamily="Times New Roman">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddOrderCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New Order" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.InformationCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Information" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Info.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red"
                               Text="Delete" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Error.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.ReviseCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Revise" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/PreviousYears.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.CancelCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red"
                               Text="Cancel Order" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/RedFolder.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.PostItemsCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Post Items" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/PreviousYears.png" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.PrintCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Print" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Printer.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <Style x:Key="LabelStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Foreground" Value="{StaticResource Blue}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputStyle"
               BasedOn="{StaticResource TextBoxStyle}"
               TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="350" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputStyleDatePicker"
               BasedOn="{StaticResource DatePickerStyle}"
               TargetType="{x:Type DatePicker}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputComboBoxStyle"
               BasedOn="{StaticResource ComboBoxStyle}"
               TargetType="{x:Type ComboBox}">
            <Setter Property="Width" Value="300" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </UserControl.Resources>

    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Height="150"
              VerticalAlignment="Center"
              Background="{StaticResource LinearGradientGray}">

            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10,7.5,0,0"
                           Style="{StaticResource TitleStyle}"
                           Text="Purchase Orders" />
            </StackPanel>

            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TabControl Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}"
                       TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem Header="Tool"
                     IsSelected="True">
                <StackPanel Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Border Margin="5"
                            BorderBrush="{StaticResource LinearGradientGray}"
                            BorderThickness="2"
                            CornerRadius="5">
                        <Grid Margin="10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       Text="Job Order" />

                            <TextBlock Grid.Row="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       Foreground="{StaticResource Blue}"
                                       Text="{Binding JobOrderData.Code}" />

                        </Grid>
                    </Border>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding AddOrderCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="New Order">
                        <ImageSource>/Images/Icons/Add.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding InformationCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Info">
                        <ImageSource>/Images/Icons/Info.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding DeleteCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Delete">
                        <ImageSource>/Images/Icons/Error.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding ReviseCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Revise">
                        <ImageSource>/Images/Icons/PreviousYears.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Cancel">
                        <ImageSource>/Images/Icons/RedFolder.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding PostItemsCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Post Items">
                        <ImageSource>/Images/Icons/DownloadBox.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding PurchaseOrderStatusCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Status">
                        <ImageSource>/Images/Icons/MoneyReports.png</ImageSource>
                    </Button>

                    <Button Padding="0,2.5,0,-5"
                            Command="{Binding PrintCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Print">
                        <ImageSource>/Images/Icons/Printer.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,-8"
                            Command="{Binding RevisionsCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Revisions">
                        <ImageSource>/Images/Icons/Old.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding AttachCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Attach">
                        <ImageSource>/Images/Icons/Attach.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding DeleteAttachmentCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            FontSize="10"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Delete Attachment">
                        <ImageSource>/Images/Icons/RemoveAttachment.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding DownloadAttachmentCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            FontSize="10"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Download Attachment">
                        <ImageSource>/Images/Icons/Download1.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding ReadAttachmentCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            FontSize="10"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Read Attachment">
                        <ImageSource>/Images/Icons/Read.png</ImageSource>
                    </Button>

                </StackPanel>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <Grid Grid.Row="1"
                      Background="LightGray">
                    <StackPanel Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="Purchase Order: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding OrdersIndicator}" />
                    </StackPanel>
                </Grid>

                <DataGrid ContextMenu="{StaticResource OrdersContextMenu}"
                          ItemsSource="{Binding OrdersCollection}"
                          SelectedIndex="{Binding SelectedOrderIndex, Mode=OneWayToSource}"
                          SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                          Style="{StaticResource ViewDataGridStyle}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource ViewRowsStyle}"
                               TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu" Value="{StaticResource OrderContextMenu}" />
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>

                        <DataGridTextColumn Width="200"
                                            Binding="{Binding Code}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="Order Code" />

                        <DataGridTextColumn Width="120"
                                            Binding="{Binding Date, StringFormat=dd/MM/yyyy}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="Date" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="1"
                  Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <Grid Grid.Row="1"
                      Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="Item: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding ItemsIndicator}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Text="Net Price: ">
                            <TextBlock.Resources>
                                <Style BasedOn="{StaticResource IndicationStyle}"
                                       TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedOrder.NetPrice}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Resources>
                        </TextBlock>
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding SelectedOrder.NetPrice, StringFormat=N2}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedOrder.VATValue}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="VAT " />
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="{Binding SelectedOrder.VAT}" />
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="%: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding SelectedOrder.VATValue, StringFormat=N2}" />
                    </StackPanel>

                    <StackPanel Grid.Column="3"
                                Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedOrder.GrossPrice}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="Gross Price: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding SelectedOrder.GrossPrice, StringFormat=N2}" />
                    </StackPanel>
                </Grid>

                <DataGrid ItemsSource="{Binding ItemsCollection}"
                          SelectedIndex="{Binding SelectedItemIndex, Mode=OneWayToSource}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          Style="{StaticResource ViewDataGridStyle}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource ViewRowsStyle}"
                               TargetType="{x:Type DataGridRow}" />
                    </DataGrid.Resources>

                    <DataGrid.Columns>

                        <DataGridTextColumn Width="229"
                                            Binding="{Binding Code}"
                                            ElementStyle="{StaticResource LeftColumnView}"
                                            Header="Code" />

                        <DataGridTextColumn Width="312"
                                            Binding="{Binding Description}"
                                            ElementStyle="{StaticResource LeftColumnView}"
                                            Header="Description" />

                        <DataGridTextColumn Width="90"
                                            Binding="{Binding Qty}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="Qty" />

                        <DataGridTextColumn Width="140"
                                            Binding="{Binding Cost, StringFormat=N2}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="Price" />

                        <DataGridTextColumn Width="140"
                                            Binding="{Binding TotalCost, StringFormat=N2}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="Total Price" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
