<UserControl
    x:Class="ProjectsNow.Views.JobOrdersViews.AcknowledgmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource ViewStyle}"
    mc:Ignorable="d">
    <UserControl.Resources>

        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="15,15,0,15" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Foreground" Value="{StaticResource Blue}" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="{StaticResource Blue}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>

        <Style
            x:Key="InputStyle"
            BasedOn="{StaticResource TextBoxStyle}"
            TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="InputComboBoxStyle"
            BasedOn="{StaticResource ComboBoxStyle}"
            TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="-90"
                    Opacity="0.5"
                    RenderingBias="Quality"
                    ShadowDepth="2" />
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="10,7.5"
                    Style="{StaticResource TitleStyle}"
                    Text="Acknowledgment" />
            </StackPanel>
        </Grid>

        <TabControl
            Grid.Row="1"
            Width="190"
            Height="548"
            Margin="20,20,0,0"
            HorizontalAlignment="Left"
            Panel.ZIndex="1000"
            Background="White"
            Style="{StaticResource TabControlStyle}"
            TabStripPlacement="Left">

            <TabControl.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="-90"
                    Opacity="0.5"
                    RenderingBias="Quality"
                    ShadowDepth="2" />
            </TabControl.Effect>

            <TabItem Height="10" Visibility="Hidden" />

            <TabItem
                Height="50"
                Header="Payment Terms"
                IsSelected="{Binding IsPayment, Mode=TwoWay}"
                Style="{StaticResource LeftTabItemStyle2}" />
            <TabItem
                Height="50"
                Header="Shop Drawing"
                IsSelected="{Binding IsShopDrawing, Mode=TwoWay}"
                Style="{StaticResource LeftTabItemStyle2}" />
            <TabItem
                Height="50"
                Header="Delivery &amp; Warranty"
                IsSelected="{Binding IsDeliveryWarranty, Mode=TwoWay}"
                Style="{StaticResource LeftTabItemStyle2}" />
            <TabItem
                Height="50"
                Header="Cancellation Policy"
                IsSelected="{Binding IsCancellation, Mode=TwoWay}"
                Style="{StaticResource LeftTabItemStyle2}" />
        </TabControl>

        <Grid Grid.Row="1" Margin="180,10,0,0">
            <Border
                Grid.Row="1"
                Margin="20,0"
                Background="White"
                CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Direction="-90"
                        Opacity="0.3"
                        RenderingBias="Quality"
                        ShadowDepth="2" />
                </Border.Effect>
                <Grid Margin="10,0,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource SubTitleStyle}" Text="{Binding Title}" />

                    <TabControl
                        Grid.Row="1"
                        Margin="10"
                        Background="Transparent"
                        BorderBrush="Transparent">

                        <TabControl.ItemContainerStyle>
                            <Style TargetType="TabItem">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </TabControl.ItemContainerStyle>

                        <TabItem IsSelected="{Binding IsPayment, Mode=OneWay}">
                            <Border
                                Margin="0"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                CornerRadius="5">
                                <StackPanel Margin="10,10,0,0" Orientation="Vertical">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel
                                            Margin="10,10,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal">
                                            <ToggleButton
                                                Width="38"
                                                Height="20"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                IsChecked="{Binding PaymentToggle1}"
                                                Style="{StaticResource SwitchTypeToggleButton}" />
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="{StaticResource Blue}"
                                                Text="Standard Terms." />
                                        </StackPanel>

                                        <Border
                                            Margin="10"
                                            BorderBrush="Gray"
                                            BorderThickness="2"
                                            CornerRadius="5">
                                            <StackPanel Margin="10" Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Width="205"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text="Down Payment " />
                                                    <TextBox
                                                        Width="60"
                                                        Style="{StaticResource InputStyle}"
                                                        Text="{Binding DownPayment, UpdateSourceTrigger=PropertyChanged}"
                                                        TextAlignment="Center" />
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text=" %" />
                                                    <ToggleButton
                                                        Width="38"
                                                        Height="20"
                                                        Margin="20,0,10,0"
                                                        VerticalAlignment="Center"
                                                        IsChecked="{Binding InAdvanceToggle}"
                                                        Style="{StaticResource SwitchTypeToggleButton}" />
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text="In Advance" />
                                                </StackPanel>

                                                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        Width="205"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text="Before Delivery " />
                                                    <TextBox
                                                        Width="60"
                                                        Style="{StaticResource InputStyle}"
                                                        Text="{Binding BeforeDelivery}"
                                                        TextAlignment="Center" />
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text=" %" />
                                                </StackPanel>

                                                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        Width="205"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text="After Delivery " />
                                                    <TextBox
                                                        Width="60"
                                                        Style="{StaticResource InputStyle}"
                                                        Text="{Binding AfterDelivery}"
                                                        TextAlignment="Center" />
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text=" %" />
                                                </StackPanel>

                                                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        Width="205"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text="Testing &amp; Commissioning " />
                                                    <TextBox
                                                        Width="60"
                                                        Style="{StaticResource InputStyle}"
                                                        Text="{Binding Testing}"
                                                        TextAlignment="Center" />
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="{StaticResource Blue}"
                                                        Text=" %" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                        <StackPanel
                                            Margin="10,10,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal">
                                            <ToggleButton
                                                Width="38"
                                                Height="20"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                IsChecked="{Binding PaymentToggle2}"
                                                Style="{StaticResource SwitchTypeToggleButton}" />
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="{StaticResource Blue}"
                                                Text="Other Terms: " />
                                        </StackPanel>
                                        <TextBox
                                            Width="750"
                                            MinHeight="30"
                                            MaxHeight="180"
                                            Margin="10,10"
                                            VerticalContentAlignment="Top"
                                            AcceptsReturn="True"
                                            Style="{StaticResource InputStyle}"
                                            Text="{Binding PaymentOther}"
                                            TextAlignment="Left"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsEnclosure, Mode=OneWay}" />

                        <TabItem IsSelected="{Binding IsPower, Mode=OneWay}" />

                        <TabItem IsSelected="{Binding IsAuxiliary, Mode=OneWay}" />

                        <TabItem IsSelected="{Binding IsInstruments, Mode=OneWay}" />

                        <TabItem IsSelected="{Binding IsApparatus, Mode=OneWay}" />

                        <TabItem IsSelected="{Binding IsConnections, Mode=OneWay}" />

                        <TabItem IsSelected="{Binding IsCircuitMarking, Mode=OneWay}" />

                    </TabControl>
                </Grid>
            </Border>
        </Grid>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <Button Command="{Binding SaveCommand}" Style="{StaticResource SaveViewButton}" />

            <Button Command="{Binding CancelCommand}" Style="{StaticResource CancelViewButton}" />

        </StackPanel>

    </Grid>
</UserControl>

