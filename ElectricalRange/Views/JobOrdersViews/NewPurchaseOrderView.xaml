<UserControl x:Class="ProjectsNow.Views.JobOrdersViews.NewPurchaseOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls" 
             mc:Ignorable="d" 
             Height="250"
             BorderThickness="1"
             BorderBrush="{StaticResource Blue}"
             Width="450">
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Purchase Order"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>
            <c:PopupControls/>
        </Grid>

        <Grid Grid.Row="1" 
              Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Number"
                       Margin="10,10,5,0"
                       FontSize="16"
                       FontWeight="Bold"
                       FontFamily="Times New Roman"
                       Foreground="{StaticResource Blue}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
            </TextBlock>
            <TextBox Grid.Column ="1"
                     Margin="0,10,0,0"
                     Width="300" 
                     MaxHeight="190" 
                     FontSize="16"
                     FontFamily="Times New Roman"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Text="{Binding NewData.Number, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxStyle}">
            </TextBox>

            <TextBlock Grid.Row="1" Text="Date"
                       Margin="10,0,5,0"
                       FontSize="16"
                       FontWeight="Bold"
                       FontFamily="Times New Roman"
                       Foreground="{StaticResource Blue}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
            </TextBlock>
            <DatePicker SelectedDate="{Binding NewData.Date, StringFormat=dd/MM/yyyy}"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        Width="150"
                        FontSize="16"
                        IsEnabled="{Binding IsEditing}"
                        DisplayDate="{Binding NewData.Date, StringFormat=dd-MM-yyyy}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Style="{StaticResource DatePickerStyle}">
            </DatePicker>

            <TextBlock Grid.Row="2"
                       Text="Attachment"
                       Margin="10,0,5,0"
                       FontSize="16"
                       FontWeight="Bold"
                       FontFamily="Times New Roman"
                       Foreground="{StaticResource Blue}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
            </TextBlock>
            <Grid Grid.Row="2"
                  Grid.Column="1"
                  Margin="5,0,0,0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Command="{Binding AttachCommand}"
                        CommandParameter="{Binding NewData}"
                        ToolTip="Attach"
                        Margin="5"
                        Padding="2"
                        Width="28"
                        Height="28"
                        Style="{StaticResource SubShadowButtons}">
                    <ImageSource>/Images/Icons/Attach.png</ImageSource>
                </Button>

                <Button Grid.Column="1" 
                        Command="{Binding DeleteAttachmentCommand}"
                        CommandParameter="{Binding NewData}"
                        FontSize="10"
                        ToolTip="Delete Attachment"
                        Margin="5"
                        Padding="3"
                        Width="28"
                        Height="28"
                        Style="{StaticResource SubShadowButtons}">
                    <ImageSource>/Images/Icons/RemoveAttachment.png</ImageSource>
                </Button>

                <Button Grid.Column="2"
                        Command="{Binding DownloadAttachmentCommand}"
                        CommandParameter="{Binding NewData}"
                        ToolTip="Download Attachment"
                        FontSize="10"
                        Margin="5"
                        Padding="3"
                        Width="28"
                        Height="28"
                        Style="{StaticResource SubShadowButtons}">
                    <ImageSource>/Images/Icons/Download1.png</ImageSource>
                </Button>

                <Button Grid.Column="3"
                        Command="{Binding ReadAttachmentCommand}"
                        CommandParameter="{Binding NewData}"
                        ToolTip="Read Attachment"
                        FontSize="10"
                        Margin="5"
                        Padding="3"
                        Width="28"
                        Height="28"
                        Style="{StaticResource SubShadowButtons}">
                    <ImageSource>/Images/Icons/Read.png</ImageSource>
                </Button>

            </Grid>

        </Grid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">

            <Button Command="{Binding SaveCommand}"
                    Style="{StaticResource SaveViewButton}">
            </Button>

            <Button Command="{Binding CancelCommand}"
                    Style="{StaticResource CancelViewButton}">
            </Button>
            
        </StackPanel>

    </Grid>
</UserControl>
