<UserControl x:Class="ProjectsNow.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:ProjectsNow.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Height="140"
              VerticalAlignment="Top"
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.3"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />

        <Button Grid.Row="1"
                Width="50"
                Height="50"
                Margin="20"
                Padding="5,5,0,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding LogoutCommand}"
                Style="{StaticResource SubViewTapsButtons}"
                ToolTip="Log Out">
            <ImageSource>/Images/Icons/logout.png</ImageSource>
        </Button>

        <TabControl Height="120"
                    Margin="0,20,0,0"
                    Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}" TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem Header="Home" IsSelected="True">
                <StackPanel Height="95"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,0"
                            Command="{Binding TendaringCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Tendaring"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Tendaring.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding ProjectsCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Projects"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Status2.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding QuotationsStatusCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Status"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/QuotationsStatus.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding StoreCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Store"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Store1.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding FinanceCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Accountant"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Accountant.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding AccountantCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Accountant Trial"
                            ToolTip="Add Items"
                            Visibility="Collapsed">
                        <Image Source="/GN.Base;component/Images/ERI/Accountant.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding PartnersCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Partners"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Partner.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding UsersCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Users"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/GrayUser.png" />
                    </Button>

                </StackPanel>
            </TabItem>

            <TabItem Header="Settings">
                <StackPanel Height="95"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,0"
                            Command="{Binding AppUpdateCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Update"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Reload.png" />
                    </Button>

                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
