<UserControl x:Class="ProjectsNow.Views.Dashboard.DashboardControls.StoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Width="1298">
    <WrapPanel x:Name="ResourcesArea"
               Width="Auto"
               MaxWidth="{Binding MaxWidth}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">

        <Button ToolTip="References" 
                Command="{Binding ReferencesCommand}"
                Style="{StaticResource DashboardControlsButtons}">
            <ImageSource>/Images/Icons/Reference.png</ImageSource>
        </Button>

        <Button ToolTip="Stock" 
                Command="{Binding StockCommand}"
                Style="{StaticResource DashboardControlsButtons}">
            <ImageSource>/Images/Icons/Stock.png</ImageSource>
        </Button>

        <Button ToolTip="Sales Invoices" 
                Command="{Binding SalesInvoicesCommand}"
                Style="{StaticResource DashboardControlsButtons}">
            <ImageSource>/Images/Icons/Invoicing.png</ImageSource>
        </Button>

    </WrapPanel>
</UserControl>
