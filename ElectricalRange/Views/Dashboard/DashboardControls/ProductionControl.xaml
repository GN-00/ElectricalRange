<UserControl x:Class="ProjectsNow.Views.Dashboard.DashboardControls.ProductionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="1298"
             mc:Ignorable="d">
    <WrapPanel x:Name="ResourcesArea"
               Width="Auto"
               MaxWidth="{Binding MaxWidth}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">

        <Button Command="{Binding NewCommand}"
                Style="{StaticResource DashboardControlsButtons}"
                ToolTip="New Orders">
            <ImageSource>/Images/Icons/DownloadBox.png</ImageSource>
        </Button>

        <Button Command="{Binding JobOrdersCommand}"
                Style="{StaticResource DashboardControlsButtons}"
                ToolTip="Orders">
            <ImageSource>/Images/Icons/Order.png</ImageSource>
        </Button>

    </WrapPanel>
</UserControl>
