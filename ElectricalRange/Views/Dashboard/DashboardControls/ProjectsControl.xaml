<UserControl x:Class="ProjectsNow.Views.Dashboard.DashboardControls.ProjectsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Width="1298">
    <WrapPanel x:Name="ResourcesArea"
               Width="Auto"
               MaxWidth="{Binding MaxWidth}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">

        <Button ToolTip="New Job Orders" 
                Command="{Binding NewCommand}"
                Style="{StaticResource DashboardControlsButtons}">
            <ImageSource>/Images/Icons/Partnership.png</ImageSource>
        </Button>

        <Button ToolTip="Job Orders" 
                Command="{Binding JobOrdersCommand}"
                Style="{StaticResource DashboardControlsButtons}">
            <ImageSource>/Images/Icons/Order.png</ImageSource>
        </Button>

    </WrapPanel>
</UserControl>
