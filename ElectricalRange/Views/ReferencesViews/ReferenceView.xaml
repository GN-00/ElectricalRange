<UserControl x:Class="ProjectsNow.Views.ReferencesViews.ReferenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls" 
             mc:Ignorable="d" 
             FontSize="16"
             FontWeight="Bold"
             FontFamily="Times New Roman"
             BorderThickness="1"
             BorderBrush="{StaticResource Blue}"
             Height="560" Width="700">
    <UserControl.Resources>

        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyle" 
               BasedOn="{StaticResource TextBoxStyle}"
               TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="350"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyleDatePicker" 
               BasedOn="{StaticResource DatePickerStyle}"
               TargetType="{x:Type DatePicker}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputComboBoxStyle"
               BasedOn="{StaticResource ComboBoxStyle}" 
               TargetType="{x:Type ComboBox}">
            <Setter Property="Width" Value="350"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        
        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Reference Information"
                           FontSize="22"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>
            
            <c:PopupControls/>
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">
            <Button Command="{Binding SaveCommand}"
                    Style="{StaticResource SaveViewButton}">
            </Button>
            <Button Command="{Binding CancelCommand}"
                    Style="{StaticResource CancelViewButton}">
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <ScrollViewer.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </ScrollViewer.Effect>
            <Grid Grid.Row="1"
                  Background="White">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                        <RowDefinition MinHeight="50"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Code" 
                               Grid.Row="0"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <TextBox Text="{Binding NewData.Code}"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="300"
                             Style="{StaticResource InputStyle}">
                    </TextBox>

                    <TextBlock Text="Description" 
                               Grid.Row="1"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <TextBox Text="{Binding NewData.Description}"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="450"
                             Margin="0,8"
                             TextWrapping="Wrap"
                             Style="{StaticResource InputStyle}">
                    </TextBox>

                    <TextBlock Text="Article" 
                               Grid.Row="2"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>

                    <StackPanel Grid.Row="2"
                                Grid.Column="1" 
                                Margin="0,0,0,0" 
                                Orientation="Horizontal">
                        <ComboBox Width="220" 
                                  Margin="0,0,10,0"
                                  IsEditable="True"
                                  ItemsSource="{Binding ArticlesData1}"
                                  Text="{Binding NewData.Article1}"
                                  SelectedValuePath="Text"
                                  SelectedValue="{Binding NewData.Article1}"
                                  Style="{StaticResource InputComboBoxStyle}">
                        </ComboBox>
                        <ComboBox Width="220" 
                                  IsEditable="True"
                                  ItemsSource="{Binding ArticlesData2}"
                                  Text="{Binding NewData.Article2}"
                                  SelectedValuePath="Text"
                                  SelectedValue="{Binding NewData.Article2}"
                                  Style="{StaticResource InputComboBoxStyle}">
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Text="Category" 
                               Grid.Row="3"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <ComboBox Grid.Row="3"
                              Grid.Column="1"
                              Width="200"
                              IsEditable="True"
                              ItemsSource="{Binding CategoriesData}"
                              Text="{Binding NewData.Category}"
                              SelectedValuePath="Text"
                              SelectedValue="{Binding NewData.Category}"
                              Style="{StaticResource InputComboBoxStyle}">
                    </ComboBox>

                    <TextBlock Text="Brand" 
                                   Grid.Row="4"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <ComboBox Grid.Row="4"
                              Grid.Column="1"
                              Width="500"
                              IsEditable="True"
                              ItemsSource="{Binding BrandsData}"
                              Text="{Binding NewData.Brand}"
                              SelectedValuePath="Text"
                              SelectedValue="{Binding NewData.Brand}"
                              Style="{StaticResource InputComboBoxStyle}">
                    </ComboBox>

                    <TextBlock Text="Unit" 
                               Grid.Row="5"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <ComboBox SelectedValue="{Binding NewData.Unit}"
                              SelectedValuePath="Text"
                              Text="{Binding NewData.Unit}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              Width="150"
                              Grid.Row="5"
                              Grid.Column="1"
                              PreviewKeyDown="Unit_PreviewKeyDown"
                              Style="{StaticResource InputComboBoxStyle}">
                        <ComboBoxItem>No</ComboBoxItem>
                        <ComboBoxItem>MTR</ComboBoxItem>
                        <ComboBoxItem>Kg</ComboBoxItem>
                        <ComboBoxItem>Bar</ComboBoxItem>
                        <ComboBoxItem>Roll</ComboBoxItem>
                        <ComboBoxItem>Set</ComboBoxItem>
                        <ComboBoxItem>Lot</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Text="Cost" 
                               Grid.Row="6"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <TextBox Text="{Binding NewData.Cost}" 
                             Grid.Row="6"
                             Grid.Column="1"
                             Width="150"
                             TextAlignment="Center"
                             Style="{StaticResource InputStyle}"
                             PreviewKeyDown="Cost_PreviewKeyDown">
                    </TextBox>

                    <TextBlock Text="Discount" 
                               Grid.Row="7"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <TextBox Text="{Binding NewData.Discount}" 
                             Grid.Row="7"
                             Grid.Column="1"
                             Width="150"
                             TextAlignment="Center"
                             Style="{StaticResource InputStyle}">
                    </TextBox>

                    <TextBlock Text="Note" 
                               Grid.Row="8"
                               Grid.Column="0"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>
                    <TextBox Text="{Binding NewData.Remarks}"
                             Grid.Row="8"
                             Grid.Column="1"
                             Width="450"
                             Style="{StaticResource InputStyle}">
                    </TextBox>

                    <TextBlock Text="Search Keys" 
                               Grid.Row="9"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>

                    <TextBox Width="450" 
                             Grid.Row="9"
                             Grid.Column="1"
                             Text="{Binding NewData.SearchKeys}" 
                             Style="{StaticResource InputStyle}">
                    </TextBox>

                    <TextBlock Grid.Row="9"
                               Grid.Column="1" 
                               Margin="0,0,0,-15"
                               Text="Like 'Schneider, MCB, C60, iC60.......etc." 
                               Foreground="Black" 
                               VerticalAlignment="Bottom"
                               Style="{StaticResource LabelStyle}">
                    </TextBlock>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

