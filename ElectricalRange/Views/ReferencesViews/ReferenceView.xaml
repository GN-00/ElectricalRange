<UserControl x:Class="ProjectsNow.Views.ReferencesViews.ReferenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="{StaticResource LinearGray}"
             BorderBrush="{StaticResource Blue}"
             BorderThickness="1"
             FontFamily="Times New Roman"
             FontSize="16"
             FontWeight="Bold"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Foreground" Value="{StaticResource Blue}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputStyle"
               BasedOn="{StaticResource TextBoxStyle}"
               TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="350" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputStyleDatePicker"
               BasedOn="{StaticResource DatePickerStyle}"
               TargetType="{x:Type DatePicker}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputComboBoxStyle"
               BasedOn="{StaticResource ComboBoxStyle}"
               TargetType="{x:Type ComboBox}">
            <Setter Property="Width" Value="350" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </UserControl.Resources>
    <Border Width="700"
            Height="560"
            BorderThickness="2"
            Effect="{StaticResource Shadow}">
        <Grid Background="{StaticResource LinearGradientGray}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>

            <Grid Panel.ZIndex="1000" Background="{StaticResource LinearGradientGray}">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="10,7.5"
                               FontSize="22"
                               Style="{StaticResource TitleStyle}"
                               Text="Reference Information" />
                </StackPanel>
            </Grid>

            <Button Grid.Row="2"
                    Grid.Column="1"
                    Width="130"
                    Height="30"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding SupplierCodesCommand}"
                    Style="{StaticResource TextWhiteButtons}"
                    Tag="Supplier Codes" />

            <StackPanel Grid.Row="2"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <Button Command="{Binding SaveCommand}" Style="{StaticResource SaveViewButton}" />
                <Button Command="{Binding CancelCommand}" Style="{StaticResource CancelViewButton}" />
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <ScrollViewer.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </ScrollViewer.Effect>
                <Grid Grid.Row="1" Background="White">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                            <RowDefinition MinHeight="50" />
                        </Grid.RowDefinitions>


                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Code" />
                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Width="300"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.Code}" />



                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Description" />
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Width="450"
                                 Margin="0,8"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.Description}"
                                 TextWrapping="Wrap" />

                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Article" />

                        <StackPanel Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,0,0,0"
                                    Orientation="Horizontal">
                            <ComboBox Width="220"
                                      Margin="0,0,10,0"
                                      IsEditable="True"
                                      ItemsSource="{Binding ArticlesData1}"
                                      SelectedValue="{Binding NewData.Article1}"
                                      SelectedValuePath="Text"
                                      Style="{StaticResource InputComboBoxStyle}"
                                      Text="{Binding NewData.Article1}" />
                            <ComboBox Width="220"
                                      IsEditable="True"
                                      ItemsSource="{Binding ArticlesData2}"
                                      SelectedValue="{Binding NewData.Article2}"
                                      SelectedValuePath="Text"
                                      Style="{StaticResource InputComboBoxStyle}"
                                      Text="{Binding NewData.Article2}" />
                        </StackPanel>

                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Category" />
                        <ComboBox Grid.Row="3"
                                  Grid.Column="1"
                                  Width="200"
                                  IsEditable="True"
                                  ItemsSource="{Binding CategoriesData}"
                                  SelectedValue="{Binding NewData.Category}"
                                  SelectedValuePath="Text"
                                  Style="{StaticResource InputComboBoxStyle}"
                                  Text="{Binding NewData.Category}" />

                        <TextBlock Grid.Row="4"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Brand" />
                        <ComboBox Grid.Row="4"
                                  Grid.Column="1"
                                  Width="500"
                                  IsEditable="True"
                                  ItemsSource="{Binding BrandsData}"
                                  SelectedValue="{Binding NewData.Brand}"
                                  SelectedValuePath="Text"
                                  Style="{StaticResource InputComboBoxStyle}"
                                  Text="{Binding NewData.Brand}" />

                        <TextBlock Grid.Row="5"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Unit" />
                        <ComboBox Grid.Row="5"
                                  Grid.Column="1"
                                  Width="150"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  PreviewKeyDown="Unit_PreviewKeyDown"
                                  SelectedValue="{Binding NewData.Unit}"
                                  SelectedValuePath="Text"
                                  Style="{StaticResource InputComboBoxStyle}"
                                  Text="{Binding NewData.Unit}">
                            <ComboBoxItem>No</ComboBoxItem>
                            <ComboBoxItem>MTR</ComboBoxItem>
                            <ComboBoxItem>Kg</ComboBoxItem>
                            <ComboBoxItem>Bar</ComboBoxItem>
                            <ComboBoxItem>Roll</ComboBoxItem>
                            <ComboBoxItem>Set</ComboBoxItem>
                            <ComboBoxItem>Lot</ComboBoxItem>
                        </ComboBox>

                        <TextBlock Grid.Row="6"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Cost" />
                        <TextBox Grid.Row="6"
                                 Grid.Column="1"
                                 Width="150"
                                 PreviewKeyDown="Cost_PreviewKeyDown"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.Cost}"
                                 TextAlignment="Center" />

                        <TextBlock Grid.Row="7"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Discount" />
                        <TextBox Grid.Row="7"
                                 Grid.Column="1"
                                 Width="150"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.Discount}"
                                 TextAlignment="Center" />

                        <TextBlock Grid.Row="8"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Note" />
                        <TextBox Grid.Row="8"
                                 Grid.Column="1"
                                 Width="450"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.Remarks}" />

                        <TextBlock Grid.Row="9"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Search Keys" />

                        <TextBox Grid.Row="9"
                                 Grid.Column="1"
                                 Width="450"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.SearchKeys}" />

                        <TextBlock Grid.Row="9"
                                   Grid.Column="1"
                                   Margin="0,0,0,-15"
                                   VerticalAlignment="Bottom"
                                   Foreground="Black"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Like 'Schneider, MCB, C60, iC60.......etc." />

                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>

</UserControl>

