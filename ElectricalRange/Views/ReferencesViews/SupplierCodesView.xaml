<UserControl x:Class="ProjectsNow.Views.ReferencesViews.SupplierCodesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding AddCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu" FontFamily="Times New Roman">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Edit" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Edit1.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteCommand}" CommandParameter="{Binding}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red" Text="Delete" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/Icons/Error.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>
    <Grid>
        <Grid Background="{StaticResource LinearGradientGray}" />
        <Border Width="880"
                Height="550"
                Background="White"
                BorderBrush="{StaticResource LinearGradientGray}"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Background="{StaticResource LinearGradientGray}">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="10,7.5,0,0"
                                   Style="{StaticResource TitleStyle}"
                                   Text="{Binding ReferenceData.Code}" />
                        <TextBlock Margin="0,7.5"
                                   Style="{StaticResource TitleStyle}"
                                   Text=" Supplier Codes" />
                    </StackPanel>


                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="5"
                                          Direction="-90"
                                          Opacity="0.5"
                                          RenderingBias="Quality"
                                          ShadowDepth="2" />
                    </Grid.Effect>
                </Grid>

                <TabControl Style="{StaticResource ViewsTabControlStyle}">
                    <TabControl.Resources>
                        <Style BasedOn="{StaticResource TextItemStyle}" TargetType="TabItem" />
                    </TabControl.Resources>

                    <TabItem Width="20"
                             Header="TabItem"
                             Visibility="Hidden" />

                    <TabItem Header="Tools" IsSelected="True">
                        <StackPanel Margin="20,0,0,0"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                            <Button Padding="0,5,0,0"
                                    Command="{Binding AddCommand}"
                                    FontSize="12"
                                    Style="{StaticResource ManagerSubTapsButtons}"
                                    Tag="New">
                                <ImageSource>/Images/Icons/Add.png</ImageSource>
                            </Button>

                            <Button Padding="5,5,0,0"
                                    Command="{Binding EditCommand}"
                                    CommandParameter="{Binding SelectedItem}"
                                    FontSize="12"
                                    Style="{StaticResource ManagerSubTapsButtons}"
                                    Tag="Edit">
                                <ImageSource>/Images/Icons/Edit1.png</ImageSource>
                            </Button>

                            <Button Padding="0,5,0,0"
                                    Command="{Binding DeleteCommand}"
                                    CommandParameter="{Binding SelectedItem}"
                                    FontSize="12"
                                    Style="{StaticResource ManagerSubTapsButtons}"
                                    Tag="Delete">
                                <ImageSource>/Images/Icons/Error.png</ImageSource>
                            </Button>

                            <Button Padding="0,5,0,0"
                                    Command="{Binding SaveCommand}"
                                    CommandParameter="{Binding SelectedItem}"
                                    FontSize="12"
                                    Style="{StaticResource ManagerSubTapsButtons}"
                                    Tag="Save">
                                <ImageSource>/Images/Icons/Save.png</ImageSource>
                            </Button>

                            <Button Padding="0,5,0,0"
                                    Command="{Binding CancelCommand}"
                                    FontSize="12"
                                    Style="{StaticResource ManagerSubTapsButtons}"
                                    Tag="Cancel">
                                <ImageSource>/Images/Icons/Cancel.png</ImageSource>
                            </Button>

                        </StackPanel>
                    </TabItem>

                    <TabItem HorizontalAlignment="Right" Header="Filters">
                        <StackPanel Height="65"
                                    Margin="7,0,0,0"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBox Width="248"
                                     Style="{StaticResource FilterInputStyle}"
                                     Text="{Binding ContactName, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Width="198"
                                     Style="{StaticResource FilterInputStyle}"
                                     Text="{Binding Job, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Command="{Binding DeleteFilterCommand}" Style="{StaticResource FilterButtonStyle}" />
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="5"
                                              Direction="-90"
                                              Opacity="0.5"
                                              RenderingBias="Quality"
                                              ShadowDepth="2" />
                        </Grid.Effect>
                        <Grid Grid.Row="1" Background="LightGray">
                            <StackPanel Margin="20,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IndicationStyle}" Text="Code: " />
                                <TextBlock Foreground="Black"
                                           Style="{StaticResource IndicationStyle}"
                                           Text="{Binding Indicator}" />
                            </StackPanel>
                        </Grid>

                        <c:LoadingControl Margin="0,30,0,0"
                                          DataContext="{Binding}"
                                          IsEnabled="{Binding IsWriting}" />

                        <DataGrid ContextMenu="{StaticResource GridContextMenu}"
                                  ItemsSource="{Binding ItemsCollection}"
                                  SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                  Style="{StaticResource ViewDataGridStyle}">
                            <DataGrid.InputBindings>
                                <MouseBinding Command="{Binding EidtCommand}"
                                              CommandParameter="{Binding SelectedItem}"
                                              Gesture="LeftDoubleClick" />
                            </DataGrid.InputBindings>
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource ViewRowsStyle}" TargetType="{x:Type DataGridRow}">
                                    <Setter Property="ContextMenu" Value="{StaticResource RowsContextMenu}" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>

                                <DataGridTextColumn Width="400"
                                                    Binding="{Binding SupplierCode}"
                                                    ElementStyle="{StaticResource LeftColumnView}"
                                                    Header="Supplier Code" />

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.Resources>

                            <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="FontFamily" Value="Times New Roman" />
                                <Setter Property="Foreground" Value="{StaticResource Blue}" />
                                <Setter Property="Margin" Value="30,0,0,0" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>

                            <Style x:Key="InputStyle"
                                   BasedOn="{StaticResource TextBoxStyle}"
                                   TargetType="{x:Type TextBox}">
                                <Setter Property="IsEnabled" Value="{Binding IsWriting}" />
                                <Setter Property="Width" Value="400" />
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="FontFamily" Value="Times New Roman" />
                                <Setter Property="TextAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                            </Style>

                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="200" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="10,0,0,0"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Supplier Code:" />

                        <TextBox Grid.Row="2"
                                 Grid.Column="1"
                                 Margin="20,0,0,0"
                                 Style="{StaticResource InputStyle}"
                                 Text="{Binding NewData.SupplierCode}" />

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

