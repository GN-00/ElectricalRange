<UserControl x:Class="ProjectsNow.Views.QuotationsStatusViews.QuotationsReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Style="{StaticResource ViewStyle}">
    <UserControl.Resources>
        
        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CheckBoxLabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DocumentViewer Name="documentViewer" 
                        Grid.Row="1"
                        Grid.Column="1"
                        Document="{Binding DocumentData}"
                        ShowPageBorders="False" 
                        VerticalPageSpacing="50" 
                        Zoom="{Binding Zoom}"
                        HorizontalPageSpacing="50">
            <DocumentViewer.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </DocumentViewer.Effect>
            <DocumentViewer.Resources>
                <Style TargetType="ToolBar">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>

                <Style TargetType="ScrollViewer">
                    <Style.Triggers>
                        <Trigger Property="Name" Value="PART_ContentHost">
                            <Setter Property="DocumentPageView.Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <Trigger Property="Name" Value="PART_FindToolBarHost">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DocumentViewer.Resources>
        </DocumentViewer>

        <Grid Grid.Row="1" 
              Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>

            <StackPanel>

                <TextBlock Text="Please select customer:"
                           FontSize="16"
                           Margin="10,20,0,0"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="10,0,0,0"
                            Width="380"
                            Height="75"
                            CornerRadius="5"
                            BorderThickness="2"
                            HorizontalAlignment="Left"
                            BorderBrush="{StaticResource LinearGradientGray}">
                    <StackPanel>

                        <TextBlock Text="Customer" 
                                       Margin="5,5,0,0"
                                       HorizontalAlignment="Left"
                                       Style="{StaticResource LabelStyle}">
                        </TextBlock>

                        <Grid Margin="5,5,0,0">
                            <ComboBox ItemsSource="{Binding Customers}"
                                      SelectedItem="{Binding Customer, Mode=TwoWay}"
                                      DisplayMemberPath="CustomerName"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Width="360"
                                      Style="{StaticResource ComboBoxStyle}">
                            </ComboBox>
                            <Button Margin="0,0,35,0" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Center"
                                    Command="{Binding RemoveCustomerCommand}"
                                    Style="{StaticResource RemoveTextButtonStyle}">
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <TextBlock Text="Please select project types:"
                           FontSize="16"
                           Margin="10,10,0,0"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="10,0,0,0"
                        Width="380"
                        Height="50"
                        CornerRadius="5"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource LinearGradientGray}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox IsChecked="{Binding OnHand}" 
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding Bidding}" 
                                  Grid.Row="0"
                                  Grid.Column="2"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <TextBlock Text="On Hand" 
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Bidding" 
                                   Grid.Row="0"
                                   Grid.Column="3"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                    </Grid>
                </Border>

                <TextBlock Text="Please select quotations status:"
                           FontSize="16"
                           Margin="10,10,0,0"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="10,0,0,0"
                        Width="380"
                        Height="85"
                        CornerRadius="5"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource LinearGradientGray}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox IsChecked="{Binding Win}" 
                                  Grid.Row="0"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding OnGoing}" 
                                  Grid.Row="0"
                                  Grid.Column="2"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding Hold}" 
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding Cancel}" 
                                  Grid.Row="1"
                                  Grid.Column="2"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <CheckBox IsChecked="{Binding Lost}" 
                                  Grid.Row="0"
                                  Grid.Column="4"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>

                        <TextBlock Text="Win" 
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="On Going" 
                                   Grid.Row="0"
                                   Grid.Column="3"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Cancel" 
                                   Grid.Row="1"
                                   Grid.Column="3"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Hold" 
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Lost" 
                                   Grid.Row="0"
                                   Grid.Column="5"
                                   Style="{StaticResource CheckBoxLabelStyle}">
                        </TextBlock>
                    </Grid>
                </Border>

                <TextBlock Text="Please select the reporting period:"
                           FontSize="16"
                           Margin="10,10,0,0"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="10,0,0,0"
                        Width="380"
                        Height="85"
                        CornerRadius="5"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource LinearGradientGray}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="170"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Start" 
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>

                        <TextBlock Text="End" 
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>

                        <DatePicker SelectedDate="{Binding StartDate}"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource DatePickerStyle}">
                        </DatePicker>

                        <DatePicker SelectedDate="{Binding EndDate}" 
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource DatePickerStyle}">
                        </DatePicker>

                    </Grid>
                </Border>

                <TextBlock Text="Please select estimator &amp; salesman:"
                           FontSize="16"
                           Margin="10,10,0,0"
                           HorizontalAlignment="Left">
                </TextBlock>
                <Border Margin="10,0,0,0"
                        Grid.Column="2"
                        Width="380"
                        Height="85"
                        CornerRadius="5"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource LinearGradientGray}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Estimator" 
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>

                        <TextBlock Text="Salesman" 
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>

                        <ComboBox ItemsSource="{Binding Estimators}"
                                  SelectedItem="{Binding Estimator, Mode=TwoWay}"
                                  Grid.Column="1"
                                  DisplayMemberPath="Name"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource ComboBoxStyle}">
                        </ComboBox>

                        <ComboBox ItemsSource="{Binding Salesmen}"
                                  SelectedItem="{Binding Salesman, Mode=TwoWay}"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ComboBoxStyle}">
                        </ComboBox>

                        <Button Grid.Column="2" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left" 
                                Command="{Binding RemoveEstimatorCommand}"
                                Style="{StaticResource RemoveTextButtonStyle}">
                        </Button>

                        <Button Grid.Row="1" 
                                Grid.Column="2" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left" 
                                Command="{Binding RemoveSalesmanCommand}"
                                Style="{StaticResource RemoveTextButtonStyle}">
                        </Button>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal"
                            Margin="0,8"
                            HorizontalAlignment="Center">
                    <Button Tag="Reload" 
                            Padding="0,5,0,0"
                            Margin="2.5,5"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Command="{Binding ReloadCommand}">
                        <ImageSource>/Images/Icons/Reload.png</ImageSource>
                    </Button>
                    <Button Tag="Print" 
                            Padding="0,5,0,0"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Command="{Binding ReportCommand}">
                        <ImageSource>/Images/Icons/Printer.png</ImageSource>
                    </Button>
                    <Button Tag="Export" 
                            Padding="0,5,0,0"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Command="{Binding ExportCommand}">
                        <ImageSource>/Images/Icons/Excel.png</ImageSource>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Grid>

        <Grid Grid.ColumnSpan="2" 
              Panel.ZIndex="100"
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Quotations Report"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
