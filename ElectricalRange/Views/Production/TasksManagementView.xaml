
<UserControl x:Class="ProjectsNow.Views.Production.TasksManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.3"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
            
            <TextBlock Style="{StaticResource TitleStyle}">
                <Run Text="Task Management - Job Order:" />
                <Run Foreground="{StaticResource Blue}"
                     Text="{Binding OrderData.Code}" />
            </TextBlock>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Panels and Tasks List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Panels Header -->
                <Border Grid.Row="0" Background="{StaticResource Blue}" CornerRadius="5,5,0,0">
                    <TextBlock Text="Panels" 
                               Style="{StaticResource TitleStyle}" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />
                </Border>

                <!-- Panels DataGrid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Panels}"
                          SelectedItem="{Binding SelectedPanel}"
                          Style="{StaticResource DataGridStyle}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="SN" Binding="{Binding SN}" Width="50" />
                        <DataGridTextColumn Header="Panel Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="60" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Tasks Header -->
                <Border Grid.Row="2" Background="{StaticResource Green}" CornerRadius="0" Margin="0,5,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Tasks" 
                                   Style="{StaticResource TitleStyle}" 
                                   Foreground="White" />
                        <Button Content="Add Task" 
                                Command="{Binding AddTaskCommand}"
                                Style="{StaticResource ButtonStyle}"
                                Margin="10,0,0,0"
                                Padding="10,5" />
                    </StackPanel>
                </Border>

                <!-- Tasks DataGrid -->
                <DataGrid Grid.Row="3" 
                          ItemsSource="{Binding Tasks}"
                          SelectedItem="{Binding SelectedTask}"
                          Style="{StaticResource DataGridStyle}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Task" Binding="{Binding TaskName}" Width="*" />
                        <DataGridTextColumn Header="Panel" Binding="{Binding PanelName}" Width="120" />
                        <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="80" />
                        <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="80" />
                        <DataGridTextColumn Header="Progress %" Binding="{Binding Progress}" Width="80" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Edit Task" Command="{Binding EditTaskCommand}" />
                            <MenuItem Header="Delete Task" Command="{Binding DeleteTaskCommand}" />
                            <MenuItem Header="Assign Employees" Command="{Binding AssignEmployeesCommand}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>

            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="Gray" />

            <!-- Kanban Board -->
            <ContentControl Grid.Column="2" 
                            Content="{Binding KanbanView}" />
        </Grid>
    </Grid>
</UserControl>
