<UserControl x:Class="ProjectsNow.Views.Production.FactoryMaterialsRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="PanelContextMenu">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddRequestCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New Request" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"
                           Source="/Images/Icons/AddForm.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddItemCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add Items" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"
                           Source="/Images/Icons/AddItem.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="ItemsContextMenu">
            <MenuItem Command="{Binding AddRequestCommand}"
                      CommandParameter="{Binding SelectedRequest}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add Panels" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"
                           Source="/Images/Icons/NewPanels.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddPanelsCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.SelectedRequest}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add Panels" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"
                           Source="/Images/Icons/NewPanels.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeletePanelCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red"
                               Text="Delete Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"
                           Source="/Images/Icons/DeleteEnclosure.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.3"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TextBlock Style="{StaticResource TitleStyle}">
            <Run Text="J.O:" />
            <Run Foreground="{StaticResource Blue}"
                 Text="{Binding OrderData.Code}" />
            <Run Text="Factory Materials Request" />
        </TextBlock>

        <TabControl Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}"
                       TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem Header="Tools"
                     IsSelected="True">

                <Grid>
                    <StackPanel Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                        <Button Padding="0,5,0,-5"
                                Command="{Binding AddRequestCommand}"
                                CommandParameter="{Binding SelectedPanel}"
                                Style="{StaticResource ManagerSubTapsButtons}"
                                Tag="Add Request">
                            <ImageSource>/Images/Icons/AddForm.png</ImageSource>
                        </Button>

                        <Button Padding="0,5,0,-2"
                                Command="{Binding AddItemCommand}"
                                CommandParameter="{Binding SelectedPanel}"
                                Style="{StaticResource ManagerSubTapsButtons}"
                                Tag="Add Item">
                            <ImageSource>/Images/Icons/AddItem.png</ImageSource>
                        </Button>

                        <Button Padding="0,5,0,-8"
                                Command="{Binding EditItemCommand}"
                                CommandParameter="{Binding SelectedItem}"
                                Style="{StaticResource ManagerSubTapsButtons}"
                                Tag="Edit">
                            <ImageSource>/Images/Icons/Edit1.png</ImageSource>
                        </Button>

                        <Button Padding="0,5,0,-2"
                                Command="{Binding DeleteItemCommand}"
                                CommandParameter="{Binding SelectedItem}"
                                Style="{StaticResource ManagerSubTapsButtons}"
                                Tag="Delete Panel">
                            <ImageSource>/Images/Icons/DeleteItem.png</ImageSource>
                        </Button>

                        <Button Padding="0,5,0,-8"
                                Command="{Binding PrintCommand}"
                                Style="{StaticResource ManagerSubTapsButtons}"
                                Tag="Print">
                            <ImageSource>/Images/Icons/Printer.png</ImageSource>
                        </Button>

                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="1">
            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="20,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontFamily="Times New Roman"
                           FontSize="32"
                           FontWeight="Light"
                           Foreground="{StaticResource Blue}"
                           Text="Panels" />

                <TextBlock Grid.Column="1"
                           Margin="20,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontFamily="Times New Roman"
                           FontSize="32"
                           FontWeight="Light"
                           Foreground="{StaticResource Blue}"
                           Text="Items" />

                <Grid Margin="10,50,5,10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="5"
                                          Direction="-90"
                                          Opacity="0.5"
                                          RenderingBias="Quality"
                                          ShadowDepth="2" />
                    </Grid.Effect>
                    <Grid Grid.Row="1"
                          Background="LightGray">
                        <StackPanel Margin="20,0"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IndicationStyle}"
                                       Text="Panel: " />
                            <TextBlock Foreground="Black"
                                       Style="{StaticResource IndicationStyle}"
                                       Text="{Binding PanelsIndicator}" />
                        </StackPanel>
                    </Grid>

                    <DataGrid ContextMenu="{x:Null}"
                              ItemsSource="{Binding PanelsCollection}"
                              SelectedIndex="{Binding SelectedPanelIndex, Mode=OneWayToSource}"
                              SelectedItem="{Binding SelectedPanel, Mode=TwoWay}"
                              Style="{StaticResource ViewDataGridStyle}">
                        <DataGrid.Resources>
                            <Style BasedOn="{StaticResource ViewRowsStyle}"
                                   TargetType="{x:Type DataGridRow}">
                                <Setter Property="ContextMenu" Value="{StaticResource PanelContextMenu}" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>

                            <DataGridTextColumn Width="50"
                                                Binding="{Binding SN}"
                                                ElementStyle="{StaticResource CenterColumnView}"
                                                Header="SN" />

                            <DataGridTextColumn Width="350"
                                                Binding="{Binding Name}"
                                                ElementStyle="{StaticResource LeftColumnView}"
                                                Header="Name" />

                            <DataGridTextColumn Width="50"
                                                Binding="{Binding Qty}"
                                                ElementStyle="{StaticResource CenterColumnView}"
                                                Header="Qty" />

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid Grid.Column="1"
                      Margin="5,50,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="5"
                                          Direction="-90"
                                          Opacity="0.5"
                                          RenderingBias="Quality"
                                          ShadowDepth="2" />
                    </Grid.Effect>
                    <Grid Grid.Row="1"
                          Background="LightGray">
                        <StackPanel Margin="20,0"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IndicationStyle}"
                                       Text="Item: " />
                            <TextBlock Foreground="Black"
                                       Style="{StaticResource IndicationStyle}"
                                       Text="{Binding ItemsIndicator}" />
                        </StackPanel>
                    </Grid>
                    <DataGrid ContextMenu="{StaticResource ItemsContextMenu}"
                              ItemsSource="{Binding ItemsCollection}"
                              SelectedIndex="{Binding SelectedItemIndex, Mode=OneWayToSource}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                              Style="{StaticResource ViewDataGridStyle}">
                        <DataGrid.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Margin" Value="0,0,0,0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Expander Background="DarkGray"
                                                              Foreground="Black"
                                                              IsExpanded="False">
                                                        <Expander.Header>
                                                            <Grid Width="750"
                                                                  Height="40">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel VerticalAlignment="Center"
                                                                            Orientation="Horizontal">
                                                                    <TextBlock Margin="5,0,5,0"
                                                                               FontWeight="Bold"
                                                                               Text="{Binding Path=Name, StringFormat='Form Id: {0}'}" />
                                                                    <TextBlock Grid.Column="0"
                                                                               FontWeight="Bold"
                                                                               Text="{Binding Path=ItemCount, StringFormat='({0})'}" />
                                                                </StackPanel>

                                                                <StackPanel Grid.Column="2"
                                                                            HorizontalAlignment="Right"
                                                                            Orientation="Horizontal">
                                                                    <Button Click="NewItem_Clicked"
                                                                            Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddItemToGroupCommand}"
                                                                            CommandParameter="{Binding}"
                                                                            Style="{StaticResource GroupButton}"
                                                                            ToolTip="New Item">
                                                                        <ImageSource>/Images/Icons/NewItem.png</ImageSource>
                                                                    </Button>
                                                                    <Button Click="DeleteRequest_Clicked"
                                                                            Style="{StaticResource GroupButton}"
                                                                            ToolTip="Delete Modification">
                                                                        <ImageSource>/Images/Icons/Error.png</ImageSource>
                                                                    </Button>
                                                                    <Button Click="Print_Click"
                                                                            Style="{StaticResource GroupButton}"
                                                                            ToolTip="Print">
                                                                        <ImageSource>/Images/Icons/Printer.png</ImageSource>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Expander.Header>
                                                        <Expander.Content>
                                                            <ItemsPresenter />
                                                        </Expander.Content>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </DataGrid.GroupStyle>
                        <DataGrid.Resources>
                            <Style BasedOn="{StaticResource ViewRowsStyle}"
                                   TargetType="{x:Type DataGridRow}">
                                <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>

                            <DataGridTextColumn Width="250"
                                                Binding="{Binding Code}"
                                                ElementStyle="{StaticResource CenterColumnView}"
                                                Header="Code" />

                            <DataGridTextColumn Width="400"
                                                Binding="{Binding Description}"
                                                ElementStyle="{StaticResource LeftColumnView}"
                                                Header="Description" />

                            <DataGridTextColumn Width="133"
                                                Binding="{Binding Qty}"
                                                ElementStyle="{StaticResource CenterColumnView}"
                                                Header="Qty" />

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
