<UserControl
    x:Class="ProjectsNow.Views.Production.SelectingPanelsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CN="clr-namespace:ProjectsNow.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="681"
    Height="500"
    BorderBrush="{StaticResource Blue}"
    BorderThickness="1"
    mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding AddAllCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add All" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        SnapsToDevicePixels="True"
                        Source="/Images/Icons/ImportAll.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowContextMenu">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddAllCommand}" Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Add All" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        SnapsToDevicePixels="True"
                        Source="/Images/Icons/ImportAll.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddCommand}"
                CommandParameter="{Binding}"
                Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New Panel" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        SnapsToDevicePixels="True"
                        Source="/Images/Icons/NewPanels.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000" Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="-90"
                    Opacity="0.5"
                    RenderingBias="Quality"
                    ShadowDepth="2" />
            </Grid.Effect>

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="10,7.5"
                    Style="{StaticResource TitleStyle}"
                    Text="Panels" />
            </StackPanel>

            <CN:PopupControls />
        </Grid>

        <Grid Grid.Row="1">
            <Grid Margin="10,10,10,10">
                <Grid.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Direction="-90"
                        Opacity="0.5"
                        RenderingBias="Quality"
                        ShadowDepth="2" />
                </Grid.Effect>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Background="LightGray">
                    <StackPanel
                        Margin="20,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IndicationStyle}" Text="Panel: " />
                        <TextBlock
                            Foreground="Black"
                            Style="{StaticResource IndicationStyle}"
                            Text="{Binding Indicator}" />
                    </StackPanel>
                </Grid>

                <DataGrid
                    ContextMenu="{StaticResource GridContextMenu}"
                    IsReadOnly="False"
                    ItemsSource="{Binding ItemsCollection}"
                    SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    Style="{StaticResource ViewDataGridStyle}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource ViewRowsStyle}" TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding SN}"
                            ElementStyle="{StaticResource CenterColumnView}"
                            Header="SN"
                            IsReadOnly="True" />

                        <DataGridTextColumn
                            Width="300"
                            Binding="{Binding Name}"
                            ElementStyle="{StaticResource LeftColumnView}"
                            Header="Name"
                            IsReadOnly="True" />

                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Qty, StringFormat=N2}"
                            ElementStyle="{StaticResource CenterColumnView}"
                            Header="Qty"
                            IsReadOnly="True" />

                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding SummaryQty, StringFormat=N2}"
                            ElementStyle="{StaticResource CenterColumnView}"
                            Header="Select" />

                        <DataGridTemplateColumn Width="60">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,0,0"
                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddAllCommand}"
                                        Style="{StaticResource SubViewTapsButtons}"
                                        ToolTip="Add">
                                        <ImageSource>/Images/Icons/ImportAll.png</ImageSource>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,0,0"
                                        Background="{StaticResource LinearGradientGray}"
                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddCommand}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SubViewTapsButtons}"
                                        ToolTip="Add">
                                        <ImageSource>/Images/Icons/Import.png</ImageSource>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
