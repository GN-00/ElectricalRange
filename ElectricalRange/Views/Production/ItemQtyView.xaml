<UserControl x:Class="ProjectsNow.Views.Production.ItemQtyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="635"
             Height="auto"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Style x:Key="LabelStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource MyBlue}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Width" Value="90" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="FontFamily" Value="Times New Roman" />
        </Style>

        <Style x:Key="NumbersStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="Times New Roman" />
        </Style>

    </UserControl.Resources>
    <Border BorderBrush="{StaticResource Blue}"
            BorderThickness="2">
        <Grid x:Name="PopupGrid"
              Background="{StaticResource LinearGradientGray}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Margin="5"
                  Background="White"
                  Effect="{StaticResource Shadow}">
                <TextBlock Margin="10,5,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Panel.ZIndex="1000"
                           FontFamily="Times New Roman"
                           FontSize="32"
                           Foreground="Black"
                           Text="Items" />

                <Grid Margin="10,50,10,10"
                      VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>

                    <TextBlock VerticalAlignment="Center"
                               Style="{StaticResource LabelStyle}"
                               Text="Code"
                               TextAlignment="Center" />

                    <TextBox Grid.Column="1"
                             VerticalAlignment="Center"
                             FontFamily="Times New Roman"
                             FontSize="18"
                             FontWeight="Bold"
                             IsReadOnly="True"
                             Style="{StaticResource TextBoxStyle}"
                             Text="{Binding NewData.Code}"
                             TextAlignment="Left" />

                    <TextBlock Grid.Row="1"
                               VerticalAlignment="Center"
                               Style="{StaticResource LabelStyle}"
                               Text="Description"
                               TextAlignment="Center" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             VerticalAlignment="Center"
                             FontFamily="Times New Roman"
                             FontSize="18"
                             FontWeight="Bold"
                             IsReadOnly="True"
                             Style="{StaticResource TextBoxStyle}"
                             Text="{Binding NewData.Description}"
                             TextAlignment="Left" />

                    <Grid Grid.Row="2"
                          Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <TextBlock VerticalAlignment="Center"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Qty"
                                   TextAlignment="Center" />
                        <TextBox Grid.Column="1"
                                 VerticalAlignment="Center"
                                 FontFamily="Times New Roman"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 Style="{StaticResource TextBoxStyle}"
                                 Text="{Binding NewData.Qty}"
                                 TextAlignment="Center" />

                        <TextBlock Grid.Column="2"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Stock"
                                   TextAlignment="Center" />
                        <TextBox Grid.Column="3"
                                 VerticalAlignment="Center"
                                 FontFamily="Times New Roman"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 Style="{StaticResource TextBoxStyle}"
                                 Text="{Binding NewData.Stock}"
                                 TextAlignment="Center" />

                        <TextBlock Grid.Column="4"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource LabelStyle}"
                                   Text="Post"
                                   TextAlignment="Center" />
                        <TextBox Grid.Column="5"
                                 VerticalAlignment="Center"
                                 FontFamily="Times New Roman"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Style="{StaticResource TextBoxStyle}"
                                 Text="{Binding Posting}"
                                 TextAlignment="Center" />
                    </Grid>
                </Grid>
            </Grid>

            <StackPanel Grid.Row="1"
                        Margin="20,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource OkViewButton}" />
                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource CancelViewButton}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
