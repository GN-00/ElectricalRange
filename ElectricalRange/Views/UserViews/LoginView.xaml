<UserControl x:Class="ProjectsNow.Views.UserViews.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             Height="700"
             Style="{StaticResource ViewStyle}">
    <Grid>
        <Image Source="/Images/Vectors/Login.png"
               Stretch="Fill"
               RenderOptions.BitmapScalingMode="HighQuality">
        </Image>

        <TextBlock Text="{Binding VersionInfo}"
                   Margin="10"
                   FontSize="18"
                   FontWeight="Bold"
                   FontFamily="Times New Roman"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left">

        </TextBlock>

        <Border CornerRadius="10"
                Width="280"
                Margin="0,120,65,180"
                HorizontalAlignment="Right">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.9" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FFE2E2F0" Offset="0.0"/>
                    <GradientStop Color="#FF3532BF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Image Margin="0,10,0,0" Width="100" Height="100" VerticalAlignment="Top" Source="/Images/Icons/PN.png" RenderOptions.BitmapScalingMode="HighQuality" />

                <Border Width="250" Margin="0,120,0,20" Background="White" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Color="#FFBBBBBB"/>
                    </Border.Effect>

                    <Grid TextElement.FontWeight="Bold">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="85"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>

                        <Label Content="Login" 
                               Grid.Row="0"
                               FontSize="18"
                               Foreground="Gray"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        </Label>

                        <TextBlock Grid.Row="1" 
                                   Margin="10,0"
                                   Text="User Name" 
                                   FontSize="18"
                                   VerticalAlignment="Center">
                        </TextBlock>

                        <TextBox x:Name="Username" 
                                 Grid.Row="2"
                                 Margin="10,0"
                                 Text="{Binding Username}" 
                                 CharacterCasing="Upper" 
                                 FontSize="18" 
                                 Padding="3"
                                 VerticalAlignment="Center"
                                 PreviewKeyDown="UserKeyDown">
                        </TextBox>

                        <TextBlock Grid.Row="3" 
                                   Margin="10,0"
                                   Text="Password" 
                                   FontSize="18"
                                   VerticalAlignment="Center">
                        </TextBlock>

                        <PasswordBox x:Name="Password" 
                                     Grid.Row="4"
                                     Margin="10,0"
                                     FontSize="18" 
                                     Padding="3"
                                     VerticalAlignment="Center"
                                     PreviewKeyDown="Password_KeyDown"
                                     PasswordChanged="Password_PasswordChanged">
                        </PasswordBox>

                        <Button Command="{Binding LoginCommand}"
                                Grid.Row="5"
                                Margin="0,5"
                                ToolTip="Login"
                                Style="{StaticResource ShadowButton}">
                            <ImageSource>/Images/Icons/Login.png</ImageSource>
                        </Button>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
