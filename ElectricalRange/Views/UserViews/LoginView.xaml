<UserControl x:Class="ProjectsNow.Views.UserViews.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="700"
             Loaded="UserControl_Loaded"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <Grid Background="{StaticResource LinearGray}">
        <Image Margin="20,20,380,40"
               Effect="{StaticResource Shadow}"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="/Images/Vectors/meta.png"
               Stretch="Fill" />

        <TextBlock Margin="10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontFamily="Times New Roman"
                   FontSize="18"
                   FontWeight="Bold"
                   Text="{Binding VersionInfo}" />

        <Border Width="280"
                Margin="0,150,65,180"
                HorizontalAlignment="Right"
                Background="{StaticResource LinearGradientGray}"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  Direction="-90"
                                  Opacity="0.9"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Border.Effect>

            <Grid>

                <TextBlock Margin="0,20,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="60"
                           FontWeight="Bold"
                           Foreground="{StaticResource Blue}"
                           Text="ERI" />

                <Border Width="250"
                        Margin="0,100,0,20"
                        Background="White"
                        CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="2"
                                          Color="#FFBBBBBB" />
                    </Border.Effect>

                    <Grid TextElement.FontWeight="Bold">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="85" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="Login"
                               FontSize="18"
                               Foreground="Gray" />

                        <TextBlock Grid.Row="1"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="User Name" />

                        <TextBox x:Name="Username"
                                 Grid.Row="2"
                                 Margin="10,0"
                                 Padding="3"
                                 VerticalAlignment="Center"
                                 CharacterCasing="Upper"
                                 FontSize="18"
                                 PreviewKeyDown="UserKeyDown"
                                 Text="{Binding Username}" />

                        <TextBlock Grid.Row="3"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="Password" />

                        <PasswordBox x:Name="Password"
                                     Grid.Row="4"
                                     Margin="10,0"
                                     Padding="3"
                                     VerticalAlignment="Center"
                                     FontSize="18"
                                     PasswordChanged="Password_PasswordChanged"
                                     PreviewKeyDown="Password_KeyDown" />

                        <Button Grid.Row="5"
                                Margin="0,5"
                                Command="{Binding LoginCommand}"
                                Style="{StaticResource ShadowButton}"
                                ToolTip="Login">
                            <ImageSource>/Images/Icons/Login.png</ImageSource>
                        </Button>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
