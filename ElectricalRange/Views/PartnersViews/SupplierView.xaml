<UserControl x:Class="ProjectsNow.Views.PartnersViews.SupplierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Style="{StaticResource ViewStyle}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding ClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>

        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyle" 
               BasedOn="{StaticResource TextBoxStyle}"
               TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="350"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyleDatePicker" 
               BasedOn="{StaticResource DatePickerStyle}"
               TargetType="{x:Type DatePicker}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputComboBoxStyle"
               BasedOn="{StaticResource ComboBoxStyle}" 
               TargetType="{x:Type ComboBox}">
            <Setter Property="Width" Value="350"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Border Margin="0"
                Height="480"
                BorderThickness="2"
                HorizontalAlignment="Center"
                BorderBrush="{StaticResource LinearGradientGray}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Border.Effect>
            <Grid  Background="{StaticResource LinearGradientGray}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>

                <Grid Background="White"
                      Height="60">
                    <TextBlock Text="Information"
                               Style="{StaticResource TitleStyle}">
                    </TextBlock>
                </Grid>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="2"
                            Margin="10"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right">
                    <Button Command="{Binding SaveCommand}"
                            Style="{StaticResource SaveViewButton}">
                    </Button>
                    <Button Command="{Binding CancelCommand}"
                            Style="{StaticResource CancelViewButton}">
                    </Button>
                </StackPanel>

                <Grid Grid.Row="1" Background="White">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                    </Grid.Effect>
                    <Grid Margin="20,10,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>


                        <TextBlock Text="Code" 
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Code}"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 Width="100"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Name" 
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <ComboBox Grid.Row="1"
                                  Grid.Column="1"
                                  IsEditable="True"
                                  FontWeight="Bold"
                                  ItemsSource="{Binding SuppliersData}"
                                  Text="{Binding NewData.Name}"
                                  SelectedValuePath="Text"
                                  SelectedValue="{Binding NewData.Name}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource InputComboBoxStyle}">
                        </ComboBox>

                        <TextBlock Text="Arabic Name" 
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.ArabicName}"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 TextAlignment="Right"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <StackPanel Grid.Row="3"
                                    Grid.Column="0"
                                    Orientation="Horizontal">
                            <TextBlock Text="VAT" 
                                       Style="{StaticResource LabelStyle}">
                            </TextBlock>
                            <Button Grid.Column="0" 
                                    Command="{Binding AttachmentsCommand}"
                                    CommandParameter="VAT"
                                    ToolTip="Attachments"
                                    Margin="5"
                                    Padding="2"
                                    Width="28"
                                    Height="28"
                                    Style="{StaticResource SubShadowButtons}">
                                <ImageSource>/Images/Icons/Attach.png</ImageSource>
                            </Button>
                        </StackPanel>
                        <TextBox Text="{Binding NewData.VATNumber}" 
                                 Width="175"
                                 Grid.Row="3"
                                 Grid.Column="1"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}"
                                 PreviewKeyDown="VAT_PreviewKeyDown">
                        </TextBox>

                        <StackPanel Grid.Row="4"
                                    Grid.Column="0"
                                    Orientation="Horizontal">
                            <TextBlock Text="CR" 
                                       Style="{StaticResource LabelStyle}">
                            </TextBlock>
                            <Button Grid.Column="0" 
                                    Command="{Binding AttachmentsCommand}"
                                    CommandParameter="CR"
                                    ToolTip="Attachments"
                                    Margin="5"
                                    Padding="2"
                                    Width="28"
                                    Height="28"
                                    Style="{StaticResource SubShadowButtons}">
                                <ImageSource>/Images/Icons/Attach.png</ImageSource>
                            </Button>
                        </StackPanel>
                        <TextBox Text="{Binding NewData.CR}" 
                                 Width="175"
                                 Grid.Row="4"
                                 Grid.Column="1"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}"
                                 PreviewKeyDown="CR_PreviewKeyDown">
                        </TextBox>


                        <TextBlock Text="Credit Limit" 
                                   Grid.Row="5"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.CreditLimit}" 
                                 Width="175"
                                 Grid.Row="5"
                                 Grid.Column="1"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}"
                                 PreviewKeyDown="CreditLimit_PreviewKeyDown">
                        </TextBox>

                        <TextBlock Text="Return Period" 
                                   Grid.Row="6"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.ReturnPeriod}" 
                                 Width="175"
                                 Grid.Row="6"
                                 Grid.Column="1"
                                 FontWeight="Bold"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}"
                                 PreviewKeyDown="ReturnPeriod_PreviewKeyDown">
                        </TextBox>

                        <TextBlock Text="Phone" 
                                   Grid.Row="0"
                                   Grid.Column="3"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Phone}" 
                                 Width="175"
                                 Grid.Row="0"
                                 Grid.Column="4"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Email" 
                                   Grid.Row="1"
                                   Grid.Column="3"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Email}"
                                 Grid.Row="1"
                                 Grid.Column="4"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Website" 
                                   Grid.Row="2"
                                   Grid.Column="3"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Website}" 
                                 Grid.Row="2"
                                 Grid.Column="4"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="City" 
                                   Grid.Row="3"
                                   Grid.Column="3"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.City}" 
                                 Width="120"
                                 Grid.Row="3"
                                 Grid.Column="4"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>


                        <TextBlock Text="P.O.Box" 
                                   Grid.Row="4"
                                   Grid.Column="3"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.POBox}"
                                 Width="120"
                                 Grid.Row="4"
                                 Grid.Column="4"
                                 TextAlignment="Center"
                                 Style="{StaticResource InputStyle}" 
                                 PreviewKeyDown="POBox_PreviewKeyDown">
                        </TextBox>

                        <StackPanel Grid.Row="5"
                                    Grid.Column="3"
                                    Orientation="Horizontal">
                            <TextBlock Text="Address" 
                                       Grid.Row="5"
                                       Grid.Column="3"
                                       Style="{StaticResource LabelStyle}">
                            </TextBlock>
                            <Button Grid.Column="0" 
                                    Command="{Binding AttachmentsCommand}"
                                    CommandParameter="Address"
                                    ToolTip="Attachments"
                                    Margin="5"
                                    Padding="2"
                                    Width="28"
                                    Height="28"
                                    Style="{StaticResource SubShadowButtons}">
                                <ImageSource>/Images/Icons/Attach.png</ImageSource>
                            </Button>
                        </StackPanel>
                        <TextBox Text="{Binding NewData.Address}"
                                 Grid.Row="5"
                                 Grid.Column="4"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Start Relation" 
                                   Grid.Row="6"
                                   Grid.Column="3"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <DatePicker SelectedDate="{Binding NewData.StartRelation}"
                                    Grid.Row="6"
                                    Grid.Column="4"
                                    Width="175"
                                    FontWeight="Bold"
                                    DisplayDate="{Binding NewData.StartRelation}"
                                    Style="{StaticResource InputStyleDatePicker}">
                        </DatePicker>

                        <TextBlock Text="Note" 
                                   Grid.Row="7"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Note}" 
                                 Grid.Row="7"
                                 Grid.Column="1"
                                 Grid.ColumnSpan="4"
                                 Width="870"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
