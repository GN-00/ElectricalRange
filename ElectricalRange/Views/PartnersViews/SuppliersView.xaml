<UserControl x:Class="ProjectsNow.Views.PartnersViews.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
        </i:EventTrigger>
        <!--<i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding ClosingCommand}" />
        </i:EventTrigger>-->
    </i:Interaction.Triggers>
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding AddCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu"
                     FontFamily="Times New Roman">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Edit" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Edit1.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.ContactsCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Contacts" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Contacts.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteCommand}"
                      CommandParameter="{Binding}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red"
                               Text="Delete" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Error.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Background="{StaticResource LinearGradientGray}">

            <TextBlock Style="{StaticResource TitleStyle}"
                       Text="Suppliers" />

            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TabControl Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}"
                       TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem Header="Tool"
                     IsSelected="True">
                <StackPanel Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,0"
                            Command="{Binding AddCommand}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="New">
                        <ImageSource>/Images/Icons/Add.png</ImageSource>
                    </Button>

                    <Button Padding="5,5,0,0"
                            Command="{Binding EditCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Edit">
                        <ImageSource>/Images/Icons/Edit1.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding ContactsCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Contacts">
                        <ImageSource>/Images/Icons/Contacts.png</ImageSource>
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding DeleteCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource ManagerSubTapsButtons}"
                            Tag="Delete">
                        <ImageSource>/Images/Icons/Error.png</ImageSource>
                    </Button>

                </StackPanel>
            </TabItem>

            <TabItem HorizontalAlignment="Right"
                     Header="Filters">
                <StackPanel Height="65"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBox Width="365"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="368"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding ArabicName, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="98"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="118"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="148"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding VATNumber, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="128"
                             Style="{StaticResource FilterInputStyle}"
                             Text="{Binding CR, UpdateSourceTrigger=PropertyChanged}" />

                    <Button Command="{Binding DeleteFilterCommand}"
                            Style="{StaticResource FilterButtonStyle}" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
            <Grid Grid.Row="1"
                  Background="LightGray">
                <StackPanel Margin="20,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource IndicationStyle}"
                               Text="Supplier: " />
                    <TextBlock Foreground="Black"
                               Style="{StaticResource IndicationStyle}"
                               Text="{Binding Indicator}" />
                </StackPanel>
            </Grid>

            <DataGrid ContextMenu="{StaticResource GridContextMenu}"
                      ItemsSource="{Binding ItemsCollection}"
                      SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                      Style="{StaticResource ViewDataGridStyle}">
                <DataGrid.InputBindings>
                    <MouseBinding Command="{Binding EditCommand}"
                                  CommandParameter="{Binding SelectedItem}"
                                  Gesture="LeftDoubleClick" />
                </DataGrid.InputBindings>
                <DataGrid.Resources>
                    <Style BasedOn="{StaticResource ViewRowsStyle}"
                           TargetType="{x:Type DataGridRow}">
                        <Setter Property="ContextMenu" Value="{StaticResource RowsContextMenu}" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Margin" Value="0,0,0,0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander Background="DarkGray"
                                                      Foreground="Black"
                                                      IsExpanded="True">
                                                <Expander.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Margin="5,0,5,0"
                                                                   FontWeight="Bold"
                                                                   Text="{Binding Path=Name}" />
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   FontWeight="Bold"
                                                                   Text="{Binding Path=ItemCount, StringFormat='({0})'}" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <ItemsPresenter />
                                                </Expander.Content>
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <DataGrid.Columns>

                    <DataGridTextColumn Width="369"
                                        Binding="{Binding Name}"
                                        ElementStyle="{StaticResource LeftColumnView}"
                                        Header="Name" />

                    <DataGridTextColumn Width="369"
                                        Binding="{Binding ArabicName}"
                                        ElementStyle="{StaticResource LeftColumnView}"
                                        Header="Name (Arabic)" />

                    <DataGridTextColumn Width="100"
                                        Binding="{Binding City}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="City" />

                    <DataGridTextColumn Width="120"
                                        Binding="{Binding Phone}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="Phone" />

                    <DataGridTextColumn Width="150"
                                        Binding="{Binding VATNumber}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="VAT Number" />

                    <DataGridTextColumn Width="153"
                                        Binding="{Binding CR}"
                                        ElementStyle="{StaticResource CenterColumnView}"
                                        Header="CR" />

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
