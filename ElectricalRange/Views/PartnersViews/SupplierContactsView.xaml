<UserControl x:Class="ProjectsNow.Views.PartnersViews.SupplierContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             mc:Ignorable="d" 
             Style="{StaticResource ViewStyle}">
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding AddCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Icons/Add.png" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu" FontFamily="Times New Roman">
            <MenuItem Command="{Binding 
                                RelativeSource=
                                {RelativeSource FindAncestor,AncestorType={x:Type DataGrid}}, 
                                Path= DataContext.AddCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Icons/Add.png" 
                           RenderOptions.BitmapScalingMode="HighQuality">
                    </Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding 
                                RelativeSource=
                                {RelativeSource FindAncestor,AncestorType={x:Type DataGrid}}, 
                                Path= DataContext.EditCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Edit"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Icons/Edit1.png" 
                           RenderOptions.BitmapScalingMode="HighQuality">
                    </Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding 
                                RelativeSource=
                                {RelativeSource FindAncestor,AncestorType={x:Type DataGrid}}, 
                                Path= DataContext.DeleteCommand}"
                      CommandParameter="{Binding}">
                <MenuItem.Header>
                    <TextBlock Text="Delete" 
                               Foreground="Red">
                    </TextBlock>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Icons/Error.png" 
                           RenderOptions.BitmapScalingMode="HighQuality">
                    </Image>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>
    <Grid>
        <Grid Background="{StaticResource LinearGradientGray}"/>
        <Border Height="550"
                Width="1000"
                Background="White"
                BorderThickness="1"
                BorderBrush="{StaticResource LinearGradientGray}">

            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Background="{StaticResource LinearGradientGray}">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CustomerData.Name}"
                           Margin="10,7.5,0,0"
                           Style="{StaticResource TitleStyle}">
                        </TextBlock>
                        <TextBlock Text="Contacts"
                           Margin="0,7.5"
                           Style="{StaticResource TitleStyle}">
                        </TextBlock>
                    </StackPanel>


                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                    </Grid.Effect>
                </Grid>

                <TabControl Style="{StaticResource ViewsTabControlStyle}">
                    <TabControl.Resources>
                        <Style TargetType="TabItem" BasedOn="{StaticResource TextItemStyle}"/>
                    </TabControl.Resources>

                    <TabItem Header="TabItem" Width="20" Visibility="Hidden"/>

                    <TabItem Header="Tools" IsSelected="True">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0">

                            <Button Tag="New" 
                                    FontSize="12"
                                    Padding="0,5,0,0"
                                    Command="{Binding AddCommand}"
                                    Style="{StaticResource ManagerSubTapsButtons}">
                                <ImageSource>/Images/Icons/Add.png</ImageSource>
                            </Button>

                            <Button Tag="Edit"
                                    FontSize="12"
                                    Padding="5,5,0,0"
                                    Command="{Binding EditCommand}"
                                    CommandParameter="{Binding SelectedItem}"
                                    Style="{StaticResource ManagerSubTapsButtons}">
                                <ImageSource>/Images/Icons/Edit1.png</ImageSource>
                            </Button>

                            <Button Tag="Delete" 
                                    Padding="0,5,0,0"
                                    FontSize="12"
                                    Command="{Binding DeleteCommand}"
                                    CommandParameter="{Binding SelectedItem}"
                                    Style="{StaticResource ManagerSubTapsButtons}">
                                <ImageSource>/Images/Icons/Error.png</ImageSource>
                            </Button>

                            <Button Tag="Save" 
                                    Padding="0,5,0,0"
                                    FontSize="12"
                                    Command="{Binding SaveCommand}"
                                    CommandParameter="{Binding SelectedItem}"
                                    Style="{StaticResource ManagerSubTapsButtons}">
                                <ImageSource>/Images/Icons/Save.png</ImageSource>
                            </Button>

                            <Button Tag="Cancel" 
                                    Padding="0,5,0,0"
                                    FontSize="12"
                                    Command="{Binding CancelCommand}"
                                    Style="{StaticResource ManagerSubTapsButtons}">
                                <ImageSource>/Images/Icons/Cancel.png</ImageSource>
                            </Button>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Filters" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Height="65" Margin="7,0,0,0">
                            <TextBox Width="248" 
                                     Text="{Binding ContactName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FilterInputStyle}">
                            </TextBox>
                            <TextBox Width="198" 
                                     Text="{Binding Job, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FilterInputStyle}">
                            </TextBox>
                            <Button Command="{Binding DeleteFilterCommand}"
                                    Style="{StaticResource FilterButtonStyle}">
                            </Button>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="489"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1"
                          Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                        </Grid.Effect>
                        <Grid Grid.Row="1"
                              Background="LightGray">
                            <StackPanel Orientation="Horizontal"
                                        Margin="20,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Contact: " Style="{StaticResource IndicationStyle}"/>
                                <TextBlock Text="{Binding Indicator}" Foreground="Black" Style="{StaticResource IndicationStyle}"/>
                            </StackPanel>
                        </Grid>

                        <c:LoadingControl Margin="0,30,0,0" DataContext="{Binding}" IsEnabled="{Binding IsWriting}"/>

                        <DataGrid SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                  ItemsSource="{Binding ItemsCollection}"
                                  ContextMenu="{StaticResource GridContextMenu}"
                                  Style="{StaticResource ViewDataGridStyle}">
                            <DataGrid.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" 
                                              Command="{Binding EidtCommand}"
                                              CommandParameter="{Binding SelectedItem}">
                                </MouseBinding>
                            </DataGrid.InputBindings>
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource ViewRowsStyle}">
                                    <Setter Property="ContextMenu" Value="{StaticResource RowsContextMenu}"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Expander IsExpanded="True" Background="DarkGray" Foreground="Black">
                                                            <Expander.Header>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock FontWeight="Bold" Text="{Binding Path=Name}" Margin="5,0,5,0" />
                                                                    <TextBlock FontWeight="Bold" Text="{Binding Path=ItemCount, StringFormat='({0})'}" HorizontalAlignment="Right"/>
                                                                </StackPanel>
                                                            </Expander.Header>
                                                            <Expander.Content>
                                                                <ItemsPresenter/>
                                                            </Expander.Content>
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </DataGrid.GroupStyle>

                            <DataGrid.Columns>

                                <DataGridTextColumn Width="250" 
                                                    Header="Name" 
                                                    Binding="{Binding Name}"
                                                    ElementStyle="{StaticResource LeftColumnView}">
                                </DataGridTextColumn>

                                <DataGridTextColumn Width="200" 
                                                    Header="Job" 
                                                    Binding="{Binding Job}"
                                                    ElementStyle="{StaticResource LeftColumnView}">
                                </DataGridTextColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.Resources>

                            <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="FontFamily" Value="Times New Roman"/>
                                <Setter Property="Foreground" Value="{StaticResource Blue}"/>
                                <Setter Property="Margin" Value="30,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>

                            <Style x:Key="InputStyle" BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}">
                                <Setter Property="IsEnabled" Value="{Binding IsWriting}"/>
                                <Setter Property="Width" Value="300"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="FontFamily" Value="Times New Roman"/>
                                <Setter Property="TextAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                            </Style>

                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Name" 
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Name}"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Mobile" 
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Mobile}" 
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Email" 
                                   Grid.Row="3"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Email}" 
                                 Grid.Row="3"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Position" 
                                   Grid.Row="4"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Job}" 
                                 Grid.Row="4"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Address" 
                                   Grid.Row="5"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Address}" 
                                 Grid.Row="5"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>

                        <TextBlock Text="Note" 
                                   Grid.Row="6"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}">
                        </TextBlock>
                        <TextBox Text="{Binding NewData.Note}" 
                                 Grid.Row="6"
                                 Grid.Column="1"
                                 Style="{StaticResource InputStyle}">
                        </TextBox>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
