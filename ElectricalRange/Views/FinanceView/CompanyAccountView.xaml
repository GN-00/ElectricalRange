<UserControl x:Class="ProjectsNow.Views.FinanceView.CompanyAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             mc:Ignorable="d" 
             Height="200"
             Width="600"
             BorderThickness="1"
             BorderBrush="{StaticResource Blue}"
             Style="{StaticResource ViewStyle}">
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Panel.ZIndex="1000" 
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Account"
                           Margin="10,7.5"
                           Style="{StaticResource TitleStyle}">
                </TextBlock>
            </StackPanel>

            <c:PopupControls/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>

            <Grid Background="White">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Grid.Effect>

                <StackPanel Orientation="Horizontal" 
                        Grid.Row="1"
                        Margin="10">
                    
                    <TextBlock Text="Name"  
                               FontSize="18"
                               Margin="5,0"
                               Foreground="{StaticResource Blue}"
                               VerticalAlignment="Center">
                    </TextBlock>

                    <TextBox Text="{Binding NewData.Name, UpdateSourceTrigger=PropertyChanged}" 
                             Width="300" 
                             TextAlignment="Left" 
                             Style="{StaticResource TextBoxStyle}"
                             VerticalAlignment="Center">
                    </TextBox>

                    <TextBlock Text="Type"  
                               FontSize="18"
                               Margin="25,0,10,0"
                               Foreground="{StaticResource Blue}"
                               VerticalAlignment="Center">
                    </TextBlock>

                    <ComboBox Width="130"
                              SelectedValuePath="Content"
                              SelectedValue="{Binding NewData.Type}"
                              Style="{StaticResource ComboBoxStyle}"
                              VerticalAlignment="Center">
                        <ComboBoxItem>Bank</ComboBoxItem>
                        <ComboBoxItem>Cash</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

            </Grid>

            <StackPanel Grid.Row="1"  
                    Margin="10"
                    Orientation="Horizontal"  
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">

                <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource OkViewButton}">
                </Button>

                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource CancelViewButton}">
                </Button>

            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
