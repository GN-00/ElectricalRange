<UserControl x:Class="ProjectsNow.Views.FinanceView.AccountTransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding AllCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="All" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Transactions.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding ReceiptsCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Receipts" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Add2.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding PaymentsCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Payments" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Remove2.png" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem Command="{Binding ExportCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Export" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Excel.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu"
                     FontFamily="Times New Roman">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AllCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="All" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Transactions.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.ReceiptsCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Receipts" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Add2.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.PaymentsCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Payments" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Remove2.png" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.ExportCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Export" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/GN.Base;component/Images/Icons/Excel.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <Style x:Key="YearsStyle"
               BasedOn="{StaticResource ComboBoxFlatStyle}"
               TargetType="{x:Type ComboBox}">
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="1,0,1,5" />
            <Setter Property="Background" Value="Black" />
        </Style>

        <Style x:Key="FilterInput"
               BasedOn="{StaticResource TextBoxFlatStyle}"
               TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="1,0,1,5" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.3"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TextBlock Style="{StaticResource TitleStyle}">
            <Run Text="{Binding Name}" />
            <Run Text="Transactions" />
        </TextBlock>

        <TabControl Style="{StaticResource ViewsTabControlStyle}">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource TextItemStyle}"
                       TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Width="20"
                     Header="TabItem"
                     Visibility="Hidden" />

            <TabItem x:Name="Tool"
                     Header="Tool"
                     IsSelected="True">
                <StackPanel Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <Button Padding="0,5,0,0"
                            Command="{Binding AllCommand}"
                            Style="{StaticResource SubTabButtonStyle}"
                            Tag="All"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Transactions.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding ReceiptsCommand}"
                            Style="{StaticResource SubTabButtonStyle}"
                            Tag="Receipt"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Add2.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding PaymentsCommand}"
                            Style="{StaticResource SubTabButtonStyle}"
                            Tag="Payment"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Remove2.png" />
                    </Button>

                    <Button Padding="0,5,0,0"
                            Command="{Binding ExportCommand}"
                            Style="{StaticResource SubTabButtonStyle}"
                            Tag="Export"
                            ToolTip="Add Items">
                        <Image Source="/GN.Base;component/Images/ERI/Excel.png" />
                    </Button>

                </StackPanel>
            </TabItem>

            <TabItem HorizontalAlignment="Right"
                     Header="Filters">
                <StackPanel Height="65"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBox Width="98"
                             Style="{StaticResource FilterInput}"
                             Text="{Binding DateInfo, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="298"
                             Style="{StaticResource FilterInput}"
                             Text="{Binding Client, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="118"
                             Style="{StaticResource FilterInput}"
                             Text="{Binding CodeInfo, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="356"
                             Style="{StaticResource FilterInput}"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="198"
                             Style="{StaticResource FilterInput}"
                             Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="88"
                             Style="{StaticResource FilterInput}"
                             Text="{Binding TypeInfo, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding DeleteFilterCommand}"
                            Style="{StaticResource FilterButton}" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="2"
                    Background="LightGray" />

            <DataGrid Margin="0"
                      ContextMenu="{StaticResource GridContextMenu}"
                      ItemsSource="{Binding ItemsView}"
                      SelectedIndex="{Binding SelectedIndex}"
                      SelectedItem="{Binding SelectedItem}"
                      Style="{StaticResource DataGridStyle}">
                <DataGrid.Resources>
                    <Style BasedOn="{StaticResource RowsStyle}"
                           TargetType="{x:Type DataGridRow}">
                        <Setter Property="ContextMenu" Value="{StaticResource RowsContextMenu}" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>

                    <DataGridTextColumn Width="150"
                                        Binding="{Binding DateInfo}"
                                        ElementStyle="{StaticResource CenterColumn}"
                                        Header="Date" />

                    <DataGridTextColumn Width="343"
                                        Binding="{Binding Client}"
                                        ElementStyle="{StaticResource LeftColumn}"
                                        Header="Client" />

                    <DataGridTextColumn Width="398"
                                        Binding="{Binding Description}"
                                        ElementStyle="{StaticResource LeftColumn}"
                                        Header="Description" />

                    <DataGridTextColumn Width="250"
                                        Binding="{Binding Amount, StringFormat=N2}"
                                        Header="Amount">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Receipt">
                                        <Setter Property="Foreground" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Payment">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="120"
                                        Binding="{Binding Type}"
                                        Header="Type">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Receipt">
                                        <Setter Property="Foreground" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Payment">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="900" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Margin="10,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource NavigationStyle}"
                               Text="Transactions: " />
                    <TextBlock Foreground="Black"
                               Style="{StaticResource NavigationStyle}"
                               Text="{Binding Indicator}" />
                </StackPanel>

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource NavigationStyle}"
                               Text="Total: " />
                    <TextBlock Foreground="Black"
                               Style="{StaticResource NavigationStyle}"
                               Text="{Binding Total, StringFormat=N2}" />
                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
