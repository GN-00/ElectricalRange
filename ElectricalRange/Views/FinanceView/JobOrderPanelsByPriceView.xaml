<UserControl x:Class="ProjectsNow.Views.FinanceView.JobOrderPanelsByPriceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:ProjectsNow.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="950"
             Height="500"
             BorderBrush="{StaticResource Blue}"
             BorderThickness="1"
             Style="{StaticResource ViewStyle}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="GridContextMenu">
            <MenuItem Command="{Binding AddCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="RowsContextMenu"
                     FontFamily="Times New Roman">
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.AddCommand}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="New" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Add.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditCommand}"
                      CommandParameter="{Binding}"
                      Style="{StaticResource MenuItemStyle}">
                <MenuItem.Header>
                    <TextBlock Text="Edit" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Edit1.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteCommand}"
                      CommandParameter="{Binding}">
                <MenuItem.Header>
                    <TextBlock Foreground="Red"
                               Text="Delete" />
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Images/Icons/Error.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </UserControl.Resources>

    <Grid Background="{StaticResource LinearGradientGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Panel.ZIndex="1000"
              Background="{StaticResource LinearGradientGray}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5"
                                  Direction="-90"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10,7.5"
                           Style="{StaticResource TitleStyle}"
                           Text="Panels" />
            </StackPanel>

            <c:PopupControls />

        </Grid>

        <Grid Grid.Row="1"
              Margin="10"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.5"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <Grid Grid.Row="1"
                      Background="LightGray">
                    <StackPanel Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IndicationStyle}"
                                   Text="Panel: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource IndicationStyle}"
                                   Text="{Binding Indicator}" />
                    </StackPanel>
                </Grid>

                <DataGrid ContextMenu="{x:Null}"
                          ItemsSource="{Binding ItemsCollection}"
                          SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          Style="{StaticResource ViewDataGridStyle}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource ViewRowsStyle}" TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu" Value="{x:Null}" />
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>

                        <DataGridTextColumn Width="50"
                                            Binding="{Binding SN}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="SN" />

                        <DataGridTextColumn Width="200"
                                            Binding="{Binding Name}"
                                            ElementStyle="{StaticResource LeftColumnView}"
                                            Header="Name" />

                        <DataGridTextColumn Width="60"
                                            Binding="{Binding Qty}"
                                            ElementStyle="{StaticResource CenterColumnView}"
                                            Header="Qty" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="1"
                  Margin="10">
                <Grid.Resources>

                    <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Times New Roman" />
                        <Setter Property="Foreground" Value="{StaticResource Blue}" />
                        <Setter Property="Margin" Value="10,0,0,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>

                    <Style x:Key="InputStyle" BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}">
                        <Setter Property="Width" Value="150" />
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Times New Roman" />
                        <Setter Property="TextAlignment" Value="Left" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>

                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="Black"
                           Style="{StaticResource LabelStyle}"
                           Text="Details" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Description" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="400"
                         Style="{StaticResource InputStyle}"
                         Text="{Binding Description}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Arabic" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Width="400"
                         Style="{StaticResource InputStyle}"
                         Text="{Binding SelectedItem.ArabicName}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Invoicing Qty" />
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         IsEnabled="True"
                         Style="{StaticResource InputStyle}"
                         Text="{Binding SelectedItem.InvoicingQty, Mode=TwoWay}" />

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Invoiced" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         IsEnabled="False"
                         Style="{StaticResource InputStyle}"
                         Text="{Binding SelectedItem.Invoiced, Mode=OneWay}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Remaining" />
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         IsEnabled="False"
                         Style="{StaticResource InputStyle}"
                         Text="{Binding SelectedItem.Balance, Mode=OneWay}" />

                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Style="{StaticResource LabelStyle}"
                           Text="Invoicing" />
                <StackPanel Grid.Row="6"
                            Grid.Column="1"
                            Orientation="Horizontal">
                    <TextBox PreviewKeyDown="Invoicing_PreviewKeyDown"
                             Style="{StaticResource InputStyle}"
                             Text="{Binding Invoicing}" />
                    <Button Width="30"
                            Height="30"
                            Margin="20,0"
                            Command="{Binding PostCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Style="{StaticResource SubShadowButtons}">
                        <ImageSource>/Images/Icons/Post1.png</ImageSource>
                    </Button>
                </StackPanel>



            </Grid>
        </Grid>
    </Grid>

</UserControl>
