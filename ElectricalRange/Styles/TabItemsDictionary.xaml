    <Style x:Key="ImageTabStyle" TargetType="TabItem">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Border"
                            Margin="0,0"
                            BorderBrush="{StaticResource SecondaryBackground}"
                            BorderThickness="0,0,0,0"
                            CornerRadius="15,15,0,0">
                        <Image Name="Image"
                               Width="30"
                               Height="30"
                               Margin="5"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Source="{TemplateBinding Tag}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBackground}" />
                            <Setter TargetName="Border" Property="Border.Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="5"
                                                      Direction="-90"
                                                      Opacity="0.8"
                                                      ShadowDepth="1"
                                                      Color="Gray" />
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Image" Property="Height" Value="45" />
                            <Setter TargetName="Image" Property="Width" Value="45" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="Transparent" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TextTabStyle" TargetType="TabItem">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Border"
                            Margin="0,0"
                            BorderBrush="{StaticResource SecondaryBackground}"
                            BorderThickness="0,0,0,0"
                            CornerRadius="15,15,0,0">
                        <Image Name="Image"
                               Width="40"
                               Height="40"
                               Margin="5"
                               Source="{TemplateBinding Tag}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBackground}" />
                            <Setter TargetName="Border" Property="Border.Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="5"
                                                      Direction="-90"
                                                      Opacity="0.8"
                                                      ShadowDepth="1"
                                                      Color="Gray" />
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Image" Property="Height" Value="65" />
                            <Setter TargetName="Image" Property="Width" Value="65" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="Transparent" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TabItemStyle" TargetType="TabItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Border"
                            BorderBrush="White"
                            BorderThickness="0,0,0,0"
                            CornerRadius="5,5,0,0">
                        <ContentPresenter x:Name="ContentSite"
                                          Margin="10,0,10,0"
                                          VerticalAlignment="Center"
                                          ContentSource="Header" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBackground}" />
                            <Setter TargetName="Border" Property="TextElement.Foreground" Value="{StaticResource MyBlue}" />
                            <Setter TargetName="Border" Property="TextElement.FontSize" Value="18" />
                            <Setter TargetName="Border" Property="Border.Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="5"
                                                      Direction="-90"
                                                      Opacity="0.8"
                                                      ShadowDepth="1"
                                                      Color="Gray" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="Transparent" />
                            <Setter TargetName="Border" Property="TextElement.Foreground" Value="Black" />
                            <Setter TargetName="Border" Property="TextElement.FontSize" Value="15" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <ControlTemplate x:Key="GN.TabItemTemplete" TargetType="{x:Type TabItem}">
        <Border Name="Border" CornerRadius="5,5,0,0">
            <ContentPresenter x:Name="ContentSite"
                              Margin="10,0,10,0"
                              VerticalAlignment="Center"
                              ContentSource="Header" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{DynamicResource GN.Primary}" />
                <Setter TargetName="Border" Property="TextElement.Foreground" Value="{DynamicResource GN.Blue}" />
                <Setter TargetName="Border" Property="TextElement.FontSize" Value="18" />
                <Setter TargetName="Border" Property="TextElement.FontWeight" Value="Bold" />
                <Setter Property="Button.Effect" Value="{DynamicResource GN.Shadow}" />
            </Trigger>
            <Trigger Property="IsSelected" Value="False">
                <Setter TargetName="Border" Property="Background" Value="Transparent" />
                <Setter TargetName="Border" Property="TextElement.Foreground" Value="Black" />
                <Setter TargetName="Border" Property="TextElement.FontSize" Value="15" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="GN.TextTabItemStyle" TargetType="{x:Type TabItem}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template" Value="{StaticResource GN.TabItemTemplete}" />
    </Style>

</ResourceDictionary>