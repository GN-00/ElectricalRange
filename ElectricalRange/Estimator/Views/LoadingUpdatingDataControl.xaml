<UserControl x:Class="ProjectsNow.Estimator.Views.LoadingUpdatingDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:f="http://schemas.fontawesome.com/icons/"
             xmlns:fa="https://dsaladin.dev/products/fontawesome/wpf/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Panel.ZIndex="1000000"
             d:DesignHeight="675"
             d:DesignWidth="1300"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style TargetType="fa:FontAwesomeImage">
                <Setter Property="Visibility" Value="Visible" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Image">
                <Setter Property="Visibility" Value="Visible" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Visibility" Value="Visible" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="385" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="220" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.RowSpan="9"
              Grid.Column="0"
              Grid.ColumnSpan="5"
              Background="Black"
              Opacity="0.8" />

        <fa:FontAwesomeImage Grid.Row="1"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding GroupsUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="1"
               Grid.Column="1"
               IsEnabled="{Binding GroupsComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding GroupsUpdating}">
            <Run Text=": Group Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding GroupsComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Group Data Updating Complete." />
        </TextBlock>

        <fa:FontAwesomeImage Grid.Row="2"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding ItemsTypesUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="2"
               Grid.Column="1"
               IsEnabled="{Binding ItemsTypesComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding ItemsTypesUpdating}">
            <Run Text="{Binding GroupId}" /><Run Text=": Items Types Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="2"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding ItemsTypesComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Items Types Data Updating Complete." />
        </TextBlock>


        <fa:FontAwesomeImage Grid.Row="3"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding ItemsTypesLinksUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="3"
               Grid.Column="1"
               IsEnabled="{Binding ItemsTypesLinksComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="3"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding ItemsTypesLinksUpdating}">
            <Run Text="{Binding GroupId}" /><Run Text=": Items Types Links Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="3"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding ItemsTypesLinksComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Items Types Links Data Updating Complete." />
        </TextBlock>



        <fa:FontAwesomeImage Grid.Row="4"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding CategoriesUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="4"
               Grid.Column="1"
               IsEnabled="{Binding CategoriesComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="4"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding CategoriesUpdating}">
            <Run Text="{Binding GroupId}" /><Run Text=": Categories Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="4"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding CategoriesComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Categories Data Updating Complete." />
        </TextBlock>


        <fa:FontAwesomeImage Grid.Row="5"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding PropertiesUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="5"
               Grid.Column="1"
               IsEnabled="{Binding PropertiesComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="5"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding PropertiesUpdating}">
            <Run Text="{Binding GroupId}" /><Run Text=": Properties Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="5"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding PropertiesComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Properties Data Updating Complete." />
        </TextBlock>


        <fa:FontAwesomeImage Grid.Row="6"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding PropertiesLinksUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="6"
               Grid.Column="1"
               IsEnabled="{Binding PropertiesLinksComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="6"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding PropertiesLinksUpdating}">
            <Run Text="{Binding GroupId}" /><Run Text=": Properties Links Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="6"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding PropertiesLinksComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Properties Links Data Updating Complete." />
        </TextBlock>

        <fa:FontAwesomeImage Grid.Row="7"
                             Grid.Column="1"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             Icon="SolidGear"
                             IsEnabled="{Binding ItemsPropertiesUpdating}"
                             RenderTransform="{StaticResource Loading30Transform}"
                             Style="{StaticResource RotateStyle}" />
        <Image Grid.Row="7"
               Grid.Column="1"
               IsEnabled="{Binding ItemsPropertiesComplete}"
               Source="{StaticResource Accept}" />
        <TextBlock Grid.Row="7"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding ItemsPropertiesUpdating}">
            <Run Text="{Binding GroupId}" /><Run Text=": Items Properties Data Updating..." />
        </TextBlock>
        <TextBlock Grid.Row="7"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   IsEnabled="{Binding ItemsPropertiesComplete}">
            <Run Text="{Binding GroupId}" /><Run Text=": Items Properties Data Updating Complete." />
        </TextBlock>


    </Grid>
</UserControl>
