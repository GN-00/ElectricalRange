<UserControl x:Class="ProjectsNow.Controls.ViewControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             VerticalAlignment="Top"
             Panel.ZIndex="1000"
             mc:Ignorable="d">
    <Grid Height="40"
          Width="auto"
          HorizontalAlignment="Right"
          Background="Transparent"
          MouseDown="Drag_MouseMove">
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button>
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Width" Value="40" />
                        <Setter Property="Height" Value="40" />
                        <EventSetter Event="Click" Handler="Minimize_Click" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0,0,0,0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray"
                                            CornerRadius="0">
                                        <Image Margin="3"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/Minimize.png" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
            <ToggleButton x:Name="MaximizeButton"
                          Width="40"
                          Height="40"
                          Background="Transparent"
                          Click="Maximize_Click">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Gray">
                            <Image x:Name="MaximizeImage"
                                   Margin="3"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/Electrical Range;component/Images/Icons/Maximize.png" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                <Setter Property="Source" Value="/Electrical Range;component/Images/Icons/Maximize1.png" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!--  Hover effect  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="DarkGray" />
                            </Trigger>
                            <!--  Reset to transparent when not hovered  -->
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>


                </ToggleButton.Template>
            </ToggleButton>
            <Button Command="{Binding BackCommand}">
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#FF1FACE6" />
                        <Setter Property="Width" Value="40" />
                        <Setter Property="Height" Value="40" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray">
                                        <Image Margin="2"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/Back.png"
                                               Stretch="Fill" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFA0D9EF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding HomeCommand}">
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Purple" />
                        <Setter Property="Width" Value="40" />
                        <Setter Property="Height" Value="40" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray">
                                        <Image Margin="2"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/Home.png"
                                               Stretch="Fill" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="MediumPurple" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
            <Button>
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="DarkRed" />
                        <Setter Property="Width" Value="40" />
                        <Setter Property="Height" Value="40" />
                        <EventSetter Event="Click" Handler="Close_Click" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray">
                                        <Image Margin="3"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/close.png"
                                               Stretch="Fill" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
