<UserControl x:Class="ProjectsNow.Controls.WindowControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             VerticalAlignment="Top"
             Panel.ZIndex="1000"
             mc:Ignorable="d">
    <Grid Height="20"
          Background="Transparent"
          MouseDown="Drag_MouseMove">
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button>
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Width" Value="20" />
                        <Setter Property="Height" Value="20" />
                        <EventSetter Event="Click" Handler="Minimize_Click" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0,0,0,0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray"
                                            CornerRadius="0">
                                        <Image Margin="3"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/Minimize.png" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="MaximizeButton">
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Visibility" Value="Visible" />
                        <Setter Property="Width" Value="20" />
                        <Setter Property="Height" Value="20" />
                        <Setter Property="Background" Value="Transparent" />
                        <EventSetter Event="Click" Handler="Maximize_Click" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0,0,0,0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray"
                                            CornerRadius="0">
                                        <Image Margin="3"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/Maximize.png" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>

            <Button>
                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="DarkRed" />
                        <Setter Property="Width" Value="20" />
                        <Setter Property="Height" Value="20" />
                        <EventSetter Event="Click" Handler="Close_Click" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Margin="0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Gray">
                                        <Image Margin="3"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Source="/Electrical Range;component/Images/Icons/close.png"
                                               Stretch="Fill" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
