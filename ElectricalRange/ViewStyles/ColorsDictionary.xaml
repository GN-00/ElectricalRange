<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="ViewsFont">Times New Roman</FontFamily>
    <System:Double x:Key="ViewsFontSize">18</System:Double>
    <CornerRadius x:Key="ViewsRadius">1</CornerRadius>
    <Thickness x:Key="ViewsThickness">2</Thickness>
    <SolidColorBrush x:Key="ViewsForeground" Color="Black" />
    <SolidColorBrush x:Key="ViewsNormalBorder" Color="LightGray" />
    <SolidColorBrush x:Key="ViewsSelectedBorder" Color="LightBlue" />
    <SolidColorBrush x:Key="ViewsMouseOverBorder" Color="LightBlue" />

    <SolidColorBrush x:Key="ViewsPrimaryBackground" Color="#F5F5F5" />
    <SolidColorBrush x:Key="ViewsSecondaryBackground" Color="White" />

    <SolidColorBrush x:Key="Blue" Color="#FF376CDC" />
    <SolidColorBrush x:Key="Purple" Color="#FF9211E8" />

    <LinearGradientBrush x:Key="LinearGradientGray" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="LightGray" />
        <GradientStop Offset="0.5" Color="DarkGray" />
    </LinearGradientBrush>

</ResourceDictionary>