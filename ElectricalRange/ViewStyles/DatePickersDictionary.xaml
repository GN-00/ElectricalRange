<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="DatePickerCalendarViewsStyle"
        BasedOn="{StaticResource {x:Type Calendar}}"
        TargetType="{x:Type Calendar}" />

    <Style x:Key="DatePickerStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="IsTodayHighlighted" Value="True" />
        <Setter Property="SelectedDateFormat" Value="Short" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource ViewsForeground}" />
        <Setter Property="TextElement.FontSize" Value="{StaticResource ViewsFontSize}" />
        <Setter Property="TextElement.FontFamily" Value="{StaticResource ViewsFont}" />
        <Setter Property="CalendarStyle" Value="{DynamicResource DatePickerCalendarViewsStyle}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border
                        x:Name="Border"
                        Background="{StaticResource ViewsSecondaryBackground}"
                        BorderBrush="{StaticResource ViewsNormalBorder}"
                        BorderThickness="{StaticResource ViewsThickness}"
                        CornerRadius="{StaticResource ViewsRadius}">
                        <Grid
                            x:Name="PART_Root"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="24" />
                            </Grid.ColumnDefinitions>

                            <Grid
                                Grid.Column="1"
                                Height="20"
                                Margin="2">
                                <Border
                                    x:Name="ButtonArea"
                                    Grid.Column="1"
                                    Margin="0,3,0,0"
                                    BorderThickness="2"
                                    CornerRadius="3">
                                    <Border.Background>
                                        <SolidColorBrush Color="Transparent" />
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="Gray" />
                                    </Border.BorderBrush>
                                </Border>
                                <Border
                                    x:Name="ButtonArea1"
                                    Grid.Column="1"
                                    Height="7"
                                    Margin="0,3,0,0"
                                    VerticalAlignment="Top"
                                    CornerRadius="3,3,0,0">
                                    <Border.Background>
                                        <SolidColorBrush Color="Gray" />
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="Gray" />
                                    </Border.BorderBrush>
                                </Border>
                                <Border
                                    x:Name="ButtonArea2"
                                    Grid.Column="1"
                                    Width="4"
                                    Height="6"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Top"
                                    BorderBrush="White"
                                    BorderThickness="1"
                                    CornerRadius="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="Gray" />
                                    </Border.Background>
                                </Border>
                                <Border
                                    x:Name="ButtonArea3"
                                    Grid.Column="1"
                                    Width="4"
                                    Height="6"
                                    Margin="-10,0,0,0"
                                    VerticalAlignment="Top"
                                    BorderBrush="White"
                                    BorderThickness="1"
                                    CornerRadius="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="Gray" />
                                    </Border.Background>
                                </Border>
                                <Button x:Name="PART_Button" Grid.Column="1">
                                    <Button.Background>
                                        <SolidColorBrush Color="Transparent" />
                                    </Button.Background>
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Focusable" Value="False" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                            <DatePickerTextBox
                                x:Name="PART_TextBox"
                                Grid.Column="0"
                                Margin="2"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                FocusVisualStyle="{x:Null}"
                                Focusable="{TemplateBinding Focusable}"
                                Validation.ErrorTemplate="{x:Null}" />
                            <Grid
                                x:Name="PART_DisabledVisual"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                VerticalAlignment="Stretch"
                                IsHitTestVisible="False"
                                Opacity="0">
                                <Popup
                                    x:Name="PART_Popup"
                                    AllowsTransparency="True"
                                    Placement="Bottom"
                                    PlacementTarget="{Binding ElementName=PART_TextBox}"
                                    StaysOpen="False" />
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_DisabledVisual" Property="Opacity" Value="1" />
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ViewsSecondaryBackground}" />
                            <Setter TargetName="ButtonArea2" Property="BorderBrush" Value="Lightgray" />
                            <Setter TargetName="ButtonArea3" Property="BorderBrush" Value="Lightgray" />
                            <Setter TargetName="PART_TextBox" Property="Background" Value="{StaticResource ViewsSecondaryBackground}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="BorderBrush" Value="LightBlue" />
                            <Setter TargetName="ButtonArea" Property="BorderBrush" Value="LightBlue" />
                            <Setter TargetName="ButtonArea1" Property="Background" Value="LightBlue" />
                            <Setter TargetName="ButtonArea2" Property="Background" Value="LightBlue" />
                            <Setter TargetName="ButtonArea3" Property="Background" Value="LightBlue" />
                        </Trigger>
                        <DataTrigger Binding="{Binding ElementName=PART_TextBox, Path=IsFocused}" Value="true">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Red" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>