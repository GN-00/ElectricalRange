<Window
    x:Class="ProjectsNow.Windows.JobOrderWindows.SiteAcknowledgementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Terms &amp; Conditions"
    Width="970"
    Height="530"
    BorderBrush="DimGray"
    BorderThickness="1"
    Closing="Window_Closing"
    FontFamily="Times New Roman"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>

        <Style x:Key="TabStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Width" Value="130" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="InputStyle"
            BasedOn="{StaticResource TextBoxFlatStyle}"
            TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="InputComboBoxStyle"
            BasedOn="{StaticResource ComboBoxFlatStyle}"
            TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="InputStyleDatePicker"
            BasedOn="{StaticResource DatePickerFlatStyle}"
            TargetType="{x:Type DatePicker}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

    </Window.Resources>
    <Grid Background="#FFF1F1F1">

        <Image
            Width="80"
            Height="80"
            Margin="40,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="1000"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="/Images/Icons/PN.png" />

        <Grid
            Height="50"
            Margin="0,0,0,0"
            VerticalAlignment="Top"
            Background="#FFF1F1F1"
            MouseDown="Grid_MouseDown" />

        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Button
                x:Name="Minimize"
                Width="30"
                Height="20"
                Margin="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Minimize_Click">

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#FFF1F1F1" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Margin="0,0,0,0"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Gray"
                                        CornerRadius="0">
                                        <Image
                                            Margin="4"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Source="pack://application:,,,/Images/Icons/Minimize.png" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray" />
                            </Trigger>
                        </Style.Triggers>

                    </Style>

                </Button.Resources>
            </Button>

            <Button
                x:Name="CloseWindow"
                Width="30"
                Height="20"
                Margin="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="CloseWindow_Click">

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="DarkRed" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Margin="0"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Gray"
                                        CornerRadius="0">
                                        <Image
                                            Margin="5"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Source="pack://application:,,,/Images/Icons/close.png" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red" />
                            </Trigger>
                        </Style.Triggers>

                    </Style>

                </Button.Resources>
            </Button>

        </StackPanel>


        <Grid
            Height="425"
            Margin="136,0,0,0"
            VerticalAlignment="Center"
            Background="#FFF1F1F1">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="-90"
                    Opacity="0.3"
                    RenderingBias="Quality"
                    ShadowDepth="2" />
            </Grid.Effect>
        </Grid>

        <TabControl
            x:Name="Tabs"
            Height="425"
            Margin="5,0,0,0"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="Transparent"
            BorderThickness="0"
            TabStripPlacement="Left">

            <TabItem
                Height="40"
                Header="TabItem"
                Visibility="Hidden" />

            <TabItem
                x:Name="PaymentTermsTab"
                Height="50"
                VerticalAlignment="Top"
                Selector.IsSelected="True">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border
                                        Name="Border"
                                        BorderBrush="White"
                                        BorderThickness="0,0,0,0"
                                        CornerRadius="5,0,0,5">
                                        <TextBlock
                                            x:Name="TB"
                                            Style="{StaticResource TabStyle}"
                                            Text="Payment Terms" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red" />
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="5"
                                                        Direction="-90"
                                                        Opacity="0.8"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="False" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red" />
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <Border
                    Margin="10"
                    BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="5">
                    <StackPanel Margin="10,10,0,0" Orientation="Vertical">
                        <TextBlock
                            VerticalAlignment="Top"
                            FontSize="24"
                            FontStyle="Italic"
                            Foreground="#FF9211E8"
                            Text="Payment Terms:" />

                        <TabControl
                            Width="780"
                            Height="334"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Left"
                            Background="White"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Style="{StaticResource TabControlTab}">

                            <TabItem
                                Header="Standard Terms."
                                IsSelected="True"
                                Style="{StaticResource TabItemStyle}">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <ToggleButton
                                            x:Name="PaymentToggle1"
                                            Width="38"
                                            Height="20"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Checked="PaymentToggle_Checked"
                                            IsChecked="{Binding PaymentToggle1}"
                                            Style="{StaticResource SwitchTypeToggleButton}"
                                            Unchecked="ToggleButton_Unchecked" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="Blue"
                                            Text="Standard Terms. " />
                                    </StackPanel>

                                    <Border
                                        Margin="10"
                                        BorderBrush="Gray"
                                        BorderThickness="2"
                                        CornerRadius="5">
                                        <StackPanel Margin="10" Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    Width="205"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text="Down Payment " />
                                                <TextBox
                                                    x:Name="DownPayment"
                                                    Width="60"
                                                    LostFocus="Payment_LostFocus"
                                                    PreviewKeyDown="Payment_PreviewKeyDown"
                                                    Style="{StaticResource InputStyle}"
                                                    Text="{Binding DownPayment}"
                                                    TextAlignment="Center" />
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text=" %" />

                                                <ToggleButton
                                                    x:Name="InAdvanceToggle"
                                                    Width="38"
                                                    Height="20"
                                                    Margin="20,0,10,0"
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding InAdvanceToggle}"
                                                    Style="{StaticResource SwitchTypeToggleButton}" />

                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text="In  Advance" />


                                            </StackPanel>

                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    Width="205"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text="Before Delivery " />
                                                <TextBox
                                                    x:Name="BeforeDelivery"
                                                    Width="60"
                                                    LostFocus="Payment_LostFocus"
                                                    PreviewKeyDown="Payment_PreviewKeyDown"
                                                    Style="{StaticResource InputStyle}"
                                                    Text="{Binding BeforeDelivery}"
                                                    TextAlignment="Center" />
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text=" %" />
                                            </StackPanel>

                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    Width="205"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text="After Delivery " />
                                                <TextBox
                                                    x:Name="AfterDelivery"
                                                    Width="60"
                                                    LostFocus="Payment_LostFocus"
                                                    PreviewKeyDown="Payment_PreviewKeyDown"
                                                    Style="{StaticResource InputStyle}"
                                                    Text="{Binding AfterDelivery}"
                                                    TextAlignment="Center" />
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text=" %" />
                                            </StackPanel>

                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    Width="205"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text="Testing &amp; Commissioning " />
                                                <TextBox
                                                    x:Name="Testing"
                                                    Width="60"
                                                    LostFocus="Payment_LostFocus"
                                                    PreviewKeyDown="Payment_PreviewKeyDown"
                                                    Style="{StaticResource InputStyle}"
                                                    Text="{Binding Testing}"
                                                    TextAlignment="Center" />
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Foreground="Blue"
                                                    Text=" %" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </TabItem>

                            <TabItem Header="Other Terms:" Style="{StaticResource TabItemStyle}">
                                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                    <StackPanel
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <ToggleButton
                                            x:Name="PaymentToggle2"
                                            Width="38"
                                            Height="20"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Checked="PaymentToggle_Checked"
                                            IsChecked="{Binding PaymentToggle2}"
                                            Style="{StaticResource SwitchTypeToggleButton}"
                                            Unchecked="ToggleButton_Unchecked" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="Blue"
                                            Text="Other Terms: " />
                                    </StackPanel>

                                    <TextBox
                                        x:Name="PaymentOther"
                                        Width="750"
                                        MinHeight="30"
                                        MaxHeight="180"
                                        Margin="10,10"
                                        VerticalContentAlignment="Top"
                                        AcceptsReturn="True"
                                        Style="{StaticResource InputStyle}"
                                        Text="{Binding PaymentOther}"
                                        TextAlignment="Left"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </TabItem>
                        </TabControl>



                    </StackPanel>
                </Border>

            </TabItem>

            <TabItem x:Name="ShopDrawingTab" Height="50">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border
                                        Name="Border"
                                        BorderBrush="White"
                                        BorderThickness="0,0,0,0"
                                        CornerRadius="5,0,0,5">
                                        <TextBlock
                                            x:Name="TB"
                                            Style="{StaticResource TabStyle}"
                                            Text="Shop Drawing" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red" />
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="5"
                                                        Direction="-90"
                                                        Opacity="0.8"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="False" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red" />
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <Grid>
                    <StackPanel Orientation="Vertical">

                        <Border
                            Height="400"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="2"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="10,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="Blue"
                                    Text="Will Be Ready: " />
                                <StackPanel
                                    Margin="30,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <ToggleButton
                                        x:Name="DrawingToggle1"
                                        Width="38"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Checked="DrawingToggle_Checked"
                                        IsChecked="{Binding DrawingToggle1}"
                                        Style="{StaticResource SwitchTypeToggleButton}"
                                        Unchecked="ToggleButton_Unchecked" />
                                    <DatePicker
                                        x:Name="DrawingDate"
                                        Width="155"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        IsEnabled="False"
                                        SelectedDate="{Binding DrawingDate}"
                                        Style="{StaticResource InputStyleDatePicker}" />
                                </StackPanel>
                                <StackPanel
                                    Margin="30,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <ToggleButton
                                        x:Name="DrawingToggle2"
                                        Width="38"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Checked="DrawingToggle_Checked"
                                        IsChecked="{Binding DrawingToggle2}"
                                        Style="{StaticResource SwitchTypeToggleButton}"
                                        Unchecked="ToggleButton_Unchecked" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="As Soon As Possible. " />
                                </StackPanel>
                                <StackPanel
                                    Margin="30,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <ToggleButton
                                        x:Name="DrawingToggle3"
                                        Width="38"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Checked="DrawingToggle_Checked"
                                        IsChecked="{Binding DrawingToggle3}"
                                        Style="{StaticResource SwitchTypeToggleButton}"
                                        Unchecked="ToggleButton_Unchecked" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="In  " />
                                    <TextBox
                                        x:Name="DrawingPeriod"
                                        Width="60"
                                        Margin="0,0,10,0"
                                        IsEnabled="False"
                                        PreviewKeyDown="Period_PreviewKeyDown"
                                        Style="{StaticResource InputStyle}"
                                        Text="{Binding DrawingPeriod}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="Unit  " />
                                    <ComboBox
                                        x:Name="DrawingUnit1"
                                        Width="80"
                                        Margin="0,0,10,0"
                                        IsEnabled="False"
                                        Style="{StaticResource InputComboBoxStyle}"
                                        Text="{Binding DrawingUnit1}">
                                        <ComboBoxItem>Day</ComboBoxItem>
                                        <ComboBoxItem>Week</ComboBoxItem>
                                        <ComboBoxItem>Month</ComboBoxItem>
                                    </ComboBox>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="After  " />
                                    <ComboBox
                                        x:Name="DrawingCondition1"
                                        Width="180"
                                        Style="{StaticResource InputComboBoxStyle}"
                                        Text="{Binding DrawingCondition1}">
                                        <ComboBoxItem>Advance Payment</ComboBoxItem>
                                        <ComboBoxItem>Purchase Order</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel
                                    Margin="30,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <ToggleButton
                                        x:Name="DrawingToggle4"
                                        Width="38"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Checked="DrawingToggle_Checked"
                                        IsChecked="{Binding DrawingToggle4}"
                                        Style="{StaticResource SwitchTypeToggleButton}"
                                        Unchecked="ToggleButton_Unchecked" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="In  " />
                                    <TextBox
                                        x:Name="DrawingStartPeriod"
                                        Width="60"
                                        Margin="0,0,10,0"
                                        PreviewKeyDown="Period_PreviewKeyDown"
                                        Style="{StaticResource InputStyle}"
                                        Text="{Binding DrawingStartPeriod}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="to  " />
                                    <TextBox
                                        x:Name="DrawingEndPeriod"
                                        Width="60"
                                        Margin="0,0,10,0"
                                        PreviewKeyDown="Period_PreviewKeyDown"
                                        Style="{StaticResource InputStyle}"
                                        Text="{Binding DrawingEndPeriod}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="Unit  " />
                                    <ComboBox
                                        x:Name="DrawingUnit2"
                                        Width="80"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource InputComboBoxStyle}"
                                        Text="{Binding DrawingUnit2}">
                                        <ComboBoxItem>Day</ComboBoxItem>
                                        <ComboBoxItem>Week</ComboBoxItem>
                                        <ComboBoxItem>Month</ComboBoxItem>
                                    </ComboBox>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="After  " />
                                    <ComboBox
                                        x:Name="DrawingCondition2"
                                        Width="180"
                                        Style="{StaticResource InputComboBoxStyle}"
                                        Text="{Binding DrawingCondition2}">
                                        <ComboBoxItem>Advance Payment</ComboBoxItem>
                                        <ComboBoxItem>Purchase Order</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel
                                    Margin="30,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <ToggleButton
                                        x:Name="DrawingToggle5"
                                        Width="38"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Checked="DrawingToggle_Checked"
                                        IsChecked="{Binding DrawingToggle5}"
                                        Style="{StaticResource SwitchTypeToggleButton}"
                                        Unchecked="ToggleButton_Unchecked" />
                                    <TextBox
                                        x:Name="DrawingOther"
                                        Width="545"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource InputStyle}"
                                        Text="{Binding DrawingOther}"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>

            </TabItem>

            <TabItem x:Name="DeliveryTab" Height="50">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border
                                        Name="Border"
                                        BorderBrush="White"
                                        BorderThickness="0,0,0,0"
                                        CornerRadius="5,0,0,5">
                                        <TextBlock
                                            x:Name="TB"
                                            Style="{StaticResource TabStyle}"
                                            Text="Delivery &amp; Warranty" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red" />
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="5"
                                                        Direction="-90"
                                                        Opacity="0.8"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="False" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red" />
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <StackPanel Orientation="Vertical">

                    <Border
                        Height="400"
                        Margin="10"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="10,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Foreground="Blue"
                                Text="Will Be Ready: " />
                            <StackPanel
                                Margin="30,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <ToggleButton
                                    x:Name="DeliveryToggle1"
                                    Width="38"
                                    Height="20"
