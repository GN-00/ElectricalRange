<Window x:Class="ProjectsNow.Windows.JobOrderWindows.Panels_Delivery_Windows.QtyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Select Qty"
        Width="245"
        Height="195"
        BorderBrush="DimGray"
        BorderThickness="1"
        Loaded="Window_Loaded"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>

        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource MyBlue}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Width" Value="90" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="FontFamily" Value="Times New Roman" />
        </Style>

        <Style x:Key="NumbersStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="Times New Roman" />
        </Style>

    </Window.Resources>
    <Border BorderBrush="DimGray"
            BorderThickness="2">
        <Grid x:Name="PopupGrid"
              Background="#FFF1F1F1">
            <Grid Margin="0,0,0,45"
                  Background="White">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="-90"
                                      Opacity="0.3"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Grid.Effect>
                <Grid Height="20"
                      VerticalAlignment="Top"
                      Background="Transparent"
                      MouseDown="Grid_MouseDown" />

                <TextBlock Margin="20,10"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Panel.ZIndex="1000"
                           FontFamily="Times New Roman"
                           FontSize="32"
                           FontStyle="Italic"
                           Foreground="#FF9211E8"
                           Text="Deliver" />
                <StackPanel Margin="25,50,10,10"
                            Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Panels: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource NumbersStyle}"
                                   Text="{Binding PanelQty}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Delivered: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource NumbersStyle}"
                                   Text="{Binding DeliveredQty}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Remaining: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource NumbersStyle}"
                                   Text="{Binding NotDeliveredQty}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource LabelStyle}"
                                   Text="Ready: " />
                        <TextBlock Foreground="Black"
                                   Style="{StaticResource NumbersStyle}"
                                   Text="{Binding ReadyToDeliverQty}" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <StackPanel Margin="10,10,0,6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center"
                           Style="{StaticResource LabelStyle}"
                           Text="Deliver " />
                <TextBox x:Name="PanelToDeliveryInput"
                         Width="60"
                         FontFamily="Times New Roman"
                         FontSize="18"
                         FontWeight="Bold"
                         LostFocus="PanelToDeliveryInput_LostFocus"
                         PreviewKeyDown="PanelToDeliveryInput_PreviewKeyDown"
                         Style="{StaticResource TextBoxFlatStyle}"
                         TextAlignment="Center" />
                <Button Width="30"
                        Height="30"
                        Margin="5,0"
                        Click="Deliver_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Gray" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Content" Value="Save" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontFamily" Value="Times New Roman" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Margin="0,0,0,0"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Gray"
                                                CornerRadius="5">
                                            <Image x:Name="ButtonImage"
                                                   Margin="2.5"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   Source="/Images/Icons/Save.png" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGray" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="Cancel"
                        Width="30"
                        Height="30"
                        Click="Cancel_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="DarkRed" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Content" Value="Cancel" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontFamily" Value="Times New Roman" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Margin="0,0,0,0"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Gray"
                                                CornerRadius="5">
                                            <Image x:Name="ButtonImage"
                                                   Margin="5"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   Source="/Images/Icons/Error.png" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
