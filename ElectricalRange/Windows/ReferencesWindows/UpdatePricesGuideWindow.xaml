<Window x:Class="ProjectsNow.Windows.ReferencesWindows.UpdatePricesGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:ProjectsNow.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="References"
        Width="280"
        Height="200"
        BorderBrush="DimGray"
        BorderThickness="1"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image Height="150"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="/Images/Icons/Guide1.png" />


        <TextBlock Grid.Row="1"
                   Margin="10,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Text="• The table should be like this arrangements." />

        <StackPanel Grid.Row="2"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="• Data " />
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="Red"
                       Text="type " />
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="should be " />
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="Red"
                       Text="'Text'. " />
        </StackPanel>


        <Button Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Button_Click"
                Style="{StaticResource CloseViewButton}" />
    </Grid>
</Window>
