<UserControl x:Class="ProjectsNow.Printing.Purchase.PurchaseOrderForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="21cm"
             Height="29.7cm"
             FontFamily="Calibri (Body)"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid Margin="20,100,20,20" Background="White">
        <StackPanel Width="7.5cm"
                    Margin="0,0.5cm,0.5cm,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
            <TextBlock HorizontalAlignment="Right"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#4f81bd"
                       Text="PURCHASE" />
            <TextBlock HorizontalAlignment="Right"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#4f81bd"
                       Text="ORDER" />
            <TextBlock Background="#4f81bd"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="DATE"
                       TextAlignment="Center" />
            <TextBlock HorizontalAlignment="Center"
                       FontSize="16"
                       Text="{Binding CompanyPOData.Date, StringFormat=dd/MM/yyyy}" />

            <TextBlock Background="#4f81bd"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="PURCHASE ORDER NO."
                       TextAlignment="Center" />
            <TextBlock HorizontalAlignment="Center"
                       FontSize="16"
                       Text="{Binding CompanyPOData.Code}" />

            <TextBlock Background="#4f81bd"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="PROJECT CODE"
                       TextAlignment="Center" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock FontSize="16" Text="JO. ">
                    <TextBlock.Resources>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CompanyPOData.JobOrderCode}" Value="Stock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Resources>
                </TextBlock>
                <TextBlock FontSize="16" Text="{Binding CompanyPOData.JobOrderCode}" />
            </StackPanel>
        </StackPanel>

        <Grid Margin="0.5cm,5.5cm,0.5cm,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7cm" />
                <ColumnDefinition />
                <ColumnDefinition Width="7.5cm" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <StackPanel Background="#4f81bd" Orientation="Horizontal">
                    <TextBlock FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               Text=" VENDOR: " />
                    <TextBlock FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="{Binding CompanyPOData.QuotationCode}" />
                </StackPanel>
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="{Binding CompanyPOData.SupplierName}" />
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           Text="{Binding CompanyPOData.SupplierAttention}" />
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           Text="{Binding CompanyPOData.SupplierVATNumberInfo}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical">
                <TextBlock Background="#4f81bd"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Text=" DELIVERY TO: " />
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="{Binding CompanyPOData.DeliverToPlace}" />
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           Text="{Binding CompanyPOData.DeliverToPerson}" />
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           Text="{Binding CompanyPOData.CompanyVATNumberInfo}" />
            </StackPanel>
        </Grid>

        <StackPanel Margin="0.5cm,8.2cm,0.5cm,0"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
            <TextBlock HorizontalAlignment="Left"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Gentlemen," />
            <TextBlock HorizontalAlignment="Left"
                       FontSize="16"
                       Text="Thank you for your quotation." />
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CompanyPOData.CompanyName}" Value="ER-PCAPS">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontSize="16"
                           FontWeight="Bold"
                           Foreground="Red"
                           Text="E" />
                <TextBlock FontSize="16"
                           FontWeight="Bold"
                           Foreground="#4f81bd"
                           Text="R - PCAPS  " />
                <TextBlock FontSize="16" Text="are pleased to place an order with your company for the below item(s) " />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CompanyPOData.CompanyName}" Value="ER-PCAPS">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontSize="16"
                           FontWeight="Bold"
                           Foreground="#4f81bd"
                           Text="{Binding CompanyPOData.CompanyName}" />
                <TextBlock FontSize="16" Text=" are pleased to place an order with your company for the below item(s) " />
            </StackPanel>
            <TextBlock FontSize="16" Text="codes/description; " />

            <Grid x:Name="ItemsTable">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6cm" />

                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />

                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".98cm" />
                    <!--  No.  -->
                    <ColumnDefinition Width="2.6cm" />
                    <!--  Item Code  -->
                    <ColumnDefinition Width="2.8cm" />
                    <!--  Supplier Code (NEW)  -->
                    <ColumnDefinition Width="220" />
                    <!--  Description (shifted from 2 -> 3)  -->
                    <ColumnDefinition Width="1.8cm" />
                    <!--  Qty (shifted 3 -> 4)  -->
                    <ColumnDefinition Width="2.2cm" />
                    <!--  U/Price (shifted 4 -> 5)  -->
                    <ColumnDefinition Width="2.7cm" />
                    <!--  T/Price (shifted 5 -> 6)  -->
                </Grid.ColumnDefinitions>


