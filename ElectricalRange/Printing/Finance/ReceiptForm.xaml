<UserControl x:Class="ProjectsNow.Printing.Finance.ReceiptForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             FontFamily="Calibri (Body)"
             Height="29.7cm" 
             Width="21cm">
    <Grid Background="White">
        <Grid Margin="20,150,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Code}"
                           FontSize="34"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="1"
                           Text="Receipt"
                           FontSize="34"
                           FontWeight="Bold"
                           VerticalAlignment="Center">
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="215"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="3"
                        Grid.RowSpan="4"
                        BorderBrush="Black" 
                        BorderThickness="1"
                        HorizontalAlignment="Center">
                </Border>

                <TextBlock Text="{Binding Name}"
                           Grid.ColumnSpan="2"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center">
                </TextBlock>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            Grid.ColumnSpan="2">
                    <TextBlock Text="VAT# "
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                    </TextBlock>

                    <TextBlock Text="{Binding VATNumber}"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                    </TextBlock>
                </StackPanel>



                <StackPanel Grid.Row="0"
                            Grid.Column="2"
                            Grid.RowSpan="2"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Date"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                    </TextBlock>
                    <TextBlock Text="{Binding Date, StringFormat= dd/MM/yyyy}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="2"
                            Grid.Column="2"
                            Grid.RowSpan="2"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Reference"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                    </TextBlock>
                    <TextBlock Text="{Binding JobOrderCode}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                    </TextBlock>
                </StackPanel>

                <TextBlock Text="ER-PCAPS"
                           Grid.Row="0"
                           Grid.Column="4"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center">
                </TextBlock>

                <TextBlock Text="شركة النطاق الكهربائي للمقاولات"
                           Grid.Row="1"
                           Grid.Column="4"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center">
                </TextBlock>

                <TextBlock Text="Jeddah"
                           Grid.Row="2"
                           Grid.Column="4"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center">
                </TextBlock>

                <StackPanel Grid.Row="3"
                            Grid.Column="4"
                            Orientation="Horizontal">
                    <TextBlock Text="VAT# "
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                    </TextBlock>
                    <TextBlock Text="{Binding CompanyVAT}"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                    </TextBlock>
                </StackPanel>


            </Grid>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <!--<TextBlock Text="Payment from "
                           FontSize="16"
                           FontWeight="Bold">
                </TextBlock>
                <TextBlock Text="{Binding Customer}"
                           FontSize="16"
                           FontWeight="Bold">
                </TextBlock>
                <TextBlock Text=" project "
                           FontSize="16"
                           FontWeight="Bold">
                </TextBlock>
                <TextBlock Text="{Binding JobOrderCode}"
                           FontSize="16"
                           FontWeight="Bold">
                </TextBlock>
                <TextBlock Text="."
                           FontSize="16"
                           FontWeight="Bold">
                </TextBlock>-->
            </StackPanel>

            <Grid Grid.Row="3"
                  Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="auto" MinHeight="40" MaxHeight="120"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="0"
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,1">
                    <TextBlock Text="Description"
                               Margin="10,0"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Row="0"
                        Grid.Column="2"
                        BorderBrush="Black" 
                        BorderThickness="0,1,1,1">
                    <TextBlock Text="Total"
                               Margin="10,0"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Row="1"
                        Grid.Column="0"
                        BorderBrush="Black" 
                        BorderThickness="1,0,1,1">
                    <TextBlock Text="{Binding Description}"
                               Margin="10,0"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Row="1"
                        Grid.Column="2"
                        BorderBrush="Black" 
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding Amount, StringFormat=N2}"
                               Margin="5,0"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Row="2"
                        Grid.Column="0"
                        BorderBrush="Black" 
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="Total"
                               Margin="10,0"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                    </TextBlock>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="2"
                        BorderBrush="Black" 
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding Amount, StringFormat=N2}"
                               Margin="5,0"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>

            </Grid>

            <!--<TextBlock Grid.Row="4"
                       Margin="0,10"
                       Text="{Binding AmountText}"
                       FontSize="16"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top">
            </TextBlock>-->

        </Grid>
    </Grid>
</UserControl>
