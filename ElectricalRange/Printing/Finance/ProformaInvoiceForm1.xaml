                </Border>
                <Border DataContext="{Binding PanelsData[1]}" Grid.Row="2" Grid.Column="3" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Grid.Row="0" Text="{Binding PanelEstimatedPrice, StringFormat=N2}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
                </Border>
                <Border DataContext="{Binding PanelsData[1]}" Grid.Row="2" Grid.Column="4" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Grid.Row="0" Text="{Binding PanelsEstimatedPrice, StringFormat=N2}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
                </Border>
                <Border DataContext="{Binding PanelsData[1]}" Grid.Row="2" Grid.Column="5" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Grid.Row="0" Text="{Binding PanelsVATValue, StringFormat=N2}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
                </Border>
                <Border DataContext="{Binding PanelsData[1]}" Grid.Row="2" Grid.Column="6" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Grid.Row="0" Text="{Binding PanelsFinalPrice, StringFormat=N2}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
