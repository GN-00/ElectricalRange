                </Border>

                <Border DataContext="{Binding PanelsData[5]}" Grid.Row="6" Grid.Column="0" BorderThickness="1,0,1,1" BorderBrush="Black" Background="#4f81bd">
                    <Grid>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
