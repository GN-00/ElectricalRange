            <Grid x:Name="Total2" Height="20" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="VAT " Foreground="Black" FontSize="14"/>
                    <TextBlock Text="{Binding VATPercentage, StringFormat=n0}" Foreground="Black" FontSize="14"/>
                    <TextBlock Text="%" Foreground="Black" FontSize="14"/>
                </StackPanel>
                <TextBlock Text="{Binding TotalVAT, StringFormat=N2}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="٪"  VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <TextBlock Text="{Binding ArabicVAT, StringFormat=N0}"  VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <TextBlock Text=" ضريبة القيمة المضافة"  VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                </StackPanel>
            </Grid>
            <Grid x:Name="Total3" Height="20" Margin="0,0,0,0">
                <TextBlock Text="Total Amount" VerticalAlignment="Center" Foreground="Black" FontSize="14"  />
                <TextBlock Text="{Binding TotalPrice, StringFormat=N2}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="14" />
                <TextBlock Text="الإجمالي" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"  />
            </Grid>

            <Grid x:Name="Total4" 
                  Height="20" 
                  Margin="0,0,0,0"
                  DataContext="{Binding InvoiceInformationData}">
                <Grid Visibility="{Binding DownPaymentVisibilty}">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontSize="14">
                    <!--<Run Text="{Binding DownPaymentPercentage}"/><Run Text="%"/>-->
                    <!--<Run Text="Down Payment"/>-->
                    <Run Text="Balance Payment"/>
                    </TextBlock>
                    <TextBlock Text="{Binding DownPaymentAmount, StringFormat=N2}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                        <!--<TextBlock Text="٪" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>-->
                        <!--<TextBlock Text="{Binding DownPaymentPercentageArabic, Mode=OneTime}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>-->
                        <!--<TextBlock Text=" دفعة أولى" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>-->
                        <TextBlock Text=" دفعة متبقية" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding AdvancePaymentVisibilty}">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontSize="14">
                    <Run Text="{Binding DownPaymentPercentage}"/><Run Text="%"/>
                    <Run Text="Advance Payment"/>
                    </TextBlock>
                    <TextBlock Text="{Binding DownPaymentAmount, StringFormat=N2}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                        <TextBlock Text="٪" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                        <TextBlock Text="{Binding DownPaymentPercentageArabic, Mode=OneTime}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                        <TextBlock Text=" دفعة مقدمة" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Grid>


            <Grid x:Name="Total5" Height="20" Margin="0,10,0,0">
                <TextBlock Text="{Binding textPrice}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black" FontSize="14"/>
            </Grid>
            <Grid x:Name="Total6" Height="20" Margin="0,0,0,0">
                <TextBlock Text="{Binding textPriceArabic}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black" FontSize="14"/>
            </Grid>

            <Grid x:Name="Total7" 
                  Margin="60,60"
                  Height="20"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Right">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Times New Roman"/>
                    </Style>
                </Grid.Resources>
                <TextBlock Text="Signature"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="Black" FontSize="18" FontWeight="Bold"/>
            </Grid>

        </StackPanel>

        <Grid Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Margin="0,0,0,50">
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Page: " FontSize="14" FontWeight="Bold"/>
                <TextBlock Text="{Binding Page}" FontSize="14" FontWeight="Bold"/>
                <TextBlock Text=" / " FontSize="14"/>
                <TextBlock Text="{Binding Pages}" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
