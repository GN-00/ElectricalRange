<UserControl x:Class="ProjectsNow.Printing.Finance.NotificationForReceiptForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="21cm"
             Height="29.7cm"
             FontFamily="Calibri (Body)"
             mc:Ignorable="d">
    <Grid Background="White">
        <Image x:Name="BackgroundImage"
               Margin="-20"
               RenderOptions.BitmapScalingMode="HighQuality"
               Visibility="Collapsed" />

        <Grid Margin="60,200,60,60">
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="150" />
                <RowDefinition Height="120" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="100" />
                <RowDefinition Height="25" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#4f81bd"
                       Text="NOTIFICATION FOR RECEIPT"
                       TextDecorations="UnderLine" />

            <Grid Grid.Row="1"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Date" />
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="M/S" />
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Attention" />
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Quotation No." />
                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="PO No." />
                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Job Order No." />

                <Border Grid.Row="0"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,1">
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding Date, StringFormat='dd-MM-yyyy'}" />
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding Customer}" />
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding Attention}" />
                </Border>
                <Border Grid.Row="3"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding QuotationCode}" />
                </Border>
                <Border Grid.Row="4"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding PurchaseOrderNumber}" />
                </Border>
                <Border Grid.Row="5"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding JobOrderCode}" />
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Gentlemen," />
                <TextBlock Grid.Row="1"
                           Margin="10,5"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="     As regards to the above-mentioned information, we would like to kindly inform you that remaining panel(s) from the project are ready to deliver."
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="2"
                           Margin="0,10"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Text="Project Details:"
                           TextDecorations="UnderLine" />
            </Grid>

            <!--  Max Height 400  -->
            <Grid x:Name="PanelsList"
                  Grid.Row="3"
                  Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="0" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="0"
                        Background="#4f81bd"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               Text="S.No." />
                </Border>
                <Border Grid.Row="0"
                        Grid.Column="1"
                        Background="#4f81bd"
                        BorderBrush="Black"
                        BorderThickness="0,1,1,1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               Text="Project Details" />
                </Border>
                <Border Grid.Row="0"
                        Grid.Column="2"
                        Background="#4f81bd"
                        BorderBrush="Black"
                        BorderThickness="0,1,1,1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               Text="Qty" />
                </Border>

            </Grid>

            <TextBlock Grid.Row="4"
                       VerticalAlignment="Center"
                       FontSize="16"
                       TextWrapping="Wrap">
                <Run Text="Kindly arrange the payment as soon as possible," />
                <Run FontWeight="Bold"
                     Text="SR" />
                <Run FontWeight="Bold"
                     Text="{Binding Payment, Mode=OneWay, StringFormat=N2}" />
                <Run FontWeight="Bold"
                     Text="(" /><Run FontWeight="Bold"
                     Text="{Binding PaymentText, Mode=OneWay}" /><Run FontWeight="Bold"
                     Text=")" />
                <Run Text="with VAT, for the necessary invoices and other related documents for delivery you can receive from the undersigned after receiving your payment." />
            </TextBlock>

            <TextBlock Grid.Row="5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Text="Your cooperation in this regards will be highly appreciated, thank you." />

            <Grid Grid.Row="6"
                  Margin="0,60,0,0"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Regards;" />
                <TextBlock Grid.Row="2"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Project Engineer" />

            </Grid>
        </Grid>
    </Grid>
</UserControl>
