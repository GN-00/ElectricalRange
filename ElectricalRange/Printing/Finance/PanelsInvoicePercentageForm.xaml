<UserControl x:Class="ProjectsNow.Printing.Finance.PanelsInvoicePercentageForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="21cm"
             Height="29.7cm"
             FontFamily="Calibri (Body)"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid Margin="20"
          Background="White">
        <Image x:Name="BackgroundImage"
               Margin="-20"
               RenderOptions.BitmapScalingMode="HighQuality"
               Visibility="Collapsed" />

        <StackPanel Orientation="Vertical">
            <Grid Height="21"
                  Margin="15,80,15,0"
                  DataContext="{Binding InvoiceData}">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="14"
                               Foreground="#4f81bd"
                               Text="" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="14"
                               Foreground="#4f81bd"
                               Text="" />
                </StackPanel>
            </Grid>
            <Grid Margin="0,10,0,0"
                  DataContext="{Binding InvoiceData}">
                <TextBlock x:Name="FormName"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="26"
                           Foreground="#4f81bd"
                           Text="VAT INVOICE" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="26"
                           Foreground="Black"
                           Text="{Binding InvoiceNumber}" />
                <TextBlock x:Name="FormArabicName"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="26"
                           Foreground="#4f81bd"
                           Text="فاتورة ضريبية" />
            </Grid>
            <StackPanel x:Name="DetailsArea"
                        Orientation="Vertical"
                        Visibility="Collapsed">
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="Date" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding Date, StringFormat=yyyy-MM-dd}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="التاريخ" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="J.O#" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding JobOrderCode}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="رقم أمر العمل" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="P.O #" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding PurchaseOrderNumber}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="رقم أمر الشراء" />
                </Grid>
                <Grid Height="20"
                      Margin="0,10,0,0">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#4f81bd"
                               Text="BILL TO " />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#4f81bd"
                               Text="فاتورة الى" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="M/s" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding CustomerNameInfo}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="السادة" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="Attention" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding Attention}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="عناية" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="Project " />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
