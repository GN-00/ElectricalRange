                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="مشروع" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="Address" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding Address}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="العنون" />
                </Grid>
                <Grid Height="20"
                      Margin="0,0,0,0"
                      DataContext="{Binding InvoiceData}">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="VAT #" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding CustomerVAT}" />
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="الضريبي الرقم" />
                </Grid>

