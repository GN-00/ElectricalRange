                        BorderThickness="0,0,1,1">
                    <TextBlock Margin="5,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Text="{Binding GrossPrice, StringFormat=N2}" />
                </Border>

            </Grid>

            <Grid x:Name="Total1"
                  Height="20"
                  Margin="0,15,0,0">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="Amount Before VAT" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="{Binding NetPrice, StringFormat=N2}" />
                <TextBlock HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="الإجمالي" />
            </Grid>
            <Grid x:Name="Total2"
                  Height="20"
                  Margin="0,0,0,0">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="14"
                               Foreground="Black"
                               Text="VAT " />
                    <TextBlock FontSize="14"
                               Foreground="Black"
                               Text="{Binding VATPercentage, StringFormat=N0}" />
                    <TextBlock FontSize="14"
                               Foreground="Black"
                               Text="%" />
                </StackPanel>
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="{Binding VATValue, StringFormat=N2}" />
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="٪" />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="{Binding ArabicVAT}" />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Black"
                               Text="  ضريبة القيمة المضافة" />
                </StackPanel>
            </Grid>
            <Grid x:Name="Total3"
                  Height="20"
                  Margin="0,0,0,0">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="Net Amount" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="{Binding GrossPrice, StringFormat=N2}" />
                <TextBlock HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Black"
                           Text="الإجمالي شامل قيمة الضريبة المضاف" />
            </Grid>

            <Grid x:Name="Total4"
                  Height="20"
                  Margin="0,10,0,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="Black"
                           Text="{Binding textPrice}" />
            </Grid>
            <Grid x:Name="Total5"
                  Height="20"
                  Margin="0,0,0,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="Black"
                           Text="{Binding textPriceArabic}" />
            </Grid>
        </StackPanel>

        <Grid x:Name="Total6"
              Margin="0,0,0,80"
              VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Times New Roman" />
                </Style>
            </Grid.Resources>

            <TextBlock Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       Text="Signature" />
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       Text="Stamp" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       Text="QR" />
            <Image x:Name="QR"
                   Grid.Row="1"
                   Grid.Column="2"
                   Width="140"
                   Height="140"
                   Margin="0,0,0,20"
                   RenderOptions.BitmapScalingMode="HighQuality" />
        </Grid>

        <Grid Height="20"
              Margin="0,0,0,50"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom">
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock FontSize="14"
                           FontWeight="Bold"
                           Text="Page: " />
                <TextBlock FontSize="14"
                           FontWeight="Bold"
                           Text="{Binding Page}" />
                <TextBlock FontSize="14"
                           Text=" / " />
                <TextBlock FontSize="14"
                           FontWeight="Bold"
                           Text="{Binding Pages}" />
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
