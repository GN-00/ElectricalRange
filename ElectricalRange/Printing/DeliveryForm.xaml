<UserControl x:Class="ProjectsNow.Printing.DeliveryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             FontFamily="Calibri (Body)"
             Height="29.7cm" 
             Width="21cm">
    <Grid Background="White">
        <Image x:Name="BackgroundImage" RenderOptions.BitmapScalingMode="HighQuality" Visibility="Collapsed"/>

        <Grid Margin="20,20,20,1.5cm">

            <Grid Margin="0,100,1.5cm,0"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Right"
                  DataContext="{Binding DeliveryInfromation}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3.6cm"/>
                    <ColumnDefinition MinWidth="4.5cm" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Row="0"
                         Grid.Column="1"
                         Margin="5"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center">
                    <TextBlock Text="DELIVERY NOTE" FontSize="26" TextDecorations="UnderLine" FontStretch="Expanded" Foreground="#4f81bd" FontWeight="Bold" />
                </Viewbox>

                <TextBlock Text="Date" 
                           Grid.Row="1"
                           FontSize="16" 
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBlock Text="Job Order No." 
                           Grid.Row="2"
                           FontSize="16" 
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBlock Text="Purchase Order No." 
                           Grid.Row="3"
                           FontSize="16" 
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBlock Text="Delivery Note No." 
                           Grid.Row="4"
                           FontSize="16" 
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBlock Text="Shipment No." 
                           Grid.Row="5"
                           FontSize="16" 
                           VerticalAlignment="Center">
                </TextBlock>
                
                <Border Grid.Row="1"
                        Grid.Column="1" 
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding Date, StringFormat='dd-MM-yyyy'}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding JobOrderCode}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
                <Border Grid.Row="3"
                        Grid.Column="1"
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding PurchaseOrderNumber}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
                <Border Grid.Row="4"
                        Grid.Column="1"
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding DeliveryNumber}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
                <Border Grid.Row="5"
                        Grid.Column="1"
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,1">
                    <TextBlock Text="{Binding ShipmentNo}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
            </Grid>

            <StackPanel DataContext="{Binding DeliveryInfromation}" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2cm,7.25cm,0,0">
                <TextBlock Text="   SHIPPING / DELIVER TO " Background="#4f81bd" Foreground="White" Width="7.5cm" FontSize="16" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="M/s " Width="2.5cm" FontSize="16"/>
                    <TextBlock Text=": " FontSize="16"/>
                    <TextBlock Text="{Binding CustomerName}" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Attention " Width="2.5cm" FontSize="16"/>
                    <TextBlock Text=": " FontSize="16"/>
                    <TextBlock Text="{Binding Attention}" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Project Name " Width="2.5cm" FontSize="16"/>
                    <TextBlock Text=": " FontSize="16"/>
                    <TextBlock Text="{Binding ProjectName}" FontSize="16"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" 
                        Margin="2cm,9.75cm,1.5cm,0"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left"
                        >
                <TextBlock Text="DILEVER DETAILS " FontWeight="Bold" HorizontalAlignment="Left" Width="3.5cm" FontSize="16"/>

                <Grid x:Name="DeliveryTable">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23"/>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6cm"/>
                        <ColumnDefinition Width="6cm"/>
                        <ColumnDefinition Width="1.9cm"/>
                        <ColumnDefinition Width="2.8cm"/>
                        <ColumnDefinition Width="2.3cm"/>
                        <ColumnDefinition Width="2.8cm"/>
