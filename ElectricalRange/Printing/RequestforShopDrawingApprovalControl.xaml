                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Text="{Binding PanelsData[9].DrawingCode}" />
                    </Border>
                    <Border Grid.Row="10"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Text="{Binding PanelsData[9].PanelQty}" />
                    </Border>
                    <Border Grid.Row="10"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Text="{Binding PanelsData[9].Revision}" />
                    </Border>

                </Grid>

                <TextBlock Margin="0,0.5cm,0,0"
                           HorizontalAlignment="Left"
                           FontSize="16"
                           Text="If you have any further questions / comments on this subject, please do not hesitate" />
                <TextBlock HorizontalAlignment="Left"
                           FontSize="16"
                           Text="to contact us. We look forward to assist you in the future years." />
                <TextBlock Margin="0,1cm,0,0"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="Thank you for your business!" />

                <Grid Margin="0,40,0,0"
                      HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.8cm" />
                        <RowDefinition Height="1.8cm" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               HorizontalAlignment="Left"
                               FontSize="16"
                               Text="Regards," />
                    <TextBlock Grid.Row="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               FontSize="16"
                               Text="Signature" />

                </Grid>

            </StackPanel>

            <TextBlock Margin="0,0,1.5cm,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       FontSize="10"
                       Text="PJ-F-03/11/2018" />
            <StackPanel Margin="2cm,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           FontSize="10"
                           Text="Page " />
                <TextBlock x:Name="PageView"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           FontSize="10"
                           Text="{Binding Page}" />
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           FontSize="10"
                           Text=" of " />
                <TextBlock x:Name="PagesView"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           FontSize="10"
                           Text="{Binding Pages}" />
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
