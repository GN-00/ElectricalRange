<UserControl x:Class="ProjectsNow.Printing.RequestforShopDrawingApprovalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="21cm"
             Height="29.7cm"
             FontFamily="Calibri (Body)"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid Background="White">
        <Image x:Name="BackgroundImage"
               RenderOptions.BitmapScalingMode="HighQuality"
               Visibility="Collapsed" />

        <Grid Margin="20,20,20,1.5cm">

            <Viewbox Width="10.5cm"
                     Margin="0,3.5cm,0,0"
                     VerticalAlignment="Top">
                <TextBlock FontSize="26"
                           FontStretch="Expanded"
                           FontWeight="Bold"
                           Foreground="#4f81bd"
                           Text="Request for Shop Drawing Approval"
                           TextDecorations="UnderLine" />
            </Viewbox>
            <StackPanel Margin="0,5cm,1.5cm,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        DataContext="{Binding RequestInformation}"
                        Orientation="Vertical">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3cm" />
                        <ColumnDefinition Width="auto"
                                          MinWidth="4.5cm" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.6cm" />
                        <RowDefinition Height="0.6cm" />
                        <RowDefinition Height="0.6cm" />
                        <RowDefinition Height="0.6cm" />
                        <RowDefinition Height="0.6cm" />
                        <RowDefinition Height="0.6cm" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="M/S" />
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,0">
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding CustomerName}" />
                    </Border>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Date" />
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,0">
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding Date, StringFormat='dd/MM/yyyy'}" />
                    </Border>


                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Attention" />
                    <Border Grid.Row="2"
                            Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,0">
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding Attention}" />
                    </Border>

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="P.O.No." />
                    <Border Grid.Row="3"
                            Grid.Column="3"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,0">
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding POs}" />
                    </Border>

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Job Order No." />
                    <Border Grid.Row="4"
                            Grid.Column="4"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,0">
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding JobOrderCode}" />
                    </Border>

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="No.of Drawings" />
                    <Border Grid.Row="5"
                            Grid.Column="5"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,1">
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Text="{Binding DrawingsNo}" />
                    </Border>

                </Grid>


            </StackPanel>

            <StackPanel Width="15cm"
                        Margin="0,9.5cm,0,0"
                        VerticalAlignment="Top"
                        DataContext="{Binding RequestInformation}"
                        Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
