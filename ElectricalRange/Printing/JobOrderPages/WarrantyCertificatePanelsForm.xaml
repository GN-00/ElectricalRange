<p:PageBase x:Class="ProjectsNow.Printing.JobOrderPages.WarrantyCertificatePanelsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:ProjectsNow.Printing" 
             mc:Ignorable="d" 
             FontFamily="Calibri (Body)"
             Height="29.7cm" 
             Width="21cm">
    <Grid Margin="25"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="3.5cm"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="1.5cm"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1"
                   Text="PANEL(S) NAME" 
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Red"
                   Margin="10,0">
        </TextBlock>

        <TextBlock Grid.Row="2"
                   Text="Stamp" 
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="100,0,0,20"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left">
        </TextBlock>

        <TextBlock Margin="20,0"
                   Grid.Row="2"
                   FontSize="14"
                   TextWrapping="Wrap"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right">
                <Run Text="Page"/>
                <Run Text="{Binding PageNumber}"/>
                <Run Text="|"/>
                <Run Text="{Binding TotalPages}"/>
        </TextBlock>

        <Grid Grid.Row="2"
              x:Name="Table"
              Margin="10,0,10,10"
              Height="auto" 
              VerticalAlignment="Top"
              HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="560"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>

                <!--<RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

                <RowDefinition Height="30"/>-->

            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </Grid.Resources>

            <Border BorderThickness="1"
                    Background="{StaticResource Blue}">
                <TextBlock Text="ITEM"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="1"
                    BorderThickness="1"
                    Background="{StaticResource Blue}">
                <TextBlock Text="DESCRIPTION"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="2"
                    BorderThickness="1"
                    Background="{StaticResource Blue}">
                <TextBlock Text="QTY"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</p:PageBase>
