<p:PageBase x:Class="ProjectsNow.Printing.JobOrderPages.WarrantyCertificateForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:ProjectsNow.Printing" 
             mc:Ignorable="d" 
             Height="29.7cm" 
             Width="21cm">
    <Grid Margin="20"
          Background="White">
        <Grid Margin="40,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1"
                  DataContext="{Binding Data}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="WARRANTY CERTIFICATE"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Bottom">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Top">
                    <Run Text="Serial No.:"/>
                    <Run Text="{Binding Code}"/>
                </TextBlock>

                <Image Source="/GN.Base;component/Images/Icons/WARRANTY.png" 
                       Grid.Column="1"
                       Grid.RowSpan="2"
                       Width="150"
                       Height="150"
                       Margin="20,0"
                       HorizontalAlignment="Right"
                       RenderOptions.BitmapScalingMode="HighQuality">
                </Image>
            </Grid>
            <Border Grid.Row="2"
                    BorderBrush="Black"
                    BorderThickness="1"
                    DataContext="{Binding Data}">

                <Grid Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock FontSize="14"
                               VerticalAlignment="Center">
                        <Run Text="Date:"/>
                        <Run Text="{Binding Date, StringFormat=dd-MM-yyyy}"/>
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                           FontSize="14"
                           VerticalAlignment="Center">
                        <Run Text="Job Order No:"/>
                        <Run Text="{Binding JobOrderCode}"/>
                    </TextBlock>
                </Grid>
            </Border>
            <Border Grid.Row="3"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    DataContext="{Binding Data}">

                <Grid Margin="0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="30"/>
                        <RowDefinition MinHeight="30"/>
                        <RowDefinition MinHeight="30"/>
                        <RowDefinition MinHeight="30"/>
                        <RowDefinition MinHeight="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.RowSpan="5" 
                            Margin="0,-10"
                            BorderBrush="Black" 
                            BorderThickness="0,0,1,0">
                    </Border>

                    <TextBlock Text="Customer Information"
                               FontSize="14"
                               Margin="20,0"
                               FontWeight="Bold"
                               TextDecorations="Underline"
                               VerticalAlignment="Center">
                    </TextBlock>

                    <TextBlock Text="Reason"
                               Grid.Column="1"
                               Margin="20,0"
                               FontSize="14"
                               FontWeight="Bold"
                               TextDecorations="Underline"
                               VerticalAlignment="Center">
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center">
                        <Run Text="Company:"/>
                        <Run Text="{Binding Customer}"/>
                    </TextBlock>

                    <TextBlock Grid.Row="2"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center">
                        <Run Text="Location:"/>
                        <Run Text="{Binding Location}"/>
                    </TextBlock> 

                    <TextBlock Grid.Row="3"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center">
                        <Run Text="Contact Person:"/>
                        <Run Text="{Binding Contact}"/>
                    </TextBlock>

                    <TextBlock Grid.Row="4"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center">
                        <Run Text="Project Name:"/>
                        <Run Text="{Binding Project}"/>
                    </TextBlock>

                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Margin="20,0"
                                Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Installation}"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>
                        <TextBlock Text="Installation"
                                   Grid.Column="1"
                                   Margin="10,0"
                                   FontSize="14"
                                   VerticalAlignment="Center">
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                Grid.Column="1"
                                Margin="20,0"
                                Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Delivery}"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>
                        <TextBlock Text="Delivery"
                                   Grid.Column="1"
                                   Margin="10,0"
                                   FontSize="14"
                                   VerticalAlignment="Center">
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="3"
                                Grid.Column="1"
                                Margin="20,0"
                                Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Service}"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>
                        <TextBlock Text="Service"
                                   Grid.Column="1"
                                   Margin="10,0"
                                   FontSize="14"
                                   VerticalAlignment="Center">
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="4"
                                Grid.Column="1"
                                Margin="20,0,20,0"
                                Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Other}"
                                  Style="{StaticResource CheckBoxStyle}">
                        </CheckBox>
                        <TextBlock Grid.Column="1"
                                   Margin="10,0"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center">
                            <Run Text="Other:"/>
                            <Run Text="{Binding OtherInfo}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Row="4"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,1"
                    DataContext="{Binding Data}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center">
                        <Run Text="I,"/>
                        <Run Text="E" Foreground="Red" FontWeight="Bold" TextDecorations="Underline"/><Run Text="lectrical Range-Provision of Control and Power Solutions" FontWeight="Bold" TextDecorations="Underline" Foreground="{StaticResource Blue}"/>
                        <Run Text="hereby declare that the"/>
                        <Run Text="E" FontWeight="Bold" Foreground="Red"/><Run Text="R-PCAPS" FontWeight="Bold" Foreground="{StaticResource Blue}"/>
                        <Run Text="delivered" FontWeight="Bold" Foreground="{StaticResource Blue}"/><Run Text="/installed"/>
                        <Run Text="the"/>
                        <Run Text="unit" FontWeight="Bold" Foreground="{StaticResource Blue}"/><Run Text="/material"/>
                        <Run Text="is free of any damaged and/or defective parts."/>
                        <LineBreak/>
                        <Run Text="Total"/>
                        <Run Text="panel" FontWeight="Bold" Foreground="{StaticResource Blue}"/><Run Text="/unit"/>
                        <Run Text="are" FontWeight="Bold" Foreground="{StaticResource Blue}"/><Run Text="/is"/>
                        <Run Text="{Binding TotalUnitsText}" FontWeight="Bold" Foreground="Red"/>
                        <Run Text="{Binding TotalUnits}" FontWeight="Bold" Foreground="Red"/><Run Text=","/>
                        <Run Text="see attached."/>
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                        <Run Text="Signature: ____________________________________________"/>
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                        <Run Text="Date: _______________________________"/>
                    </TextBlock>

                    <TextBlock Grid.Row="2" 
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center">
                        <Run Text="I,"/>
                        <Run Text="{Binding Customer}" Foreground="Red" FontWeight="Bold" TextDecorations="Underline"/>
                        <Run Text="hereby declare that the"/>
                        <Run Text="E" FontWeight="Bold" Foreground="Red"/><Run Text="R-PCAPS" FontWeight="Bold" Foreground="{StaticResource Blue}"/>
                        <Run Text="function correctly, is undamaged and that I have received and read the"/>
                        <Run Text="E" FontWeight="Bold" Foreground="Red"/><Run Text="R-PCAPS" FontWeight="Bold" Foreground="{StaticResource Blue}"/>
                        <Run Text="user manual."/>
                    </TextBlock>

                    <TextBlock Grid.Row="3"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                        <Run Text="Signature (Customer): _______________________________"/>
                    </TextBlock>

                    <TextBlock Grid.Row="3"
                               Margin="20,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                        <Run Text="Date: _______________________________"/>
                    </TextBlock>
                </Grid>
            </Border>
            <TextBlock Margin="20,0"
                       Grid.Row="5"
                       FontSize="14"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">
                <Run Text="Page"/>
                <Run Text="{Binding PageNumber}"/>
                <Run Text="|"/>
                <Run Text="{Binding TotalPages}"/>
            </TextBlock>
        </Grid>
    </Grid>
</p:PageBase>
