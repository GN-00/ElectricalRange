<b:PageBase x:Class="ProjectsNow.Printing.JobOrderPages.FinalInspectionReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:b="clr-namespace:ProjectsNow.Printing" 
             mc:Ignorable="d" 
             FontFamily="Calibri (Body)"
             Height="29.7cm" 
             Width="21cm">
    <Grid Margin="25"
          Background="White">

        <Grid Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6cm"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="4cm"/>
                <RowDefinition Height="2.5cm"/>
                <RowDefinition Height="6cm"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid VerticalAlignment="Bottom">
                <TextBlock Text="Final Inspection Report"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,40"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left">
                </TextBlock>

                <Image Source="/Images/Icons/QualityControl.png"
                       Height="4cm"
                       Width="4.5cm"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       RenderOptions.BitmapScalingMode="HighQuality">
                </Image>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="0,10"
                  DataContext="{Binding Data}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.ColumnSpan="3"
                      VerticalAlignment="Center" 
                      Background="{StaticResource Blue}">
                    <TextBlock Text="CUSTOMER INFORMATION"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="10,0">
                    </TextBlock>
                </Grid>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Customer Name"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Project Name"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="Inspection Date"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           Text="{Binding Customer}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="2"
                           Text="{Binding Project}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="2"
                           Text="{Binding Date}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>

            </Grid>

            <Grid Grid.Row="2"
                  Margin="0,10"
                  DataContext="{Binding Data}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.ColumnSpan="6"
                      VerticalAlignment="Center" 
                      Background="{StaticResource Blue}">
                    <TextBlock Text="PANEL INFORMATION"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="10,0">
                    </TextBlock>
                </Grid>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Job Order Number"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Panel Name"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="Voltage System"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Text="Rated Current"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="1"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           Text="{Binding JobOrderCode}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="2"
                           Text="{Binding Name}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="2"
                           Text="{Binding Voltage}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="2"
                           Text="{Binding Current}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>




                <TextBlock Grid.Row="1"
                           Grid.Column="3"
                           Text="Enclosure Type"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="3"
                           Text="Installation"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="3"
                           Text="Enclosure IP"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="3"
                           Text="QC Reference"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="4"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="4"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="4"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="4"
                           Text=":"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="5"
                           Text="{Binding Enclosure}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="5"
                           Text="{Binding Installation}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="5"
                           Text="{Binding IP}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="5"
                           Text="{Binding Code}"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>

            </Grid>

            <Grid Grid.Row="3"
                  Margin="0,5"
                  DataContext="{Binding Data}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width=".7*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.ColumnSpan="2" 
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="{StaticResource Blue}">
                    <TextBlock Text="TEST RESULT"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="10,0"
                               VerticalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Column="2" 
                        BorderBrush="Black"
                        BorderThickness="0,1,1,1"
                        Background="{StaticResource Blue}">
                    <TextBlock Text="OK"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Column="3" 
                        BorderBrush="Black"
                        BorderThickness="0,1,1,1"
                        Background="{StaticResource Blue}">
                    <TextBlock Text="NOT OK"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Column="4" 
                        BorderBrush="Black"
                        BorderThickness="0,1,1,1"
                        Background="{StaticResource Blue}">
                    <TextBlock Text="REMARK"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Row="1" 
                        Grid.Column="0" 
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Text="1"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Row="2" 
                        Grid.Column="0" 
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Text="2"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Row="3" 
                        Grid.Column="0" 
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Text="3"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Row="4" 
                        Grid.Column="0" 
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Text="4"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>
                <Border Grid.Row="5" 
                        Grid.Column="0" 
                        BorderBrush="Black"
                        BorderThickness="1,0,1,1">
                    <TextBlock Text="5"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Row="1" 
                        Grid.Column="1" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="Visual Inspection Test"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="2" 
                        Grid.Column="1" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="Di-Electric Test"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="3" 
                        Grid.Column="1" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="Insulation Resistant Test (Megger)"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="4" 
                        Grid.Column="1" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="Mass Continuity Test"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="5" 
                        Grid.Column="1" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="Operation Test"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>

                <Border Grid.Row="1" 
                        Grid.Column="2" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="OK"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding VisualOk}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="2" 
                        Grid.Column="2" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="OK"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DiElectricOk}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="3" 
                        Grid.Column="2" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="OK"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding InsulationOk}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="4" 
                        Grid.Column="2" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="OK"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContinuityOk}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="5" 
                        Grid.Column="2" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="OK"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OperationOk}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>

                <Border Grid.Row="1" 
                        Grid.Column="3" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding VisualNotOk}" Value="True">
                                        <Setter Property="Text" Value="NOT OK"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding VisualNA}" Value="True">
                                        <Setter Property="Text" Value="N/A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="2" 
                        Grid.Column="3" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DiElectricNotOk}" Value="True">
                                        <Setter Property="Text" Value="NOT OK"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DiElectricNA}" Value="True">
                                        <Setter Property="Text" Value="N/A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="3" 
                        Grid.Column="3" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding InsulationNotOk}" Value="True">
                                        <Setter Property="Text" Value="NOT OK"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding InsulationNA}" Value="True">
                                        <Setter Property="Text" Value="N/A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="4" 
                        Grid.Column="3" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContinuityNotOk}" Value="True">
                                        <Setter Property="Text" Value="NOT OK"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ContinuityNA}" Value="True">
                                        <Setter Property="Text" Value="N/A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>
                <Border Grid.Row="5" 
                        Grid.Column="3" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OperationNotOk}" Value="True">
                                        <Setter Property="Text" Value="NOT OK"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding OperationNA}" Value="True">
                                        <Setter Property="Text" Value="N/A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </Border>

                <Border Grid.Row="1" 
                        Grid.Column="4" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding VisualNote}"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="2" 
                        Grid.Column="4" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding DiElectricNote}"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="3" 
                        Grid.Column="4" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding InsulationNote}"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="4" 
                        Grid.Column="4" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding ContinuityNote}"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>
                <Border Grid.Row="5" 
                        Grid.Column="4" 
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1">
                    <TextBlock Text="{Binding OperationNote}"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                    </TextBlock>
                </Border>

            </Grid>

            <Grid Grid.Row="4"
                  DataContext="{Binding Data}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Note:"
                           Height="70"
                           FontSize="16"
                           Grid.RowSpan="2"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Right" Margin="0,12,7,0">
                </TextBlock>

                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Grid.RowSpan="2"
                           Foreground="LightGray"
                           Text="____________________________________________________________________________________________________________________________________________________________________"
                           Height="70"
                           FontSize="16"
                           LineHeight="30"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Grid.RowSpan="2"
                           Text="{Binding Note}"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Height="70"
                           LineHeight="30"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                </TextBlock>

            </Grid>

            <Grid Grid.Row="5"
                  DataContext="{Binding Data}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                        <Run Text="Routine Test Result:"/>
                        <Run Text="{Binding Result}" TextDecorations="Underline">
                            <Run.Style>
                                <Style TargetType="Run">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Result}"  Value="Passed">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Run.Style>
                        </Run>
                    </TextBlock>

                    <TextBlock FontSize="16"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <Run Text="Quality Inspector:"/>
                        <Run Text="__________________________" Foreground="LightGray"/>
                    </TextBlock>
                </Grid>

                <TextBlock Grid.Row="1"
                           FontSize="16"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                    <Run Text="We,"/>
                    <Run Text="{Binding Customer}" FontWeight="Bold" TextDecorations="Underline" Foreground="Red"/>
                    <Run Text="hereby declare that the"/>
                    <Run Text="E" Foreground="Red" FontWeight="Bold"/><Run Text="R-PCAPS" Foreground="{StaticResource Blue}" FontWeight="Bold"/>
                    <Run Text="functions correctly and the above equipment checked and found satisfactory in inspection."/>
                </TextBlock>

                <TextBlock FontSize="16"
                           Grid.Row="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                   <Run Text="Customer Repersentative:"/>
                   <Run Text="__________________________" Foreground="LightGray"/>
