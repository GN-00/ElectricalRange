            <Grid Height="20" 
                  Grid.Row="6"
                  Margin="0,0,50,0"
                  VerticalAlignment="Top" 
                  HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                    <TextBlock Text="Page: " 
                               FontSize="14" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding PageNumber}" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text=" / " FontSize="14"/>
                    <TextBlock Text="{Binding TotalPages}" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
