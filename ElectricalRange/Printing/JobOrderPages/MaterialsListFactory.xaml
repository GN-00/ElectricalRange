<UserControl x:Class="ProjectsNow.Printing.JobOrderPages.MaterialsListFactory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProjectsNow.Printing.JobOrderPages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="29.7cm"
             Height="21cm"
             FontFamily="Times New Roman"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid Margin="20"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="1" />
            </Border>
            <Border Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="2" />
            </Border>
            <Border Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="3" />
            </Border>
            <Border Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="4" />
            </Border>
            <Border Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="5" />
            </Border>
            <Border Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="6" />
            </Border>
            <Border Grid.Column="6"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="7" />
            </Border>
            <Border Grid.Column="7"
                    BorderBrush="Black"
                    BorderThickness="1,1,1,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="8" />
            </Border>
        </Grid>

        <Grid x:Name="ItemsList"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="A" />
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="B" />
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="C" />
                </Border>
                <Border Grid.Row="3"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="D" />
                </Border>
                <Border Grid.Row="4"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="E" />
                </Border>

            </Grid>

            <Border Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="1,0,1,0">
                <TextBlock Height="100"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5"
                           Text="The technical information contained in this documentis exclusive property of (ER-PCAPS) Factory and cannot be used or disclosed to third parties of any kind without its written consent."
                           TextAlignment="Left"
                           TextWrapping="Wrap">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="-90" />
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</UserControl>
