<UserControl x:Class="ProjectsNow.Printing.JobOrderPages.MaterialsListFactory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProjectsNow.Printing.JobOrderPages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="29.7cm"
             Height="21cm"
             FontFamily="Times New Roman"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid Margin="20"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="1" />
            </Border>
            <Border Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="2" />
            </Border>
            <Border Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="3" />
            </Border>
            <Border Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="4" />
            </Border>
            <Border Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="5" />
            </Border>
            <Border Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="6" />
            </Border>
            <Border Grid.Column="6"
                    BorderBrush="Black"
                    BorderThickness="1,1,0,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="7" />
            </Border>
            <Border Grid.Column="7"
                    BorderBrush="Black"
                    BorderThickness="1,1,1,1">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="8" />
            </Border>
        </Grid>

        <Grid x:Name="ItemsList"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="A" />
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="B" />
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="C" />
                </Border>
                <Border Grid.Row="3"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="D" />
                </Border>
                <Border Grid.Row="4"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="E" />
                </Border>
                <Border Grid.Row="5"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,0" />
                <Border Grid.Row="6"
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1,1,1,1" />

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <Border Width="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="0,0,1,0">
                    <TextBlock Margin="5,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12.5"
                               RenderTransformOrigin="0.5,0.5"
                               Text="The technical information contained in this document is exclusive property of (ER-PCAPS) Factory and cannot be used or disclosed to third parties of any kind without its written consent."
                               TextAlignment="Left"
                               TextWrapping="Wrap">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="-90" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Border>

                <Border Grid.Row="1"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="0,1,1,1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="REM." />
                </Border>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <Grid>
                    <ContentPresenter Margin="20"
                                      Content="{Binding DataView}" />
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1">
                        <Image Margin="5"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Source="/Images/Icons/ER.png" />
                    </Border>

                    <Border Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1">
                        <Grid Margin="5,15">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold">
                                <Run FontSize="16"
                                     Text="E" /><Run FontSize="11"
                                     Text="LECTRICAL " />                                <Run FontSize="16"
                                     Text="R" /><Run FontSize="11"
                                     Text="ANGE" />
                            </TextBlock>

                            <TextBlock Grid.Row="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold">
                                <Run FontSize="16"
                                     Text="P" /><Run FontSize="11"
                                     Text="ROVISION OF " />                                <Run FontSize="16"
                                     Text="C" /><Run FontSize="11"
                                     Text="ONTROL" />
                            </TextBlock>

                            <TextBlock Grid.Row="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold">
                                <Run FontSize="11"
                                     Text="AND" />
                                <Run FontSize="16"
                                     Text="P" /><Run FontSize="11"
                                     Text="OWER" />                                <Run FontSize="16"
                                     Text="S" /><Run FontSize="11"
                                     Text="OLUTIONS" />
                            </TextBlock>

                        </Grid>
                    </Border>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,1,1,1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="PROJECT NAME" />
                        </Border>

                        <Border Grid.Row="1"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="CUSTOMER NAME" />
                        </Border>

                        <Border Grid.Row="2"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                            <TextBlock Margin="5,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="PANEL NAME" />
                        </Border>

                        
                        
                        <Border Grid.Row="0"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,1,1,1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="{Binding Project}" />
                        </Border>

                        <Border Grid.Row="1"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="{Binding Customer}" />
                        </Border>

                        <Border Grid.Row="2"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                            <TextBlock Margin="5,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="{Binding Customer}" />
                        </Border>


                    </Grid>



                </Grid>

            </Grid>



        </Grid>
    </Grid>
</UserControl>
