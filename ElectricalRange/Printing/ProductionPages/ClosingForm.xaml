<UserControl x:Class="ProjectsNow.Printing.ProductionPages.CloseForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="21cm"
             Height="29.7cm"
             FontFamily="Times New Roman"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid Margin="20"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="490" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image Grid.RowSpan="10"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="/Images/Vectors/Closing.png" />

        <Grid Grid.Row="0"
              Margin="60,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22"
                       FontWeight="Bold"
                       Text="Production Information Form"
                       TextDecorations="Underline" />
            <Grid Grid.Row="2"
                  VerticalAlignment="Bottom">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="15"
                               FontWeight="Bold"
                               Text="Date: " />
                    <TextBlock FontSize="15"
                               FontWeight="Bold"
                               Text="{Binding Date, StringFormat=dd/MM/yyyy}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="15"
                               FontWeight="Bold"
                               Text="Sheet: " />
                    <TextBlock FontSize="15"
                               FontWeight="Bold"
                               Text="{Binding Page}" />
                    <TextBlock FontSize="15"
                               FontWeight="Bold"
                               Text=" / " />
                    <TextBlock FontSize="15"
                               FontWeight="Bold"
                               Text="{Binding Pages}" />
                </StackPanel>
            </Grid>
            <TextBlock Grid.Row="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       FontSize="15"
                       FontWeight="Bold"
                       Text="Subject: Panel Ready " />
            <TextBlock Grid.Row="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="Please be informed that the mentioned below panels are ready for delivery" />
        </Grid>

        <Grid Grid.Row="1"
              Margin="60,0,60,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6" />
                <RowDefinition Height="35" />
                <RowDefinition Height="37" />
                <RowDefinition Height="37" />
                <RowDefinition Height="37" />
                <RowDefinition Height="37" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="36" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="268" />
                <ColumnDefinition Width="63" />
                <ColumnDefinition Width="63" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1"
                  Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="285" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="From: Production " />

                <TextBlock Grid.Column="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="To: Projects Manager" />

            </Grid>

            <Grid Grid.Row="2"
                  Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="155" />
                    <ColumnDefinition Width="252" />
                    <ColumnDefinition Width="86" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="Customer Name:" />

                <TextBlock Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="J.O. No." />

                <TextBlock Grid.Column="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="{Binding Customer}" />

                <TextBlock Grid.Column="4"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="{Binding JobOrderCode}" />

            </Grid>

            <TextBlock Grid.Row="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="SN" />

            <TextBlock Grid.Row="3"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="PANEL NAME" />

            <TextBlock Grid.Row="3"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="NO" />

            <TextBlock Grid.Row="3"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="QTY" />

            <TextBlock Grid.Row="3"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="REMARKS" />


            <!--  Panel[0]  -->
            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[0].SN}" />
            <TextBlock Grid.Row="4"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[0].Name}" />
            <TextBlock Grid.Row="4"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[0].NO}" />
            <TextBlock Grid.Row="4"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[0].ClosedQty}" />
            <TextBlock Grid.Row="4"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[0].Remark}" />

            <!--  Panel[1]  -->
            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[1].SN}" />
            <TextBlock Grid.Row="5"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[1].Name}" />
            <TextBlock Grid.Row="5"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[1].NO}" />
            <TextBlock Grid.Row="5"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[1].ClosedQty}" />
            <TextBlock Grid.Row="5"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[1].Remark}" />

            <!--  Panel[2]  -->
            <TextBlock Grid.Row="6"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[2].SN}" />
            <TextBlock Grid.Row="6"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[2].Name}" />
            <TextBlock Grid.Row="6"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[2].NO}" />
            <TextBlock Grid.Row="6"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[2].ClosedQty}" />
            <TextBlock Grid.Row="6"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[2].Remark}" />

            <!--  Panel[3]  -->
            <TextBlock Grid.Row="7"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[3].SN}" />
            <TextBlock Grid.Row="7"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[3].Name}" />
            <TextBlock Grid.Row="7"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[3].NO}" />
            <TextBlock Grid.Row="7"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[3].ClosedQty}" />
            <TextBlock Grid.Row="7"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[3].Remark}" />

            <!--  Panel[4]  -->
            <TextBlock Grid.Row="8"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[4].SN}" />
            <TextBlock Grid.Row="8"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[4].Name}" />
            <TextBlock Grid.Row="8"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[4].NO}" />
            <TextBlock Grid.Row="8"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[4].ClosedQty}" />
            <TextBlock Grid.Row="8"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[4].Remark}" />

            <!--  Panel[5]  -->
            <TextBlock Grid.Row="9"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[5].SN}" />
            <TextBlock Grid.Row="9"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[5].Name}" />
            <TextBlock Grid.Row="9"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[5].NO}" />
            <TextBlock Grid.Row="9"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[5].ClosedQty}" />
            <TextBlock Grid.Row="9"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[5].Remark}" />

            <!--  Panel[6]  -->
            <TextBlock Grid.Row="10"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[6].SN}" />
            <TextBlock Grid.Row="10"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[6].Name}" />
            <TextBlock Grid.Row="10"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[6].NO}" />
            <TextBlock Grid.Row="10"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[6].ClosedQty}" />
            <TextBlock Grid.Row="10"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[6].Remark}" />

            <!--  Panel[7]  -->
            <TextBlock Grid.Row="11"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[7].SN}" />
            <TextBlock Grid.Row="11"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[7].Name}" />
            <TextBlock Grid.Row="11"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[7].NO}" />
            <TextBlock Grid.Row="11"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[7].ClosedQty}" />
            <TextBlock Grid.Row="11"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[7].Remark}" />

            <!--  Panel[8]  -->
            <TextBlock Grid.Row="12"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[8].SN}" />
            <TextBlock Grid.Row="12"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[8].Name}" />
            <TextBlock Grid.Row="12"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[8].NO}" />
            <TextBlock Grid.Row="12"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[8].ClosedQty}" />
            <TextBlock Grid.Row="12"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[8].Remark}" />

            <!--  Panel[9]  -->
            <TextBlock Grid.Row="13"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[9].SN}" />
            <TextBlock Grid.Row="13"
                       Grid.Column="1"
                       Margin="10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[9].Name}" />
            <TextBlock Grid.Row="13"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[9].NO}" />
            <TextBlock Grid.Row="13"
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[9].ClosedQty}" />
            <TextBlock Grid.Row="13"
                       Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding Panels[9].Remark}" />


        </Grid>

        <Grid Grid.Row="2"
              Margin="60,0,60,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Production S.V" />
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="________________" />


            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Quality S.V" />
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="____________" />

            <TextBlock Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Projects Engineer" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="_________________" />


            <TextBlock Grid.Row="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Accounts Department" />
            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="____________________" />


            <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Operation Manager " />
            <TextBlock Grid.Row="3"
                       Grid.Column="1"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="_________________" />


            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Grid.ColumnSpan="5"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="12"
                       FontWeight="Bold"
                       Text="R00-F-F-02/Jan2016" />

        </Grid>

    </Grid>
</UserControl>
