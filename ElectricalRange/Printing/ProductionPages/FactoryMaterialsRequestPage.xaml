                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               Text="{Binding RequestCode}" />
                </Border>

            </Grid>

            <Border Grid.Row="3"
                    BorderBrush="Black"
                    BorderThickness="2,2,2,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Text="S/No." />
            </Border>

            <Border Grid.Row="3"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0,2,2,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Text="Reference" />
            </Border>

            <Border Grid.Row="3"
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0,2,2,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Text="Description" />
            </Border>

            <Border Grid.Row="3"
                    Grid.Column="3"
                    BorderBrush="Black"
