                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"
                       FontWeight="Bold"
                       Text="{Binding Panels[5].NO}" />
            <TextBlock Grid.Row="9"
                       Grid.Column="3"
