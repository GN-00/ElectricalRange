                           FontSize="18"
                           FontWeight="Bold"
                           Text="Qty" />
            </Border>

            <Border Grid.Row="3"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0,2,2,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
